<!DOCTYPE html>
<html lang="<%= I18n.locale%>" class="<%= controller_action_css_class%>">
<head>
  <!--页面标题-->
  <%= render :partial => "irm/common/application_title" %>

  <!--加载基础javascript与css-->
  <% require_jscss(:default) %>

  <% require_jscss(:colorbox) %>

  <!--加载ie6基础javascript与css-->
  <% require_jscss(:default_ie6) if ie6? %>

  <!--生成javascript与css 标签-->
  <%=render_required_jscss%>


  <%= csrf_meta_tag %>

  <!--页面中添加的javascript-->
  <% if content_for?(:page_script) %>
    <%=javascript_tag(yield :page_script)%>
  <% end %>


  <%= render :partial => "irm/common/app_session_check" %>
  <%= render :partial => "irm/common/address_bar_logo" %>


</head>
<body id ="body">
    <div class="container-fluid">
      <div class="row-fluid">
        <div>
          <div id="pageContainerHeader" class="page-container-header">
              <table id="navMenu" class="nav-menu" cellpadding="0" cellspacing="0" border="0">
                <tbody>
                  <tr>
                    <td class="page-logo">
                      <%= render :partial => "irm/common/app_top_logo"%>
                    </td>
                    <td class="global-search">

                      <%= render :partial =>"irm/search/box"%>
                    </td>
                    <td class="application-menu">
                      <div>
                        <div></div>
                        <div>
                          <%= current_application_menu %>
                          <span id="settingMenu" class="menu-parent float-right">
                            <div  class="menu-label">
                              <span tabindex="0" style="" id="userNavTop" ><%= Irm::Person.current.name %></span>
                              <div class="menu-label-tr"></div>
                              <div class="menu-label-tl"></div>
                              <div id="settingMenuArrow"></div>
                            </div>
                            <div class="menu-content" >
                                <div class="menu-items-tr"></div>
                                <div class="menu-items-tl"></div>
                                <div class="menu-items-tc"></div>
                                <div class="menu-items">
                                  <%= setting_menu%>
                                  <div class="menu-item"><%= link_to(t(:label_irm_common_logout),logout_url) %></div>
                                </div>
                                <div class="menu-items-br"></div>
                                <div class="menu-items-bl"></div>
                                <div class="menu-items-bc"></div>
                            </div>
                            <script type="text/javascript">
                              $(document).ready(function(){
                                  $("#settingMenu").menubutton();
                              });
                            </script>
                          </span>

                        </div>
                      </div>
                    </td>
                  </tr>
                </tbody>
              </table>
              <table id="tabsNewBar" class="nav-tab-bar" cellpadding="0" cellspacing="0" border="0">
                  <tbody>
                      <tr>
                          <td>
                              <div id="navTab" class="nav-tab">
                                  <div class="nav-tab-left"></div>
                                  <table id="navTabTable" class="nav-tab-table" cellpadding="0" cellspacing="0">
                                      <%= render_bootstrap_tabs %>
                                  </table>
                                  <div class="nav-tab-right"></div>
                              </div>
                          </td>
                      </tr>
                  </tbody>
              </table>
          </div>
        </div>
      </div>
    </div>


    <div class="container-fluid">
      <div class="row-fluid">
        <div>
           <div class="page-body-content-header">
               <div class="left-round"></div>
               <div class="right-round"></div>
           </div>
        </div>
      </div>
      <div class="row-fluid page-body-content">
        <div>
          <table class="body-table">
            <tbody>
              <tr>

                <td class="body-cell">
                  <div class="body-cell-div">
                    <%= yield %>
                  </div>
                </td>
                <td class="sidebar-cell">
                  <div class="sidebar-cell-div">
                    <%= render :partial =>"/common/quick_create"%>
                    <%if has_content?(:sidebar) %>
                        <%=yield :sidebar %>
                    <%end%>
                  </div>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="row-fluid">
        <div>
           <div class="page-body-content-footer">
               <div class="left-round"></div>
               <div class="right-round"></div>
           </div>
        </div>
      </div>
    </div>

    <div class="container-fluid page-body-footer">
      <div class="row-fluid">
        <div>
          <%= render :partial => "/irm/common/footer"%>
        </div>
      </div>
    </div>

</body>
</html>