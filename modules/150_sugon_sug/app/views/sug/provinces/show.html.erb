<%= setting_show_title %>

<!--页面结构-->
<div class="show-block">
  <table class="page-block-header"><tr>
    <td class="page-block-title">
      <h2 class="block-title"><%=t(:label_sug_province)%></h2>
    </td>
    <td class="page-block-button">
      <%= link_to t(:edit), {:controller => "sug/provinces", :action => "edit", :id => @province},:class=>"btn btn-primary"%>
      <%= link_to t(:back), {:controller => "sug/countries",:action => "show", :id => @province.country_id},:class=>"btn" %>
    </td>
  </tr></table>
  <div class="page-block-body">
    <table class="show-table">
      <tbody>
      <tr>
        <td class="label-col"><label><%=(t :name)%></label></td>
        <td class="data-col"><%= @province.name %></td>
        <td class="label-col"></td>
        <td class="data-col"></td>
      </tr>
      <tr>
        <td class="label-col"><label><%=(t :description)%></label></td>
        <td class="data-col"><%=@province.description %></td>
        <td class="label-col"></td>
        <td class="data-col"></td>
      </tr>
      </tbody>
    </table>
  </div>
</div>

<!--页面结构-->
<div class="page-block">
  <table class="page-block-header">
    <tr>
      <td class="page-block-title">
        <h2 class="block-title"><%= t(:label_sug_city_list) %></h2>
      </td>
      <td class="page-block-button">
        <%= link_to t(:new), {:controller=>"sug/cities",:action => "new",:province_id => @province.id },:class=>"btn btn-primary"%>
      </td>
    </tr>
  </table>
  <div class="page-block-body">
    <%= datatable("sug_cities",{:controller=>"sug/cities",:action=>"get_data", :province_id => @province.id },[],{:search_box=>"searchBox",:paginator_box=>"paginatorBox" }) %>
  </div>
</div>