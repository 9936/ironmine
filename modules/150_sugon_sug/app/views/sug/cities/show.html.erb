<%= setting_show_title %>

<!--页面结构-->
<div class="show-block">
  <table class="page-block-header"><tr>
    <td class="page-block-title">
      <h2 class="block-title"><%=t(:label_sug_city)%></h2>
    </td>
    <td class="page-block-button">
      <%= link_to t(:edit), {:controller => "sug/cities", :action => "edit", :id => @city},:class=>"btn btn-primary"%>
      <%= link_to t(:back), {:controller => "sug/provinces",:action => "show", :id => @city.province_id, :country_id => @city.province_id},:class=>"btn" %>
    </td>
  </tr></table>
  <div class="page-block-body">
    <table class="show-table">
      <tbody>
      <tr>
        <td class="label-col"><label><%=(t :name)%></label></td>
        <td class="data-col"><%= @city.name %></td>
        <td class="label-col"></td>
        <td class="data-col"></td>
      </tr>
      <tr>
        <td class="label-col"><label><%=(t :description)%></label></td>
        <td class="data-col"><%=@city.description %></td>
        <td class="label-col"></td>
        <td class="data-col"></td>
      </tr>
      </tbody>
    </table>
  </div>
</div>

<!--页面结构-->
<div class="page-block">
  <table class="page-block-header">
    <tr>
      <td class="page-block-title">
        <h2 class="block-title"><%= t(:label_sug_district_list) %></h2>
      </td>
      <td class="page-block-button">
        <%= link_to t(:new), {:controller=>"sug/districts",:action => "new",:city_id => @city.id },:class=>"btn btn-primary"%>
      </td>
    </tr>
  </table>
  <div class="page-block-body">
    <%= datatable("sug_district",{:controller=>"sug/districts",:action=>"get_data", :city_id => @city.id },[],{:search_box=>"searchBox",:paginator_box=>"paginatorBox" }) %>
  </div>
</div>