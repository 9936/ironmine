<%= setting_show_title %>

<!--页面结构-->
<div class="show-block">
  <table class="page-block-header"><tr>
    <td class="page-block-title">
      <h2 class="block-title"><%=t(:label_sug_country)%></h2>
    </td>
    <td class="page-block-button">
      <%= link_to t(:edit), {:action => "edit", :id => @country},:class=>"btn btn-primary"%>
      <%= link_to t(:back), {:action => "index"},:class=>"btn" %>
    </td>
  </tr></table>
  <div class="page-block-body">
    <table class="show-table">
      <tbody>
      <tr>
        <td class="label-col"><label><%=(t :name)%></label></td>
        <td class="data-col"><%= @country.name %></td>
        <td class="label-col"></td>
        <td class="data-col"></td>
      </tr>
      <tr>
        <td class="label-col"><label><%=(t :description)%></label></td>
        <td class="data-col"><%=@country.description %></td>
        <td class="label-col"></td>
        <td class="data-col"></td>
      </tr>
      </tbody>
    </table>
  </div>
</div>

<!--页面结构-->
<div class="page-block">
  <table class="page-block-header">
    <tr>
      <td class="page-block-title">
        <h2 class="block-title"><%= t(:label_sug_province_list) %></h2>
      </td>
      <td class="page-block-button">
        <%= link_to t(:new), {:controller=>"sug/provinces",:action => "new",:country_id => @country.id },:class=>"btn btn-primary"%>
      </td>
    </tr>
  </table>
  <div class="page-block-body">
    <%= datatable("sug_provinces",{:controller=>"sug/provinces",:action=>"get_data", :country_id => @country.id},[],{:search_box=>"searchBox",:paginator_box=>"paginatorBox" }) %>
  </div>
</div>