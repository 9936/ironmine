<%=datatable_view({:count=>@count,:datas=>@datas}) do |builder|%>
    <% builder.column(:id,{:title=>t(:operation), :width => "80px"}) do |data|%>
      <%= link_to(t(:edit),{:controller => "skm/file_managements", :action => "edit", :id => data[:id]}) %>&nbsp;
      <%= link_to(t(:remove),{:controller => "skm/file_managements", :action=>"destroy",:id=> data[:id]},:confirm => t(:label_are_you_sure)) %>
    <% end %>
    <% builder.column(:data_file_name,{:title=>t(:label_skm_file_name),:searchable => true,:width=>"300px"}) do |data| %>
      <%= link_to(data[:data_file_name],{:controller => "skm/file_managements", :action => "show",:id=>data[:id], :version_id => data[:version_id],:data_file_name=> data[:data_file_name]}) %>
    <% end %>
    <% builder.column(:category_name,{:title=>t(:label_skm_file_category), :width => "60px"})%>
    <% builder.column(:description,{:title=>t(:description),:searchable => true})%>
    <% builder.column(:data_file_size,{:title=>t(:label_skm_file_size), :width => "100px"})%>
    <% builder.column(:data_updated_at,{:title=>t(:label_skm_file_data_updated_at),:width=>"130px"})%>
<% end %>
