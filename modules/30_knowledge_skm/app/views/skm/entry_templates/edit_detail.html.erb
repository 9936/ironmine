<%= app_title %>

<%= form_for(@detail,:url=>{:action=>"update_detail", :detail_id => @detail.id},:builder => CustomFormBuilder) do |f| %>
  <% content_for :form_block_common   do%>
    <table class="form-table">
      <tbody>
          <tr>
            <td class="label-col"><label><%=(t :label_skm_entry_template_element_name)%></label></td>
            <td class="data-2col"><label><%= @element.name%></label></td>
          </tr>
          <tr>
            <td class="label-col"><label><%=(t :label_skm_entry_template_element_rows)%></label></td>
            <td class="data-2col"><%=f.text_field :default_rows,:irm_number_only => true, :required=>true%></td>
          </tr>
          <tr>
            <td class="label-col"><label><%=t(:label_skm_entry_template_element_required)%></label></td>
            <td class="data-2col"><%= f.check_box :required_flag%></td>
          </tr>
      </tbody>
    </table>
  <% end %>
  <% content_for :form_buttons  do %>
    <%= link_submit t(:save),{:class=>"btn btn-primary"}%>
    <%= link_back(t(:back),{:action=>"index"}, :class => "btn")%>
  <% end %>

  <!--页面结构-->
  <div class="page-block">
    <table class="page-block-header">
      <tr>
        <td class="page-block-title">
          <h2 class="block-title"><%=t(:label_skm_entry_template_detail_edit)%></h2>
        </td>
        <td class="page-block-button">
          <%= content_for :form_buttons   %>
        </td>
      </tr>
    </table>
    <%= error_for @detail %>
    <div class="page-block-body">
      <div class="sub-page-block">
        <!-- 一般信息 -->
        <div class="sub-page-block-header">
          <%= form_require_info %>
          <h3 class="sub-page-block-title"><%=t(:label_common_info)%></h3>
        </div>
        <div class="sub-page-block-body">
          <%= content_for :form_block_common   %>
        </div>
      </div>
    </div>
    <table class="page-block-footer">
      <tr>
        <td class="page-block-title"></td>
        <td class="page-block-button">
          <%= content_for :form_buttons   %>
        </td>
      </tr>
    </table>
  </div>
<% end %>
