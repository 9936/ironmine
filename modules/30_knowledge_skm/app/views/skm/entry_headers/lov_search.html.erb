<style type="text/css">
    form.form-search {margin-bottom: 0;}
    form.well {padding: 10px;}
</style>
<body style="padding:5px;">
<%= form_tag({:action=>"lov_result",:lov_params=>params[:lov_params]},{:id=>"theForm",:class=>"well form-search form-inline",:nomask=>"true",:method=>:get,:target=>"resultsFrame",:name=>"theForm"}) do %>
    <%= hidden_params_field(:lkfm) %>
    <%= hidden_params_field(:lkfid) %>
    <%= hidden_params_field(:lkvfid) %>
    <%= hidden_params_field(:lktp) %>
    <%= hidden_field_tag(:page) %>
    <%= hidden_params_field(:lov_params) %>
    <label><%= t(:label_skm_entry_header_lov_channel) %>:</label>
    <%= blank_select_tag("channel_id", current_available_channels) %>
    <input type="text" class="input-medium search-query" id="lksrch"  placeholder="<%= t(:search) %>" maxlength="80" name="lksrch" size="20" value="<%=params[:lksrch]%>">
    <button type="submit" class="btn" name="go" title="<%= I18n.t(:label_irm_list_of_value_go)%>"><%= I18n.t(:label_irm_list_of_value_go)%></button>
    <span class="help-block"><%= I18n.t(:label_irm_list_of_value_use_percentages)%></span>
<% end %>
<script type="text/javascript">
  $(function(){
       $("#channel_id").change(function(){
           $("#page").val(1);
       });
  });
</script>
</body>