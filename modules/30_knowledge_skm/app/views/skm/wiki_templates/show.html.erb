<%= common_title %>
<% require_jscss(:gollum) %>

<!--页面结构-->
<div class="show-block">
  <table class="page-block-header">
    <tr>
      <td class="page-block-title">
        <h2 class="block-title"><%= t(:label_skm_wiki_template) %></h2>
      </td>
      <td class="page-block-button">
        <%= link_to t(:edit), {:action => "edit", :id => @wiki_template}, :class => "btn" %>
        <%= link_to t(:back), {:action => "index"}, :class => "btn" %>
      </td>
    </tr>
  </table>
  <div class="page-block-body">
    <table class="show-table">
      <tbody>
      <tr>
        <td class="label-col"><label><%= t(:label_skm_wiki_template_name) %></label></td>
        <td class="data-col">
          <div><%= @wiki_template.name %></div>
        </td>
        <td class="label-col empty">
          <div>&nbsp;</div>
        </td>
        <td class="data-col empty">
          <div>&nbsp;</div>
        </td>
      </tr>
      <tr>
        <td class="label-col"><label><%= t(:label_skm_wiki_template_description) %></label></td>
        <td class="data-col">
          <div><%= @wiki_template.description %></div>
        </td>
        <td class="label-col empty">
          <div>&nbsp;</div>
        </td>
        <td class="data-col empty">
          <div>&nbsp;</div>
        </td>
      </tr>
      <tr>
        <td class="label-col"><label><%= t(:label_skm_wiki_template_private_flag) %></label></td>
        <td class="data-col">
          <div><%= check_img(@wiki_template.private_flag) %></div>
        </td>
        <td class="label-col empty">
          <div>&nbsp;</div>
        </td>
        <td class="data-col empty">
          <div>&nbsp;</div>
        </td>
      </tr>
      <tr>
        <td class="data-4col" colspan="4">
          <div class="markdown-body">
            <h1><%= @wiki_template.name %></h1>
            <%= raw @preview.formatted_data %>
          </div>
        </td>
        <td class="label-col empty">
          <div>&nbsp;</div>
        </td>
        <td class="data-col empty">
          <div>&nbsp;</div>
        </td>
      </tr>


      </tbody>
    </table>
  </div>
</div>
