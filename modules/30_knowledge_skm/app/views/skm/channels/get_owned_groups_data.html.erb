<%=datatable_view({:count=>@count,:datas=>@datas}) do |builder|%>
  <% builder.column(:id,{:title=>t(:operation), :width => "30px"}) do |data|%>
        <%= bootstrap_icons("icon-trash", t(:remove), {:controller=>"skm/channels",:action=>"remove_group",:group_id=>data[:id],:channel_id=>@channel_id},:confirm => t(:label_are_you_sure) ,:method => :delete) %>
  <% end %>
  <% builder.column(:code,{:title=>t(:label_irm_group_group_code),:searchable=>true})%>
  <% builder.column(:name,{:title=>t(:label_irm_group_name),:searchable=>true})%>
  <% builder.column(:description,{:title=>t(:label_irm_group_description)})%>
<% end %>
