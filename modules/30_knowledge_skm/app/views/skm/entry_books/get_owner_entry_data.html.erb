<%=datatable_view({:count=>@count,:datas=>@datas}) do |builder|%>
    <% builder.column(:id,{:title=>t(:operation), :width => "40px"}) do |data|%>
      <%= link_to(t(:remove),{:controller => "skm/entry_books", :action=>"remove_entry",:id=> @book_id, :entry_header_id => data[:entry_header_id],:_dom_id=>"entryBook"},:remote => true, :class => "action-link",:confirm => t(:label_are_you_sure) ,:method => :delete) %>
    <% end %>
    <% builder.column(:entry_title,{:title=>t(:label_skm_entry_header_title)}) do |data|%>
      <% title =  link_to(data[:entry_title], {:controller => "skm/entry_headers", :action => "show", :id => data[:entry_header_id]})%>
      <% if data[:type_code].eql?('VIDEO') %>
        <%= get_img_icon("video") + title %>
      <% else %>
        <%= title %>
      <% end %>
    <% end %>
    <% builder.column(:published_date,{:title=>t(:label_skm_entry_header_published_date),:width=>"180px"})%>
    <% builder.column(:entry_created_at,{:title=>t(:created_at),:width=>"150px"})%>
    <% builder.column(:entry_updated_at,{:title=>t(:updated_at),:width=>"150px"})%>
    <% builder.column(:doc_number,{:title=>t(:label_skm_entry_header_doc_number)}) %>
<% end %>