<%=datatable_view({:count=>@count,:datas=>@datas}) do |builder|%>
    <% builder.column(:id,{:title=>t(:operation), :width => "80px"}) do |data|%>
        <%= link_to(t(:edit),{:action=>"edit",:id=>data[:id]},{:class => "action-link"}) %>&nbsp;|
        <%= link_to(t(:show),{:action=>"show",:id=>data[:id]},{:class => "action-link"}) %>
    <% end %>
    <% builder.column(:cNo,{:title=>"工号",:searchable=>true, :width => "130px"})  %>
    <% builder.column(:cName,{:title=>"姓名",:searchable=>true,:width => "130px"}) %>
    <% builder.column(:cType,{:title=>"顾问类型",:searchable=>false, :width => "130px"}) %>
    <% builder.column(:cTel,{:title=>"手机", :searchable=>false, :width => "150px"}) %>
    <% builder.column(:cMail,{:title=>"邮箱", :searchable=>true, :width => "130px"}) %>
    <% builder.column(:cComment,{:title=>"备注", :width => "150px",:sortable=>true}) %>
<% end %>