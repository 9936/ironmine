<%= form_for(@phase_template,:url=>{:action=>"update"},:builder => CustomFormBuilder,:html => { :multipart => true }) do |f| %>

  <%= hidden_field_tag :return_url,@return_url %>

  <% content_for :phase_template do %>
    <table class="form-table">
      <tbody>
      <tr>
        <td class="label-col"><label>Name</label></td>
        <td class="data-col">
          <%= f.text_field :name, :required=>true%>
        </td>
      </tr>
      <tr>
        <td class="label-col"><label>Description</label></td>
        <td class="data-col" colspan="3">
          <%= f.text_area :description, :style => "width:100%", :rows => "5", :cols=>"200"%>
        </td>
      </tr>
      <tr>
        <td class="label-col"><label>Owner1 Label</label></td>
        <td class="data-col">
          <%= f.text_field :owner_1_label%>
        </td>
        <td class="label-col"><label>Owner2 Label</label></td>
        <td class="data-col">
          <%= f.text_field :owner_2_label%>
        </td>
      </tr>
      <tr>
        <td class="label-col"><label>Owner3 Label</label></td>
        <td class="data-col">
          <%= f.text_field :owner_3_label%>
        </td>
        <td class="label-col"><label>Owner4 Label</label></td>
        <td class="data-col">
          <%= f.text_field :owner_4_label%>
        </td>
      </tr>
      <tr>
        <td class="label-col"><label>Owner5 Label</label></td>
        <td class="data-col">
          <%= f.text_field :owner_5_label%>
        </td>
        <td class="label-col"><label>Owner6 Label</label></td>
        <td class="data-col">
          <%= f.text_field :owner_6_label%>
        </td>
      </tr>
      <tr>
        <td class="label-col"><label>Status Label</label></td>
        <td class="data-col">
          <%= f.text_field :status_label%>
        </td>
      </tr>
      <tr>
        <td class="label-col"><label>Plan Start Label</label></td>
        <td class="data-col">
          <%= f.text_field :plan_start_label%>
        </td>
        <td class="label-col"><label>Plan End Label</label></td>
        <td class="data-col">
          <%= f.text_field :plan_end_label%>
        </td>
      </tr>
      <tr>
        <td class="label-col"><label>Real Start Label</label></td>
        <td class="data-col">
          <%= f.text_field :real_start_label%>
        </td>
        <td class="label-col"><label>Plan End Label</label></td>
        <td class="data-col">
          <%= f.text_field :real_end_label%>
        </td>
      </tr>
      </tbody>
    </table>
  <% end%>

  <!--页面结构-->
  <div class="page-block">
    <table class="page-block-header"><tr>
      <td class="page-block-title">
        <h2 class="block-title">Edit Phase Template</h2>
      </td>
      <td class="page-block-button">
        <%= link_submit t(:save),{:class=>"btn btn-primary"}%>
        <% if @return_url%>
          <%= link_to t(:cancel), @return_url,{:class=>"btn cancel"}%>
        <% else %>
          <%= link_back t(:cancel),{},{:class=>"btn cancel"}%>
        <% end %>
      </td>
    </tr></table>
    <%= error_for @phase_template %>
    <div class="page-block-body">
      <div class="sub-page-block">
        <div class="sub-page-block-header">
          <h3 class="sub-page-block-title">Template Info.</h3>
          <span class="required-help-info"> = <%=t(:label_is_required)%></span>
        </div>
        <div class="sub-page-block-body">
          <%= content_for :phase_template %>
        </div>
      </div>

    </div>

    <table class="page-block-footer"><tr>
      <td class="page-block-title">
      </td>
      <td class="page-block-button">
        <%= link_submit t(:save),{:class=>"btn btn-primary"}%>
        <% if @return_url%>
          <%= link_to t(:cancel), @return_url,{:class=>"btn cancel"}%>
        <% else %>
          <%= link_back t(:cancel),{},{:class=>"btn cancel"}%>
        <% end %>
      </td>
    </tr></table>
  </div>

<% end %>