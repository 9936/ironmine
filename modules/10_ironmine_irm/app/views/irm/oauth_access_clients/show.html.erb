<%= page_title %>
<!--页面结构-->
<div class="show-block">
  <table class="page-block-header"><tr>
    <td class="page-block-title">
      <h2 class="block-title"><%= t(:label_irm_oauth_access_client) %></h2>
    </td>
    <td class="page-block-button">
      <%= link_to t(:edit), {:action => "edit", :id => @oauth_access_client},:class=>"btn btn-primary"%>
      <%= link_to t(:back), {:action => "index"},:class=>"btn" %>
    </td>
  </tr></table>
  <div class="page-block-body">
    <table class="show-table">
      <tbody>
      <tr>
        <td class="label-col"><label><%=(t :code)%></label></td>
        <td class="data-col"><%=@oauth_access_client.code%></td>
        <td class="label-col empty">&nbsp;</td>
        <td class="data-col empty">&nbsp;</td>
      </tr>
      <tr>
        <td class="label-col"><label><%=(t :name)%></label></td>
        <td class="data-col"><%=@oauth_access_client.name%></td>
        <td class="label-col empty">&nbsp;</td>
        <td class="data-col empty">&nbsp;</td>
      </tr>
      <tr>
        <td class="label-col"><label><%=(t :description)%></label></td>
        <td class="data-col" colspan="4" style="width:82%"><%=@oauth_access_client.description%></td>
      </tr>
      <tr>
        <td class="label-col"><label><%=(t :label_irm_oauth_access_client_site_image_url)%></label></td>
        <td class="data-col"><%= @oauth_access_client.site_image_url%></td>
        <td class="label-col empty">&nbsp;</td>
        <td class="data-col empty">&nbsp;</td>
      </tr>
      <tr>
        <td class="label-col"><label><%=(t :label_irm_oauth_access_client_site_url)%></label></td>
        <td class="data-col"><%= @oauth_access_client.site_url%></td>
        <td class="label-col empty">&nbsp;</td>
        <td class="data-col empty">&nbsp;</td>
      </tr>
      <tr>
        <td class="label-col"><label><%=(t :label_irm_oauth_access_client_callback_url)%></label></td>
        <td class="data-col"><%= @oauth_access_client.callback_url%></td>
        <td class="label-col empty">&nbsp;</td>
        <td class="data-col empty">&nbsp;</td>
      </tr>
      <tr>
        <td class="label-col"><label><%=(t :label_irm_oauth_access_client_token)%></label></td>
        <td class="data-col"><%=@oauth_access_client.token%></td>
        <td class="label-col empty">&nbsp;</td>
        <td class="data-col empty">&nbsp;</td>
      </tr>
      <tr>
        <td class="label-col"><label><%=(t :label_irm_oauth_access_client_secret)%></label></td>
        <td class="data-col"><%=@oauth_access_client.secret%></td>
        <td class="label-col empty">&nbsp;</td>
        <td class="data-col empty">&nbsp;</td>
      </tr>
      </tbody>
    </table>
  </div>
</div>
