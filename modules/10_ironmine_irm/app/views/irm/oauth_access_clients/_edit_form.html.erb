<%= form_for(@oauth_access_client,:url=>{:action=>"update"},:builder => CustomFormBuilder) do |f| %>
    <% content_for :form_block_a   do%>
        <table class="form-table">
          <tbody>
          <tr>
            <td class="label-col"><label><%=(t :code)%></label></td>
            <td class="data-col"><label><%= @oauth_access_client.code %></label></td>
            <td class="label-col empty">&nbsp;</td>
            <td class="data-col empty">&nbsp;</td>
          </tr>
          <tr>
            <td class="label-col"><label><%=(t :name)%></label></td>
            <td class="data-col"><%=f.text_field :name, :required=>true%></td>
            <td class="label-col empty">&nbsp;</td>
            <td class="data-col empty">&nbsp;</td>
          </tr>
          <tr>
            <td class="label-col"><label><%=(t :label_irm_oauth_access_client_ip)%></label></td>
            <td class="data-col"><%= f.text_field :ip %></td>
            <td class="label-col empty">&nbsp;</td>
            <td class="data-col empty">&nbsp;</td>
          </tr>
          <% if Irm::Person.current.admin? %>
          <tr>
            <td class="label-col"><label><%=t(:label_irm_oauth_access_client_inside_flag)%></label></td>
            <td class="data-col"><%= f.check_box :inside_flag %></td>
            <td class="label-col empty">&nbsp;</td>
            <td class="data-col empty">&nbsp;</td>
          </tr>
          <% end %>
          <tr>
            <td class="label-col"><label><%=(t :label_irm_oauth_access_client_site_url)%></label></td>
            <td class="data-col"><%= f.text_field :site_url,:required=>true%></td>
            <td class="label-col empty">&nbsp;</td>
            <td class="data-col empty">&nbsp;</td>
          </tr>
          <tr>
            <td class="label-col"><label><%=(t :label_irm_oauth_access_client_callback_url)%></label></td>
            <td class="data-col"><%= f.text_field :callback_url,:required=>true%></td>
            <td class="label-col empty">&nbsp;</td>
            <td class="data-col empty">&nbsp;</td>
          </tr>
          <tr>
            <td class="label-col"><label><%=(t :label_irm_oauth_access_client_site_image_url)%></label></td>
            <td class="data-col"><%= f.text_field :site_image_url%></td>
            <td class="label-col empty">&nbsp;</td>
            <td class="data-col empty">&nbsp;</td>
          </tr>
          <tr>
            <td class="label-col"><label><%=(t :description)%></label></td>
            <td class="data-col" colspan="4"><%=f.text_area :description, :rows => 4, :class => "input-xlarge" %></td>
          </tr>
          </tbody>
        </table>
    <% end %>
    <% content_for :form_buttons  do %>
        <%= link_submit t(:save),{:class=>"btn btn-primary"}%>
        <%= link_back t(:cancel),{},{:class=>"btn cancel"}%>
    <% end %>


    <!--页面结构-->
    <div class="page-block">
      <table class="page-block-header"><tr>
        <td class="page-block-title">
          <h2 class="block-title"><%=t(:label_irm_oauth_access_client)%></h2>
        </td>
        <td class="page-block-button">
          <%= content_for :form_buttons   %>
        </td>
      </tr></table>
      <%= error_for @oauth_access_client %>
      <div class="page-block-body">
        <div class="sub-page-block">
          <div class="sub-page-block-header">
            <%= form_require_info %>
            <h3 class="sub-page-block-title"><%= t(:label_common_info) %></h3>
          </div>
          <div class="sub-page-block-body">
            <%= content_for :form_block_a   %>
          </div>
        </div>
      </div>
      <table class="page-block-footer"><tr>
        <td class="page-block-title">
        </td>
        <td class="page-block-button">
          <%= content_for :form_buttons   %>
        </td>
      </tr></table>
    </div>

<% end %>
