<%=datatable_view({:count=>@count,:datas=>@datas}) do |builder|%>
  <% builder.column(:id,{:title=>t(:operation), :width => "90px"}) do |data|%>
    <%= link_to(t(:edit),{:action=>"edit",:id=>data[:id]},{:class => "action-link"}) %>&nbsp;|&nbsp;<%= link_to(t(:show),{:action=>"show",:id=>data[:id]},{:class => "action-link"}) %>
  <% end %>
  <% builder.column(:code,{:title=>t(:label_irm_menu_menu_code), :width => "20%"})%>
  <% builder.column(:name,{:title=>t(:label_irm_menu_name), :width => "25%"})%>
  <% builder.column(:description,{:title=>t(:label_irm_menu_description)})%>
  <% builder.column(:status_code,{:title=>t(:active)})%>
<% end %>
