<%=datatable_view({:count=>@count,:datas=>@datas}) do |builder|%>
  <% builder.column(:id,{:title=>t(:operation), :width => "90px"}) do |data|%>
    <%= link_to(t(:edit),{:action=>"edit",:id=>data[:id]},{:class => "action-link"}) %>&nbsp;|&nbsp;<%= link_to(t(:show),{:action=>"show",:id=>data[:id]},{:class => "action-link"}) %>
  <% end %>
  <% builder.column(:code,{:title=>t(:label_irm_tab_code),:searchable=>true})%>
  <% builder.column(:name,{:title=>t(:label_irm_tab_name),:searchable=>true})%>
  <% builder.column(:description,{:title=>t(:label_irm_tab_description),:searchable=>true})%>
  <% builder.column(:function_group_name,{:title=>t(:label_irm_tab_function_group)})%>
  <% builder.column(:business_object_name,{:title=>t(:label_irm_tab_business_object)})%>
<% end %>
