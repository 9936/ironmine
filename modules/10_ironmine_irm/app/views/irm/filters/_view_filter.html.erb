<div id="<%= datatable_id %>ViewFilterOverview" style="display:none" class="form-inline btn-toolbar">
    <label for="<%= datatable_id %>ViewFilter" class="control-label"><%= t(:irm_view_filter) %></label>
    <%= available_view_filter(source_code, datatable_id)%>
    <span class="help-inline">
      <% if has_filters?(source_code) %>
        <%= link_to(t(:edit),{:controller => "irm/filters", :action=>"edit",:id=>"{id}",:pca=>"#{params[:controller]}-#{params[:action]}-#{back_url}",:back_url=>back_url},{:class=>"edit-link",:id=>"#{datatable_id}ViewFilterEditLink"}) %>&nbsp;|
        <%= link_to(t(:show),{:controller => "irm/filters", :action=>"show",:id=>"{id}",:pca=>"#{params[:controller]}-#{params[:action]}-#{back_url}",:back_url=>back_url},{:class=>"show-link",:id=>"#{datatable_id}ViewFilterEditLink"}) %>&nbsp;|
      <% end %>
      <%= link_to(t(:label_irm_new_view_filter),{:controller => "irm/filters", :action=>"new",:sc=>source_code,:bc=>bo_code,:pca=>"#{params[:controller]}-#{params[:action]}-#{back_url}",:back_url=>back_url}) %>
    </span>
</div>