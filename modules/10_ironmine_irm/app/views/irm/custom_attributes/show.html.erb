<%= common_title %>
<!--页面结构-->
<div class="show-block">
  <table class="page-block-header"><tr>
    <td class="page-block-title">
      <h2 class="block-title"><%= @object_attribute.attribute_type_name %>:<%= @object_attribute.attribute_name %></h2>
    </td>
    <td class="page-block-button">
      <%= link_to t(:back), {:action=>"index"},:class=>"btn"%>
    </td>
  </tr></table>
  <div class="page-block-body">
    <table class="show-table">
      <tbody>
      <tr>
        <td class="label-col"><label for="object_attribute_name"><%=t(:label_irm_object_attribute_name)%></label></td>
        <td class="data-col">
          <%=@object_attribute[:name]%>
        </td>
        <td class="label-col empty">&nbsp;</td>
        <td class="data-col empty">&nbsp;</td>
      </tr>
      <tr>
        <td class="label-col"><label for="object_attribute_category"><%=t(:label_irm_object_attribute_category)%></label></td>
        <td class="data-col">
          <%=@object_attribute[:category_name]%>
        </td>
        <td class="label-col empty">&nbsp;</td>
        <td class="data-col empty">&nbsp;</td>
      </tr>
      <tr>
        <td class="label-col"><label for="object_attribute_attribute_name"><%=t(:label_irm_object_attribute_attribute_name)%></label></td>
        <td class="data-col"><%=@object_attribute.attribute_name%></td>
        <td class="label-col empty">&nbsp;</td>
        <td class="data-col empty">&nbsp;</td>
      </tr>
      <tr>
        <td class="label-col"><label for="object_attribute_description"><%=t(:label_irm_object_attribute_description)%></label></td>
        <td class="data-col" colspan="3"><%=@object_attribute[:description]%></td>
      </tr>

      <% if @object_attribute.category.present?&&["PICK_LIST", "PICK_LIST_MULTI"].include?(@object_attribute.category) %>
          <tr>
            <td class="label-col">
              <label for="object_attribute_pick_list_options"><%= t(:label_irm_object_attribute_pick_list_options) %></label>
            </td>
            <td class="data-col"><pre><%=@object_attribute.pick_list_options%></pre></td>
            <td class="label-col empty">&nbsp;</td>
            <td class="data-col empty">&nbsp;</td>
          </tr>
      <% end %>
      <tr>
        <td class="label-col">
          <label for="object_attribute_data_default_value"><%= t(:label_irm_object_attribute_data_default_value) %></label>
        </td>
        <td class="data-3col" colspan="3">
          <%=@object_attribute.data_default_value%>
        </td>
      </tr>
      <% if @object_attribute.category.present?&&["TEXT","NUMBER"].include?(@object_attribute.category) %>
          <tr>
            <td class="label-col"><label for="object_attribute_data_min_and_max_length"><%=t(:label_irm_object_attribute_data_min_and_max_length)%></label></td>
            <td class="data-3col" colspan="3">
              <%= @object_attribute.min_length %> &nbsp; ~ &nbsp; <%= @object_attribute.max_length %>  (<span><%= t(:label_irm_object_attribute_data_length_help_text) %></span>)
            </td>
          </tr>
      <% end %>
      <tr>
        <td class="label-col"><label for="object_attribute_required_flag"><%=t(:label_irm_object_attribute_required_flag)%></label></td>
        <td class="data-col"><%=check_img(@object_attribute.required_flag)%></td>
        <td class="label-col empty">&nbsp;</td>
        <td class="data-col empty">&nbsp;</td>
      </tr>
      </tbody>
    </table>




    <div class="sub-page-block">
      <div class="sub-page-block-header">
        <h3 class="sub-page-block-title"><%= t(:label_irm_object_attribute_database_info) %></h3>
      </div>
      <div class="sub-page-block-body">
        <table class="show-table">
          <tbody>
          <tr>
            <td class="label-col"><label><%=t(:label_irm_object_attribute_data_type)%></label></td>
            <td class="data-col"><%=@object_attribute.data_type%></td>
            <td class="label-col"><label><%=t(:label_irm_object_attribute_data_length)%></label></td>
            <td class="data-col"><%=@object_attribute.data_length%></td>
          </tr>
          <tr>
            <td class="label-col"><label><%=t(:label_irm_object_attribute_data_null_flag)%></label></td>
            <td class="data-col"><%=check_img(@object_attribute.data_null_flag)%></td>
            <td class="label-col"><label><%=t(:label_irm_object_attribute_data_key_type)%></label></td>
            <td class="data-col"><%=@object_attribute.data_key_type%></td>
          </tr>
          <tr>
            <td class="label-col"><label><%=t(:label_irm_object_attribute_data_default_value)%></label></td>
            <td class="data-col"><%=@object_attribute.data_default_value%></td>
            <td class="label-col"><label><%=t(:label_irm_object_attribute_data_extra_info)%></label></td>
            <td class="data-col"><%=@object_attribute.data_extra_info%></td>
          </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<% if @object_attribute.external_system_id %>
  <%=render :partial=>"multilingual/show",:locals=>{:main_data=>@object_attribute} %>
<% end %>