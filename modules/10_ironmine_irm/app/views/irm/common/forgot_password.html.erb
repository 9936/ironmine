<% if ie6?  %>
    <% require_jscss(:login_ie6) %>
<% else %>
    <% require_jscss(:login) %>
<% end %>
<body id="loginpage">
    <div id="pagewrap">
        <div id="newheader">
        </div>
        <div id="gradientwrap">
            <div class="bottom">
            <div id="forgotpasswordbox" style="width: auto;">
              <div class="forgotbox">
                <% if notice %>
                  <div class="alert alert-error">
                    <a href="javascript:void(0);" class="close" data-dismiss="alert">Ã—</a>
                    <strong>Error!</strong> <%= notice %>.
                  </div>
                <% end %>
                <%= form_tag({:action=> "send_email"},{:id=>"forgetPassword",:name=>"forgotPassword"}) do %>
                  <%= raw t(:label_irm_common_forgot_password_tooltip) %>
                  <h1><%= t(:label_irm_person_reset_password) %></h1>
                  <table cellpadding="0" border="0"><tbody><tr><td>
                    <div class="inputbox" style="padding-top: 20px;">
                        <label for="name"><%= t(:label_irm_common_email) %></label>
                        <span class="inputcontainer" style="padding: 0;">
                          <input type="email" class="std" tabindex="1" placeholder="username@company.com"  name="email" id="email"/>
                        </span>
                        <div class="grow-button-container">
                            <a tabindex="2" type="submit" class="btn btn-primary"><%= t(:label_irm_common_send) %></a>
                        </div><!-- .grow_button_container -->
                    </div><!-- .inputbox -->
                    </td></tr></tbody>
                  </table>
                <% end -%>
              </div>
            </div>
            <span id="forgotpasswordboxbottom"><!-- bottom --></span></div>
        </div>
    </div>
</body>
