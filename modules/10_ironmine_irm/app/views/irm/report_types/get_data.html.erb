<%=datatable_view({:count=>@count,:datas=>@datas}) do |builder|%>
  <% builder.column(:id,{:title=>t(:operation), :width => "90px"}) do |data|%>
    <%= link_to(t(:edit),{:action=>"edit",:id=>data[:id]},{:class => "action-link"}) %>&nbsp;|&nbsp;<%= link_to(t(:show),{:action=>"show",:id=>data[:id]},{:class => "action-link"}) %>
  <% end %>
  <% builder.column(:name,{:title=>t(:label_irm_report_type_name),:searchable=>true})%>
  <% builder.column(:description,{:title=>t(:label_irm_report_type_description),:searchable=>true })%>
  <% builder.column(:category_name,{:title=>t(:label_irm_report_type_category)})%>
  <% builder.column(:business_object_name,{:title=>t(:label_irm_report_type_business_object)})%>
  <% builder.column(:created_at,{:title=>t(:created_at)})%>
<% end %>
