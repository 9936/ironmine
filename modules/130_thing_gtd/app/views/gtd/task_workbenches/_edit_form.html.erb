<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
  <h3 id="myModalLabel">修改任务实例</h3>
</div>
<%= form_for(@task_instance, :url => {:action => "update", :id => @task_instance.id}, :html => {:class => "modal-form"}, :builder => CustomFormBuilder) do |f| %>
    <div class="modal-body form-horizontal">
      <div class="control-group">
        <label class="control-label"><%= t(:label_gtd_task_workbench_status) %>:</label>

        <div class="controls">
          <%= f.select :execute_status, available_task_status, :required => true %>
          <span class="help-inline"></span>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label"><%= t(:label_gtd_task_workbench_status) %>:</label>

        <div class="controls">
          <%= f.text_field :name %>
          <span class="help-inline"></span>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label"><%= t(:label_gtd_task_assigned_to) %>:</label>

        <div class="controls">
          <%= f.select :assigned_to, available_assigned_person, :required => true %>
          <span class="help-inline"></span>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label"><%= t(:label_gtd_task_start_at) %>:</label>

        <div class="controls">
          <%= f.date_field :start_at, :required => true %>
          <span class="help-inline"></span>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label"><%= t(:label_gtd_task_end_at) %>:</label>

        <div class="controls">
          <%= f.date_field :end_at, :required => true %>
          <span class="help-inline"></span>
        </div>
      </div>

    </div>
    <div class="modal-footer">
      <%= link_to t(:cancel), "#", :class => "btn", "data-dismiss"=>"modal", "aria-hidden" => "true" %>
      <%= link_submit t(:save), :class => "btn btn-primary" %>
    </div>
<% end %>