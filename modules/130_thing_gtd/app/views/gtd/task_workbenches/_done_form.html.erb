<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
  <h3><%= t(:label_gtd_task_workbench_done_task) %></h3>
</div>
<%= form_for(@task_instance, :url => {:action => "update_done", :id => @task_instance.id}, :html => {:class => "modal-form"}, :builder => CustomFormBuilder) do |f| %>
    <div class="modal-body form-horizontal">
      <div class="control-group">
        <label class="control-label"><%= t(:label_gtd_task_workbench_status) %>:</label>

        <div class="controls">
          <%= f.select :execute_status, available_task_status, {:required => true}, :style => "min-width:150px;" %>
          <span class="help-inline"></span>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label"><%= t(:label_gtd_task_end_at) %>:</label>

        <div class="controls">
          <%= f.date_field :end_at, :required => true, :with_time => true %>
          <span class="help-inline"></span>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label"><%= t(:label_gtd_task_note) %>:</label>

        <div class="controls">
          <%= f.text_area :note, :rows => 3, :class => "input-xlarge" %>
          <span class="help-inline"></span>
        </div>
      </div>

    </div>
    <div class="modal-footer">
      <%= link_to t(:cancel), "#", :class => "btn", "data-dismiss"=>"modal", "aria-hidden" => "true" %>
      <%= link_submit t(:save), :class => "btn btn-primary" %>
    </div>
<% end %>