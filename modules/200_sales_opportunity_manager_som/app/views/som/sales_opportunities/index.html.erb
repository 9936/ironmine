        <%= custom_filter_items("possibility",t(:label_som_sales_opportunity_sales_possibility),sales_opportunities_possibility_check) %>
        <%= custom_filter_items("status",t(:label_som_sales_opportunity_sales_status),sales_opportunities_status) %>
        <%= custom_filter_items("role",t(:label_som_sales_opportunity_sales_people),{"CHARGE"=>t(:label_som_sales_opportunity_sales_people_charge),"OTHER"=>t(:label_som_sales_opportunity_sales_people_other)}) %>
      </div>

      <div class="panel-content">
        <%= datatable("get_sales_opportunities", {:action => "get_data", :format => "json"}, [], {:lazy_load=>true,:search_box => "searchTask", :paginator_box => "paginatorTask",:export_data=>"#exportData"}) %>
      </div>
    </div>
  </div>
</div>


<script type="text/javascript">



    $(function () {
        var current_target = $("#get_sales_opportunities").data("datatable").target;
        function reloadInstance(current_target) {
            var possibility = [], status = [],year=[],role=[];
            $("#possibility label.btn-danger").each(function () {
                possibility.push($(this).attr("value"));
            });

            $("#status label.btn-danger").each(function () {
                status.push($(this).attr("value"));
            });

            $("#year label.btn-danger").each(function () {
                year.push($(this).attr("value"));
            });

            $("#role label.btn-danger").each(function () {
                role.push($(this).attr("value"));
            });

            var params = {'possibility[]': possibility, 'status[]': status,'year[]':year,'role[]':role};
            current_target.data.options.searchOptions = params;
            current_target.loadPage(1);
        }
        function initCheckGroup(dom_id,values){
            $me = $("#"+dom_id);
            if(values.length===0)
               values = ["all"];
            if(values.indexOf("all")>-1)
                $("#"+dom_id+" label.btn").addClass("btn-danger")
            else{
                $.each(values,function(index,value){
                     $("#"+dom_id+" label.btn:[value="+value+"]").addClass("btn-danger")
                })
            }
            $("#"+dom_id+" label.btn").live("click",function(e){
                if($(this).attr("data-all")){
                    if($(this).hasClass("btn-danger")){
                        $("#"+dom_id+" label.btn").removeClass("btn-danger");
                        $("#"+dom_id+" label.btn:eq(1)").addClass("btn-danger");
                    }
                else
                    $("#"+dom_id+" label.btn").addClass("btn-danger");
                }else{
                    if($(this).hasClass("btn-danger")&&$("#"+dom_id+" label.btn-danger:not([data-all])").length==1)
                        return;
                    if($(this).hasClass("btn-danger"))
                        $(this).removeClass("btn-danger");
                    else
                        $(this).addClass("btn-danger");
                }

                if($("#"+dom_id+" label.btn-danger:not([data-all])").length==$("#"+dom_id+" label.btn:not([data-all])").length){
                    $("#"+dom_id+" label.btn:[data-all]").addClass("btn-danger");
                }
                else{
                    $("#"+dom_id+" label.btn-danger:[data-all]").removeClass("btn-danger");
                }
                reloadInstance(current_target);
            });
        }

        initCheckGroup("year",<%=session[:year].to_json.html_safe%>||["all"]);
        initCheckGroup("possibility",<%=session[:possibility].to_json.html_safe%>||["all"]);
        initCheckGroup("status",<%=session[:status].to_json.html_safe%>||["all"]);
        initCheckGroup("role",<%=session[:role].to_json.html_safe%>||["CHARGE"]);
        reloadInstance(current_target);
    });


    function updatePage(){  }
    function updateData(){
        var current_target = $("#get_sales_opportunities").data("datatable").target;
        current_target.loadPage(1);
    }

</script>