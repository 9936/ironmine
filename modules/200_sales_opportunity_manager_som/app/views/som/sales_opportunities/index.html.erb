    }

    .filter-item .custom-checkbox,
    .filter-item {
        position: relative;
        display: inline-block;
    }

    .filter-item .custom-checkbox input,
    .filter-item .custom-radio input {
        position: absolute;
        opacity: 0;
        visibility: hidden;
    }

