<%= app_title %>
<%= form_for(@wiki, :url => {:action => "create"}, :builder => CustomFormBuilder) do |f| %>


    <% content_for :form_block_a do %>
      <%= render :partial=>"editor",:locals=>{:f=>f} %>
    <% end %>


    <% content_for :form_buttons do %>
        <%= link_submit t(:save), {:class => "btn btn-primary"} %>
        <%= link_to t(:label_irm_wiki_preview), {:action => "preview"},{ :target=>"_blank",:class=>"submit btn"} %>
        <%= link_back t(:cancel), {}, {:class => "btn cancel"} %>
    <% end %>



    <!--页面结构-->
    <div class="page-block">
      <table class="page-block-header">
        <tr>
          <td class="page-block-title">
            <h2 class="block-title"><%= t(:label_irm_rating_config_new) %></h2>
          </td>
          <td class="page-block-button">
            <%= content_for :form_buttons %>
          </td>
        </tr>
      </table>
      <div class="page-block-body">
        <%= error_for @rating_config %>
        <div class="sub-page-block">
          <div class="sub-page-block-body">
            <%= content_for :form_block_a %>
          </div>
        </div>
      </div>

      <table class="page-block-footer">
        <tr>
          <td class="page-block-title">
          </td>
          <td class="page-block-button">
            <%= content_for :form_buttons %>
          </td>
        </tr>
      </table>
    </div>

<% end %>