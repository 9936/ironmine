<!--页面结构-->
<div class="page-block">
  <table class="page-block-header">
    <tr>
      <td class="page-block-title">
        <h2 class="block-title"><%= t(:label_csi_survey) %></h2>
      </td>
    </tr>
  </table>
  <div class="page-block-body">
    <div class="datatable">
      <table id='rows'>
        <thead>
          <tr style="width:60px;">
            <th><div>#</div></th>
            <th style="width:180px;">
              <div ><%= t(:label_csi_survey_title) %></div>
            </th>
            <th  style="width:180px;">
              <div ><%= t(:label_csi_survey_created_at) %></div>
            </th>
          </tr>
        </thead>
        <tbody>
          <% results.each do |r| %>
          <tr id="<%=r.id%>">
            <td>
              <div><%= r.id %></div>
            </td>
            <td>
              <div><%=link_to r[:title], {:controller => "csi/surveys", :action => "show", :id =>r[:id]}%></div>
            </td>
            <td>
              <div><%=r[:created_at].strftime("%Y-%m-%d %H:%M:%S")%></div>
            </td>
          </tr>
          <% end -%>
        </tbody>
      </table>
    </div>
  </div>
</div>