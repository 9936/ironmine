<%= common_title %>
<!--页面结构-->
<div class="show-block">
  <table class="page-block-header"><tr>
    <td class="page-block-title">
      <h2 class="block-title"><%= t(:label_isp_check_item) %></h2>
    </td>
    <td class="page-block-button">
      <%= link_to t(:edit), {:controller => "isp/check_items",:action => "edit"},:class=>"btn btn-primary"%>
      <%= link_to t(:back), {:controller => "isp/check_items", :action => "index"},:class=>"btn" %>
    </td>
  </tr></table>
  <div class="page-block-body">
      <table class="show-table">
        <tbody>
        <tr>
          <td class="label-col"><label><%= t(:name) %></label></td>
          <td class="data-col"><%= @isp_check_item[:name] %></td>
          <td class="label-col empty">&nbsp;</td>
          <td class="data-col empty">&nbsp;</td>
        </tr>

        <tr>
          <td class="label-col"><label><%= t(:label_isp_check_item_object_symbol) %></label></td>
          <td class="data-col"><%= @isp_check_item[:object_symbol] %></td>
          <td class="label-col empty">&nbsp;</td>
          <td class="data-col empty">&nbsp;</td>
        </tr>

        <tr>
          <td class="label-col"><label><%= t(:label_isp_check_item_script) %></label></td>
          <td class="data-col"><%= @isp_check_item[:script] %></td>
          <td class="label-col empty">&nbsp;</td>
          <td class="data-col empty">&nbsp;</td>
        </tr>

        <tr>
          <td class="label-col"><label><%= t(:description) %></label></td>
          <td class="data-col">
            <div><%= @isp_check_item[:description] %></div>
          </td>
          <td class="label-col empty">&nbsp;</td>
          <td class="data-col empty">&nbsp;</td>
        </tr>
        </tbody>
      </table>
  </div>
</div>

<!-- 参数列表 -->
<div class="page-block">
  <table class="page-block-header">
    <tr>
      <td class="page-block-title">
        <h2 class="block-title"><%= t(:label_isp_parameter_list) %></h2>
      </td>
      <td class="page-block-button">
        <%= link_to t(:new), {:controller => "isp/check_parameters", :check_item_id => @isp_check_item.id, :action => "new"}, :class => "btn" %>
      </td>
      <td class="page-block-help">
        <div id="searchParameter"></div>
      </td>
    </tr>
  </table>
  <div class="page-block-body">
    <%= datatable("isp_parameter", {:controller => "isp/check_parameters", :check_item_id => @isp_check_item.id, :action => "get_data"}, [], {:search_box => "searchParameter", :paginator_box => "paginatorParameter"}) %>
  </div>
</div>

<!-- 警告条件 -->
<div class="page-block">
  <table class="page-block-header">
    <tr>
      <td class="page-block-title">
        <h2 class="block-title"><%= t(:label_isp_alert_filter) %></h2>
      </td>
      <td class="page-block-button">
        <%= link_to t(:new), {:controller => "isp/alert_filters", :check_item_id => @isp_check_item.id, :action => "new"}, :class => "btn" %>
      </td>
      <td class="page-block-help">
        <div id="searchAlertFilter"></div>
      </td>
    </tr>
  </table>
  <div class="page-block-body">
    <%= datatable("isp_alert_filters", {:controller => "isp/alert_filters", :check_item_id => @isp_check_item.id, :action => "get_data"}, [], {:search_box => "searchAlertFilter", :paginator_box => "paginatorAlterFilter"}) %>
  </div>
</div>
