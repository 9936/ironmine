<%= common_title %>
<!--页面结构-->
<div class="show-block">
  <table class="page-block-header">
    <tr>
      <td class="page-block-title">
        <h2 class="block-title"><%= t(:label_isp_program) %></h2>
      </td>
      <td class="page-block-button">
        <%= link_to t(:edit), {:action => "edit", :id => @isp_program}, :class => "btn btn-primary" %>
        <%= link_to t(:back), {:action => "index"}, :class => "btn" %>
      </td>
    </tr>
  </table>
  <div class="page-block-body">
    <table class="show-table">
      <tbody>
      <tr>
        <td class="label-col"><label><%= t(:name) %></label></td>
        <td class="data-col"><%= @isp_program[:name] %></td>
        <td class="label-col empty">&nbsp;</td>
        <td class="data-col empty">&nbsp;</td>
      </tr>
      <tr>
        <td class="label-col"><label><%= t(:description) %></label></td>
        <td class="data-col">
          <div><%= @isp_program[:description] %></div>
        </td>
        <td class="label-col empty">&nbsp;</td>
        <td class="data-col empty">&nbsp;</td>
      </tr>
      </tbody>
    </table>
  </div>
</div>
<!-- 连接列表 -->
<div class="page-block">
  <table class="page-block-header">
    <tr>
      <td class="page-block-title">
        <h2 class="block-title"><%= t(:label_isp_connection_list) %></h2>
      </td>
      <td class="page-block-button">
        <%= link_to t(:new), {:controller => "isp/connections", :program_id => @isp_program.id, :action => "new"}, :class => "btn" %>
      </td>
      <td class="page-block-help">
        <div id="searchBox"></div>
      </td>
    </tr>
  </table>
  <div class="page-block-body">
    <%= datatable("isp_connection", {:controller => "isp/connections", :program_id => @isp_program.id,:action => "get_data"}, [], {:search_box => "searchBox", :paginator_box => "paginator"}) %>
  </div>
</div>
<!-- 参数列表 -->
<div class="page-block">
  <table class="page-block-header">
    <tr>
      <td class="page-block-title">
        <h2 class="block-title"><%= t(:label_isp_parameter_list) %></h2>
      </td>
      <td class="page-block-button">
        <%= link_to t(:new), {:controller => "isp/check_parameters", :program_id => @isp_program.id, :action => "new"}, :class => "btn" %>
      </td>
      <td class="page-block-help">
        <div id="searchParameter"></div>
      </td>
    </tr>
  </table>
  <div class="page-block-body">
    <%= datatable("isp_parameter", {:controller => "isp/check_parameters", :program_id => @isp_program.id,:action => "get_data"}, [], {:search_box => "searchParameter", :paginator_box => "paginatorParameter"}) %>
  </div>
</div>
<%= render :partial => "multilingual/show", :locals => {:main_data => @isp_program} %>
