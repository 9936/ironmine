<%= common_title %>
<!--页面结构-->
<div class="show-block">
  <table class="page-block-header">
    <tr>
      <td class="page-block-title">
        <h2 class="block-title"><%= t(:label_isp_alert_filter) %></h2>
      </td>
      <td class="page-block-button">
        <%= link_to t(:edit), {:action => "edit", :id => @alert_filter}, :class => "btn" %>
        <%= link_to t(:back), {:controller => "isp/check_items",:action => "show", :id => @alert_filter.check_item.id, :program_id => @alert_filter.check_item.program_id}, :class => "btn" %>
      </td>
    </tr>
  </table>
  <div class="page-block-body">
    <table class="show-table">
      <tbody>
      <tr>
        <td class="label-col"><label><%= t(:label_isp_alert_filter_result_type) %></label></td>
        <td class="data-col"><%= data_type_meaning @alert_filter[:result_type] %></td>
        <td class="label-col empty">&nbsp;</td>
        <td class="data-col empty">&nbsp;</td>
      </tr>
      <tr>
        <td class="label-col"><label><%= t(:label_isp_alert_filter_operation) %></label></td>
        <td class="data-col"><%= @alert_filter[:operation_name] %></td>
        <td class="label-col empty">&nbsp;</td>
        <td class="data-col empty">&nbsp;</td>
      </tr>
      <tr>
        <td class="label-col"><label><%= t(:label_isp_alert_filter_value) %></label></td>
        <td class="data-col"><%= @alert_filter[:value] %></td>
        <td class="label-col empty">&nbsp;</td>
        <td class="data-col empty">&nbsp;</td>
      </tr>
      </tbody>
    </table>
  </div>
</div>
