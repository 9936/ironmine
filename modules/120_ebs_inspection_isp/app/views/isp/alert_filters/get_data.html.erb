<%= datatable_view({:count => @count, :datas => @datas}) do |builder| %>
    <% builder.column(:id, {:title => t(:operation), :width => "120px"}) do |data| %>
        <%= link_to(t(:edit), {:controller => "isp/alert_filters", :check_item_id => data[:check_item_id], :action => "edit", :id => data[:id]}, {:class => "action-link"}) %>&nbsp;|
        <%= link_to(t(:show), {:controller => "isp/alert_filters", :check_item_id => data[:check_item_id],:action => "show", :id => data[:id]}, {:class => "action-link"}) %>&nbsp;|
        <%= link_to(t(:delete), {:controller => "isp/alert_filters", :check_item_id => data[:check_item_id],:action => "destroy", :id => data[:id]}, {:class => "action-link",:method => :delete, :confirm => t(:label_are_you_sure)}) %>
    <% end %>
    <% builder.column(:result_type, {:title => t(:label_isp_alert_filter_result_type)}) do |data| %>
        <%= data_type_meaning(data[:result_type]) %>
    <% end %>
    <% builder.column(:operation, {:title => t(:label_isp_alert_filter_operation)})do |data| %>
      <%= data[:operation_name] %>
    <% end %>
    <% builder.column(:value, {:title => t(:label_isp_alert_filter_value)}) %>
    <% builder.column(:updated_at, {:title => t(:slm_calendar_last_updated)}) %>
<% end %>