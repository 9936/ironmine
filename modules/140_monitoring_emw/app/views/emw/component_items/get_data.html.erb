<%= datatable_view({:count => @count, :datas => @datas}) do |builder| %>
    <% builder.column(:id, {:title => t(:operation), :width => "15%"}) do |data| %>
        <%= link_to(t(:edit), {:action => "edit", :id => data[:id]}, {:class => "action-link",:rel => "modal"}) %>&nbsp;|
        <%= link_to(t(:show), {:action => "show", :id => data[:id]}, {:class => "action-link",:rel => "modal"}) %>&nbsp;|
        <%= link_to(t(:delete), {:action => "destroy", :id => data[:id]}, {:class => "action-link",:method => :delete, :confirm => t(:label_are_you_sure),:remote=>true,:_dom_id=>"component_item"})%>

            <% end %>
    <% builder.column(:name, {:title => t(:name), :width => "25%", :searchable => true}) %>
    <% builder.column(:description, {:title => t(:description),:width => "50%"}) %>
<% end %>