<style type="text/css">
    .modal-body .controls .control-text {
        line-height: 26px;
        display: block;
    }
    .modal-body.form-horizontal .control-group {
        margin-bottom: -0.5;
    }
</style>
<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
  <h3><%= t(:label_emw_component_item) %></h3>
</div>
    <div class="modal-body form-horizontal">
      <%= error_for @component_item %>

      <div class="control-group">
        <label class="control-label"><%= t(:name) %>:</label>
        <div class="controls">
          <span class="control-text"><%= @component_item[:name] %></span>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label"><%= t(:description) %>:</label>
        <div class="controls">
          <span class="control-text"> <%= @component_item[:description] %></span>
        </div>
      </div>


      <div class="control-group">
        <label class="control-label"><%= t(:label_emw_component_item_script) %>:</label>
        <div class="controls">
          <span class="control-text"> <%= @component_item[:script] %></span>
        </div>
      </div>

    </div>
    <div class="modal-footer">
      <%= link_to t(:cancel), "#", :class => "btn", "data-dismiss"=>"modal", "aria-hidden" => "true" %>
    </div>
