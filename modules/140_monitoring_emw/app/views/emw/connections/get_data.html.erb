<%= datatable_view({:count => @count, :datas => @datas}) do |builder| %>
    <% builder.column(:id, {:title => t(:operation), :width => "120px"}) do |data| %>
      <%= link_to(t(:edit), {:action => "edit", :id => data[:id]}, {:class => "action-link"}) %>&nbsp;|
      <%= link_to(t(:show), {:action => "show", :id => data[:id]}, {:class => "action-link"}) %>&nbsp;|
      <%= link_to(t(:delete), {:action => "destroy", :id => data[:id]}, {:class => "action-link",:method => :delete, :confirm => t(:label_are_you_sure)}) %>
    <% end %>
    <% builder.column(:name, {:title => t(:name), :searchable => true}) %>
    <% builder.column(:host, {:title => t(:label_isp_connection_host), :width => "40%"}) %>
    <% builder.column(:connect_type, {:title => t(:label_isp_connection_type)}) do |data| %>
      <%= connection_type_meaning(data[:connect_type]) %>
    <% end %>
    <% builder.column(:username, {:title => t(:label_isp_connection_username)}) %>
    <% builder.column(:description, {:title => t(:description)}) %>
    <% builder.column(:updated_at, {:title => t(:slm_calendar_last_updated)}) %>
<% end %>


