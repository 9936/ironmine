<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
  <h3><%= t(:label_emw_interface_table_new) %></h3>
</div>
<%= form_for(@interface_table,:url=>{:action=>"create"},:builder => CustomFormBuilder,:html => {:class => "modal-form"}) do |f| %>
    <div class="modal-body form-horizontal">
      <%= error_for @interface_table %>
      <div class="control-group">
        <label class="control-label"><%= t(:name) %>:</label>
        <div class="controls">
          <%= f.text_field :name, :required => true %>
          <span class="help-inline"></span>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label"><%= t(:label_emw_interface_table_name) %>:</label>
        <div class="controls">
          <%= f.text_field :table_name, :required => true %>
          <span class="help-inline"></span>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label"><%= t(:description) %>:</label>
        <div class="controls">
          <%= f.text_area :description, :rows => 3, :class => "input-xlarge" %>
          <span class="help-inline"></span>
        </div>
      </div>

    </div>
    <div class="modal-footer">
      <%= link_to t(:cancel), "#", :class => "btn", "data-dismiss"=>"modal", "aria-hidden" => "true" %>
      <%= link_submit t(:save), :class => "btn btn-primary" %>
    </div>
<% end %>
