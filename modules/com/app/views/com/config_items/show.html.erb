<%= page_title %>

<div id="ep" class="detail-block page-block">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_com_config_item) %></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= link_to t(:edit), {:action => "edit", :id => @config_item}%></div>
            <div class="button"><%= link_to t(:back), {:action => "index"}%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
        <tr>
                  <td class="labelCol"><label><%=t(:label_com_config_item_number)%></label></td>
                  <td class="dataCol"><%=@config_item.item_number %></td>
                  <td class="labelCol empty">&nbsp;</td>
                  <td class="dataCol empty">&nbsp;</td>
                </tr>
                <tr>
                  <td class="labelCol"><label><%=(t :label_com_config_item_config_class)%></label></td>
                  <td class="dataCol"><%=@config_item[:config_class_name] %></td>

                  <td class="labelCol"></td>
                  <td class="dataCol"></td>
                </tr>
                <tr>
                  <td class="labelCol"><label><%=(t :label_com_config_item_managed_group)%></label></td>
                  <td class="dataCol"><%=@config_item[:managed_group_name] %></td>

                  <td class="labelCol"></td>
                  <td class="dataCol"></td>
                </tr>
                <tr>
                  <td class="labelCol"><label><%=(t :label_com_config_item_managed_person)%></label></td>
                  <td class="dataCol"><%= @config_item[:managed_person_name]%></td>

                  <td class="labelCol"></td>
                  <td class="dataCol"></td>
                </tr>
        <% @config_item_attributes.each do |config_attribute| %>
        <tr auto_generate="true">
          <td class="labelCol"><label><%=config_attribute[:config_attribute_name]%></label></td>
          <td class="dataCol">

              <%=config_attribute[:value]  %>
          </td>
          <td class="labelCol empty">&nbsp;</td>
          <td class="dataCol empty">&nbsp;</td>
        </tr>
        <%end  %>
                  </tbody>
      </table>
    </div>
  </div>
</div>
<div class="listRelatedObject setupBlock">
    <div class="page-block">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_com_config_item_relation_list) %></h2></td>
              <td  class="pbButton">
                <div class="button"><%= link_to t(:new), {:controller=>"com/config_item_relations",:config_item_id=>@config_item.id,:action => "new"}%></div>
              </td>
              <td class="pbHelp">
                <div id="config_item_relationsSearchBox"></div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
        <div id="config_item_relations" class="datatable" style="width:100%">
          <div id="id" style="display:none">
            <%= link_to(t(:edit),{:controller=>"com/config_item_relations",:action=>"edit",:id=>"{id}"}) %>|<%=link_to(t(:show),{:controller=>"com/config_item_relations",:action=>"show",:id=>"{id}"}) %>|<%= link_to(t(:delete),{:controller=>"com/config_item_relations",:action=>"destroy",:id=>"{id}"},:back=>true,:confirm => t(:label_are_you_sure) ,
                                                    :method => :delete) %>
          </div>
        </div>
        <%= datatable("config_item_relations",{:controller=>"com/config_item_relations",:action=>"get_data",:config_item_id=>@config_item.id,:format=>"json"},
                      [{:key=>"id",:label=>t(:operation),:formatter=>"Y.irm.template",:width=>"120px"},
                       {:key=>"item_number",:label=>t(:label_com_config_item_number),:width=>"170px"},
                       {:key=>"relation_type_name",:label=>t(:label_com_config_relation_type),:width=>"170px",:searchable=>true},
                       {:key=>"relation_item_number",:label=>t(:label_com_config_item_relation_config_item),:width=>"170px",:searchable=>true},
                       {:key=>"description",:label=>t(:description),:searchable=>true},
                                              ],{:paginator_box=>"config_item_relationsPaginatorBox",:search_box=>"config_item_relationsSearchBox"})%>
        <div id="config_item_relationsPaginatorBox"></div>
      </div>
    </div>
</div>
