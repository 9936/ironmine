          <% if can_upgrade?(@incident_request) %>
              <%= link_to t(:label_icm_incident_request_upgrade), {:action => "edit_upgrade"} ,{:class=>"btn"}%>
          <% end %>
        </div>
        <div class="btn-group">
          <!-- 检查是否具有关闭权限 -->
          <% if can_close?(@incident_request) %>
              <%= link_to t(:close), {:action => "edit_close"},{:class=>"btn"} %>
          <% end %>

          <!-- 检查是否具有编辑权限 -->
          <% if can_edit?(@incident_request) %>
            <%= link_to t(:edit), {:controller=>"icm/incident_requests", :action => "edit", :id => @incident_request.id} ,{:class=>"btn",:back => true} %>
          <% end %>
        </div>

