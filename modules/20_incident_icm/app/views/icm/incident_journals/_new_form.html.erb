            if (ref.hasClass("hidden")) {
                me.html('<i class="icon-chevron-down"></i>'+ me.attr("expandedText"));
            } else {
                me.html('<i class="icon-chevron-up"></i>'+ me.attr("collapsedText"));
            }
        });
        $(".toggle-button").bind("click", function(event) {
            var me = $(this);
            var ref = $("#" + me.attr("ref"));
            if (ref.hasClass("hidden")) {
                me.html('<i class="icon-chevron-up"></i>'+ me.attr("collapsedText"));
                ref.removeClass("hidden");
            } else {
                me.html('<i class="icon-chevron-down"></i>'+ me.attr("expandedText"));
                ref.addClass("hidden");
            }
        });
    });

