<%= form_for(@incident_journal,:url=>{:action=>"create"},:builder => CustomFormBuilder) do |f| %>
  <% content_for :form_block_common   do%>
    <table class="form-table">
      <tbody>
        
          <tr>
            <td class="label-col"><label for="incident_journal_incident_request_id"><%=t(:label_incident_journal_incident_request_id)%></label></td>
            <td class="data-col"><%=f.text_field :incident_request_id, :required=>true ,:id=>"incident_journal_incident_request_id"%></td>
            <td class="label-col empty">&nbsp;</td>
            <td class="data-col empty">&nbsp;</td>
          </tr>
        
          <tr>
            <td class="label-col"><label for="incident_journal_replied_by"><%=t(:label_incident_journal_replied_by)%></label></td>
            <td class="data-col"><%=f.text_field :replied_by, :required=>true ,:id=>"incident_journal_replied_by"%></td>
            <td class="label-col empty">&nbsp;</td>
            <td class="data-col empty">&nbsp;</td>
          </tr>
        
          <tr>
            <td class="label-col"><label for="incident_journal_message_body"><%=t(:label_incident_journal_message_body)%></label></td>
            <td class="data-col"><%=f.text_area :message_body, :required=>true ,:id=>"incident_journal_message_body"%></td>
            <td class="label-col empty">&nbsp;</td>
            <td class="data-col empty">&nbsp;</td>
          </tr>
      </tbody>
    </table>
  <% end %>

  <% content_for :form_buttons  do %>
    <%= link_submit t(:save),{:class=>"btn btn-primary"}%>
    <%= link_back t(:cancel), {}, {:class => "btn cancel"}%>
  <% end %>

  <!--页面结构-->
  <div class="page-block">
    <table class="page-block-header">
      <tr>
        <td class="page-block-title">
          <h2 class="block-title"><%=t(:label_icm_incident_journal_new)%></h2>
        </td>
        <td class="page-block-button">
          <%= content_for :form_buttons   %>
        </td>
      </tr>
    </table>
    <%= error_for @incident_journal %>
    <div class="page-block-body">
      <div class="sub-page-block">
        <!-- 一般信息 -->
        <div class="sub-page-block-header">
          <%= form_require_info %>
          <h3 class="sub-page-block-title"><%= t(:label_common_info) %></h3>
        </div>
        <div class="sub-page-block-body">
          <%= content_for :form_block_common   %>
        </div>
        <!-- 基本信息 -->
        <div class="sub-page-block-header">
          <%= form_require_info %>
          <h3 class="sub-page-block-title"><%= t(:label_icm_incident_category_external_system) %></h3>
        </div>
        <div class="sub-page-block-body">
          <%= content_for :form_block_base  %>
        </div>
      </div>
    </div>
    <table class="page-block-footer">
      <tr>
        <td class="page-block-title"></td>
        <td class="page-block-button">
          <%= content_for :form_buttons   %>
        </td>
      </tr>
    </table>
  </div>
<% end %>
