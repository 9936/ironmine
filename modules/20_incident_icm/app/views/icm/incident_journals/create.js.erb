$(function(){
    <% if !(@incident_request.watcher?(Irm::Person.current.id)&&allow_to_function?(:reply_incident_request)&&!@incident_request.close?&&!@incident_request.permanent_close? && @incident_request.status_code.eql?(Irm::Constant::ENABLED)) %>
        location.reload();
    <% else %>
        $("#new_icm_incident_reply").unmask();
        $("#new_icm_incident_reply_error").remove();
        $("#msgEditorParent").prepend("<div id='new_icm_incident_reply_error'><%= escape_javascript(error_message_for(@incident_journal,@incident_request)) %><div>");
    <% end %>
});