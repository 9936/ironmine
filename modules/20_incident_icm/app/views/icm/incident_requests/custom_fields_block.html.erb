<% if @system_custom_attributes.any? %>
    <div class="sub-page-block">
      <div class="sub-page-block-header">
        <h3 class="sub-page-block-title"><%= t(:label_irm_system_custom_field) %></h3>
      </div>
      <div class="sub-page-block-body">
        <table class="form-table">
          <tbody>
            <%= show_input_custom_fields(@incident_request, params[:external_system_id], columns = 4) do |builder| %>
              <% builder.custom_field(:sattribute1) do |label,field, attribute| %>
                <td class='label-col'><label><%= label %></label></td>
                <td class='data-3col' colspan="3"><%= field %></td>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
<% end %>