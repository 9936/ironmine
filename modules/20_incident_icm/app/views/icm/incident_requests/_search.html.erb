<!--页面结构-->
<div class="page-block">
  <table class="page-block-header">
    <tr>
      <td class="page-block-title">
        <h2 class="block-title"><%= t(:label_icm_incident_request_list) %></h2>
      </td>
    </tr>
  </table>
  <div class="page-block-body">
    <div class="datatable">
      <table id='rows'>
        <thead>
          <tr>
            <th style="width:40px">
              <div><%= t(:label_icm_incident_request_number) %></div>
            </th>
            <th style="width:180px;">
              <div><%= t(:label_icm_incident_request_title) %></div>
            </th>
            <th style="width:180px;">
              <div ><%= t(:label_icm_incident_request_organization) %></div>
            </th>
            <th style="width:180px;">
              <div ><%= t(:label_icm_incident_request_requested_by) %></div>
            </th>
          </tr>
        </thead>
        <tbody >
        <% results.each do |r| %>
        <tr id="<%=r.id%>" >
          <td>
            <div><%= r[:request_number] %></div>
          </td>
          <td>
            <div><%=link_to r[:title], {:controller => "icm/incident_journals", :action => "new", :request_id =>r[:id]}%></div>
          </td>
          <td >
            <div><%=r[:organization_name]%></div>
          </td>
          <td >
            <div><%=r[:requested_name]%></div>
          </td>
        </tr>
        <% end -%>
        </tbody>
      </table>
    </div>
  </div>
</div>
