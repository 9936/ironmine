<%= wicked_pdf_stylesheet_link_tag "application"%>

<div class="page-block">
  <table class="page-block-header">
    <tbody>
      <tr>
        <td class="page-block-title">
          <h2 class="block-title">事故单列表</h2>
        </td>
      </tr>
    </tbody>
  </table>
  <div class="page-block-body">
    <div id="incident_requests">
      <div class="datatable datatable-scroll scrollxy">
        <div class="table-header">
                  <table>
                    <thead>
                      <tr>
                        <th width="55px"><div><%= t(:label_icm_incident_request_request_number_shot) %></div></th>
                        <th width="480px"><div><%= t(:label_icm_incident_request_title) %></div></th>
                        <th width="120px"><div><%= t(:label_icm_incident_request_organization) %></div></th>
                        <th width="60px"><div><%= t(:label_icm_incident_request_priority) %></div></th>
                        <th width="90px"><div><%= t(:label_icm_incident_request_requested_by) %></div></th>
                        <th width="150px"><div><%= t(:label_icm_incident_request_last_date) %></div></th>
                        <th width="130px"><div><%= t(:label_irm_external_system) %></div></th>
                      </tr>
                    </thead>
                  </table>
                </div>
        <div class="table-body include-header">
           <table count=<%= @count %>>
             <thead>
               <tr>
                 <th width="50px"><div><%= t(:label_icm_incident_request_request_number_shot) %></div></th>
                 <th width="500px"><div><%= t(:label_icm_incident_request_title) %></div></th>
                 <th width="120px"><div><%= t(:label_icm_incident_request_organization) %></div></th>
                 <th width="60px"><div><%= t(:label_icm_incident_request_priority) %></div></th>
                 <th width="90px"><div><%= t(:label_icm_incident_request_requested_by) %></div></th>
                 <th width="150px"><div><%= t(:label_icm_incident_request_last_date) %></div></th>
                 <th width="130px"><div><%= t(:label_irm_external_system) %></div></th>
               </tr>
             </thead>
             <tbody>
               <%- @datas.each do |data| -%>
                 <tr id=<%= data[:id] %>>
                   <td><div><%= data[:request_number] %></div></td>
                   <td>
                     <div>
                       <%- if (data[:reply_flag].eql?("Y") && data[:close_flag].eql?("N")) -%>
                         <%= t(:label_icm_reply) %>
                       <%- end -%>
                       <%= "(#{data[:incident_status_id_label]})"+data[:title] %>
                     </div>
                   </td>
                   <td><div><%= data[:organization_id_label] %></div></td>
                   <td><div><%= data[:priority_id_label] %></div></td>
                   <td><div><%= data[:requested_by_label] %></div></td>
                   <td><div><%= format_date(data[:last_request_date]) %></div></td>
                   <td><div><%= data[:external_system_id_label] %></div></td>
                 </tr>
               <%- end -%>
             </tbody>
           </table>
        </div>
      </div>
    </div>

  </div>
</div>
