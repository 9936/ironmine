<%= common_title(:show_data=>@incident_status[:name]) %>

<!--页面结构-->
<div class="show-block">
  <table class="page-block-header"><tr>
    <td class="page-block-title">
      <h2 class="block-title"><%= t(:label_icm_incident_status_show) %>&nbsp;<%= t(:label_detail_info) %></h2>
    </td>
    <td class="page-block-button">
      <%= link_to t(:edit), {:action => "edit", :id => @incident_status},:class=>"btn btn-primary"%>
      <%= link_to t(:new), {:action => "new"},:class=>"btn"%>
      <%= link_to t(:back), {:action => "index"},:class=>"btn" %>
    </td>
  </tr></table>
  <div class="page-block-body">
    <table class="show-table">
      <tbody>
          <tr>
            <td class="label-col"><label><%=(t :label_icm_incident_status_phase_code)%></label></td>
            <td class="data-col"><%=@incident_status[:phase_name]%></td>
            <td class="label-col"><label><%=(t :label_icm_incident_status_incident_status_code)%></label></td>
            <td class="data-col"><%= @incident_status.incident_status_code%></td>
          </tr>
          <tr>
            <td class="label-col"><label><%=(t :label_icm_incident_status_name)%></label></td>
            <td class="data-col"><%= @incident_status[:name]%></td>
            <td class="label-col"><label><%=t(:display_sequence)%></label></td>
            <td class="data-col"><%= @incident_status.display_sequence%></td>
          </tr>
          <tr>
            <td class="label-col"><label><%=(t :label_icm_incident_status_description)%></label></td>
            <td class="data-col"><%= @incident_status[:description]%></td>
            <td class="label-col"><label><%=(t :default_flag)%></label></td>
            <td class="data-col"><%= check_img(@incident_status.default_flag)%></td>
          </tr>
          <tr>
            <td class="label-col"><label><%=(t :status)%></label></td>
            <td class="data-col"><%= @incident_status[:status_meaning]%></td>
            <td class="label-col"><label><%=t(:display_color)%></label></td>
            <td class="data-col"><div style="width: 40px; height: 20px; background-color: <%= @incident_status.display_color %>;"></div></td>
          </tr>
      </tbody>
    </table>
  </div>
</div>

<%=render :partial=>"multilingual/show",:locals=>{:main_data=>@incident_status} %>