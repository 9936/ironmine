<table  class="form-table baseFilter"  id="baseFilter">
  <tbody>
  <tr>
    <td>
      <label for="loginPerson_label"><%= t(:label_irm_external_system) %></label>
      <div style="white-space:nowrap">
        <%= select_tag_multiple(
                    "program_params[external_system_id][]",
                    nullable_options_for_select(current_person_assessible_external_system_full, program_params[:external_system_id]),
                    "program_params[external_system_mul]",
                    program_params[:external_system_mul] ? program_params[:external_system_mul] : 'N')%>
      </div>
    </td>
    <td>
      <fieldset>
        <legend>
          <%= t(:label_icm_report_create_time_range) %>
        </legend>
        <table>
          <tr>
            <td>
              <label for="filterDateFrom"><%= t(:label_irm_report_filter_date_from) %></label>
              <%= date_field_tag(:submitted_start_date,:value => program_params[:submitted_start_date],:id=>"filterDateFrom_submitted",:name=>"program_params[submitted_start_date]",:size=>12,:nobutton=>true)%>
              <%= hidden_field_tag "program_params[running_person_id]", Irm::Person.current.id %>
            </td>
            <td>
              <label for="filterDateTo"><%= t(:label_irm_report_filter_date_to) %></label>
              <%= date_field_tag(:submitted_ent_date,:value => program_params[:submitted_ent_date],:id=>"filterDateTo_submitted",:name=>"program_params[submitted_ent_date]",:size=>12,:nobutton=>true)%>
            </td>
          </tr>
        </table>
      </fieldset>
    </td>
    <td>
      <fieldset>
        <legend>
          <%= t(:label_icm_report_update_time_range) %>
        </legend>
        <table>
          <tr>
            <td>
              <label for="filterDateFrom"><%= t(:label_irm_report_filter_date_from) %></label>
              <%= date_field_tag(:last_response_start_date,:value => program_params[:last_response_start_date],:id=>"filterDateFrom_response",:name=>"program_params[last_response_start_date]",:size=>12,:nobutton=>true)%>
            </td>
            <td>
              <label for="filterDateTo"><%= t(:label_irm_report_filter_date_to) %></label>
              <%= date_field_tag(:last_response_end_date,:value => program_params[:last_response_end_date],:id=>"filterDateTo_response",:name=>"program_params[last_response_end_date]",:size=>12,:nobutton=>true)%>
            </td>
          </tr>
        </table>
      </fieldset>
    </td>
    <td width="60%"></td>
  </tr>
  </tbody>
</table>