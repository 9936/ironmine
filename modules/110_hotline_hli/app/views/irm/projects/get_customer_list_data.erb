<%=datatable_view({:count=>@count,:datas=>@datas}) do |builder|%>
    <% builder.column(:id,{:title=>t(:operation), :width => "80px"}) do |data|%>
        <%= link_to t(:remove), {:controller=>"irm/projects",:action=>"remove_project_supporter",:project_code=>@project_code,
                                 :person_id => data[:id]}, :confirm => t(:label_are_you_sure) ,
                                 :method => :delete %>
    <% end %>
    <% builder.column(:person_name,{:title=>"#{t(:label_irm_person_name)}(#{t(:label_irm_person_login)})",
                                    :width => "140px",
                                    :searchable => true}) do |data|%>
        <%= data[:person_name] %>(<%= data[:login_name]%>)
    <% end %>
    <% builder.column(:email_address,{:title=>t(:label_irm_person_email_address),
                                      :width => "180px",
                                      :searchable => true})%>
    <% builder.column(:organization_name,{:title=>t(:label_irm_person_organization),
                                          :searchable => true})%>
    <% builder.column(:profile_name,{:title=>t(:label_irm_person_profile), :width => "90px",
                                          :searchable => true})%>
    <% builder.column(:role_name,{:title=>t(:label_irm_person_role),
                                  :width => "90px",
                                  :searchable => true})%>
<% end %>