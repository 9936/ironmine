<%= common_title(:model_meaning => @project[:name], :action_meaning=>  t(:label_irm_project_add_person)) %>
<div class="listRelatedObject setupBlock">
    <div class="page-block">
      <div class="pbHeader">

        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_select_result) %>&nbsp;<%= t(:label_detail_info) %></h2></td>
              <td id="topButtonRow" class="pbButton">
                <%= form_for(@system_person,:url=>{:action=>"add_customers"},:builder => LabellingFormBuilder) do |f| %>
                <%= f.hidden_field(:status_code) %>
                                  <div class="button"><%= f.submit t(:save)%></div>
                                  <div class="button"><%= link_to(t(:cancel),{:controller =>"irm/projects",:action=>"show",:id=>@project.id})%></div>
                <% end %>
              </td>
              <td class="pbHelp">
                <div id="availableProjectCustomerListSearchBox"></div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="pbBody">
        <div id="availableProjectCustomerList" class="datatable" style="width:100%">
        </div>
        <%= datatable("availableProjectCustomerList",{:action=>"get_available_project_customer_data", :project_code => @project[:short_name]},
                  [{:key=>"id",:hidden=>true},
                   {:key=>"person_name",:label=>t(:label_irm_person_name),:searchable=>true, :width => "80px"},
                   {:key=>"login_name",:label=>t(:label_irm_person_login),:searchable=>true},
                   {:key=>"email_address",:label=>t(:label_irm_person_email_address),:searchable=>true},
                   {:key=>"organization_name",:label=>t(:label_irm_person_organization),:searchable=>true},
                   {:key=>"profile_name",:label=>t(:label_irm_person_profile)},
                   {:key=>"role_name",:label=>t(:label_irm_person_role)}],
                   {:paginator_box=>"availableProjectCustomerPaginator",
                    :search_box=>"availableProjectCustomerListSearchBox",:select=>"multiple",:row_perpage => "10"})%>
        <div id="availableProjectCustomerPaginator"></div>
      </div>


    </div>
</div>
<script type="text/javascript">
  Ext.onReady(function(){
      var setSelectedValue = function(selModel,selected){
          var ids = [];
          for(var i = 0;i<selected.length;i++){
            ids.push(selected[i].data.id);
          }
          $("#irm_external_system_person_status_code").val(ids.join(","));
      }
      Ext.getCmp("availableProjectCustomerListDatatable").selModel.addListener("selectionchange",setSelectedValue);
});
</script>
