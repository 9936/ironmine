<%=datatable_view({:count=>@count,:datas=>@datas}) do |builder|%>
    <% builder.column(:person_name,{:title=>"#{t(:label_irm_person_name)}", :width => "80px", :searchable => true})%>
    <% builder.column(:login_name,{:title=>t(:label_irm_person_login), :searchable => true})%>
    <% builder.column(:email_address,{:title=>t(:label_irm_person_email_address), :searchable => true})%>
    <% builder.column(:organization_name,{:title=>t(:label_irm_person_organization)})%>
    <% builder.column(:profile_name,{:title=>t(:label_irm_person_profile), :searchable => true})%>
    <% builder.column(:role_name,{:title=>t(:label_irm_person_role), :searchable => true})%>
<% end %>