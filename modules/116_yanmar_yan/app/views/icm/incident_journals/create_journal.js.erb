$(function(){
    $("#new_icm_incident_reply").unmask();
    $("#new_icm_incident_reply_error").remove();
    <% prepare_request_files(@incident_request) %>
    <% unless flash[:notice].present?%>
        window.location.reload();
    <% else %>
        $("#notice").html("<%= escape_javascript(flash_notice)%>");
    <% end %>
});