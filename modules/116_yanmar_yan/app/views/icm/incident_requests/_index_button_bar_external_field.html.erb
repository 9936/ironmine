<script type="text/javascript">

$(function(){
    $(".sidebar-cell").css("display", "none");

    $("#hide_left").click(function(e){
        if($(".sidebar-cell").css("display") == "none")
        {
            $(".sidebar-cell").css("display", "");
        }
        else
        {
            $(".sidebar-cell").css("display", "none");
        }
    });
});
</script>