<%=datatable_view({:count=>@count,:datas=>@datas}) do |builder|%>
  <% builder.column(:id,{:title=>t(:operation), :width => "120px"}) do |data|%>
    <% if can_edit_header?(data) %>
      <%= link_to(t(:edit),{:controller => "skm/entry_headers", :action=>"edit",:id=> data[:id]}, :class => "action-link") %>&nbsp;|
    <% end %>
    <%= link_to(t(:show),{:controller => "skm/entry_headers", :action=>"show",:id=> data[:id]}, :class => "action-link") %>
    <% if data[:is_favorite] == "N" %>
     &nbsp;| <%= link_to(t(:save_page), {:controller => "skm/entry_headers", :action => "add_favorites", :id => data[:id], :person_id => Irm::Person.current.id}, :class => "action-link") %>
    <% end %>
  <% end %>
  <% builder.column(:published_date,{:title=>t(:label_skm_entry_header_published_date),:width=>"180px"})%>
  <% builder.column(:author_name,{:title=>t(:label_skm_entry_header_author_name),:width=>"150px"})%>
  <% builder.column(:doc_number,{:title=>t(:label_skm_entry_header_doc_number),:searchable=>true,:width=>"50px"}) do |data|%>
    <%= link_to(data[:doc_number], {:controller => "skm/entry_headers", :action => "show", :id => data[:id]})%>
  <% end %>
  <% builder.column(:entry_title,{:title=>t(:label_skm_entry_header_title),:searchable=>true}) do |data|%>
    <% title =  link_to(data[:entry_title], {:controller => "skm/entry_headers", :action => "show", :id => data[:id]})%>
    <% if data[:type_code].eql?('VIDEO') %>
    <%= get_img_icon("video") + title %>
    <% else %>
    <%= title %>
    <% end %>
  <% end %>
  <% builder.column(:name,{:title=>t(:label_skm_entry_header_channel_name),:width=>"100px"})%>
  <% builder.column(:read_num,{:title=>t(:label_skm_entry_header_read_num),:width=>"50px"}) do |data|%>
      <%if data[:read_num]%>
        <%=data[:read_num] %>
      <%else%>
            0
      <%end%>
  <%end%>
  <% builder.column(:download_num,{:title=>t(:label_skm_entry_header_download_num),:width=>"50px"}) do |data|%>
      <%if data[:download_num]%>
          <%=data[:download_num] %>
      <%else%>
          0
      <%end%>
  <%end%>
  <% builder.column(:zan_num,{:title=>t(:label_skm_entry_header_zan_num),:width=>"50px"}) do |data|%>
      <%if data[:zan_num]%>
          <%=data[:zan_num] %>
      <%else%>
          0
      <%end%>
  <%end%>
<% end %>