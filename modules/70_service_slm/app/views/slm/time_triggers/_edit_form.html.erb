<%= common_title %>
<%= form_for(@time_trigger,:url=>{:action=>"create"},:builder => CustomFormBuilder) do |f| %>
  <% content_for :form_block_a   do%>
        <%= f.hidden_field(:service_agreement_id) %>
                <table class="form-table">
                  <tbody>
                  <tr>
                    <td class="label-col">
                      <label for="wf_rule_time_trigger_rule"><%= t(:label_slm_service_agreement) %></label></td>
                    <td class="data-col"><label><%= @service_agreement[:name] %></label></td>
                    <td class="label-col empty">&nbsp;</td>
                    <td class="data-col empty">&nbsp;</td>
                  </tr>
                  <tr>
                    <td class="label-col">&nbsp;</td>
                    <td class="data-3col" colspan="3">
                      <div class="form-inline">
                        <%= f.text_field :duration_percent , :style => "width:30px;", :required => true ,:id=>"duration_percent"%><label for="duration_percent">%&nbsp;X &nbsp;
                        <%= @service_agreement.duration_day %><%= t(:label_slm_service_agreement_duration_day) %>
                        <%= @service_agreement.duration_hour %><%= t(:label_slm_service_agreement_duration_hour) %>
                        <%= @service_agreement.duration_minute %><%= t(:label_slm_service_agreement_duration_minute) %> </label>
                      </div>

                    </td>
                  </tr>
                  </tbody>
                </table>
  <% end %>
  <% content_for :form_buttons  do %>
    <%= link_submit t(:save),{:class=>"btn btn-primary"}%>
    <%= link_back t(:cancel),{},{:class=>"btn cancel"}%>
  <% end %>
  <!--页面结构-->
  <div class="page-block">
    <table class="page-block-header"><tr>
      <td class="page-block-title">
        <h2 class="block-title"><%=t(:label_slm_time_trigger_edit)%></h2>
      </td>
      <td class="page-block-button">
        <%= content_for :form_buttons   %>

      </td>
    </tr></table>
    <div class="page-block-body">
      <%= error_for @time_trigger %>
      <div class="sub-page-block">
        <div class="sub-page-block-header">
          <%= form_require_info %>
          <h3 class="sub-page-block-title"><%= t(:label_common_info) %></h3>
        </div>
        <div class="sub-page-block-body">
          <%= content_for :form_block_a   %>
        </div>
      </div>

    </div>

    <table class="page-block-footer"><tr>
      <td class="page-block-title">
      </td>
      <td class="page-block-button">
        <%= content_for :form_buttons   %>
      </td>
    </tr></table>
  </div>
<% end %>
