                    <label class="checkbox"><input type="checkbox" name="week_str[]" value="4"><%= (t "date.day_names")[4] %></label>
                    <label class="checkbox"><input type="checkbox" name="week_str[]" value="5"><%= (t "date.day_names")[5] %></label><br/>
