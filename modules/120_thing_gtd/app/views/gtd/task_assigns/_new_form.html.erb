<%= common_title %>
<%= form_for(@task_assign,:url=>{:action=>"create"},:builder => CustomFormBuilder) do |f| %>
  <% content_for :form_block_a   do%>
        <%= f.hidden_field(:external_system_id,:value=>params[:sid]) %>

    <table class="form-table">
      <tbody>
          <tr>
            <td class="label-col"><label for="impact_range_name"><%=(t :label_gtd_task_assign_name)%></label></td>
            <td class="data-col"><%=f.text_field :name, :required=>true,:id=>"impact_range_name"%></td>
            <td class="label-col"></td>
            <td class="data-col"></td>
          </tr>
          <tr>
            <td class="label-col"><label for="impact_range_description"><%=t(:label_gtd_task_assign_description)%></label></td>
            <td class="data-col"><%= f.text_area :description, :rows => 4,:id=>"impact_range_description",:class=>"input-xlarge"%></td>
            <td class="label-col empty">&nbsp;</td>
            <td class="data-col empty">&nbsp;</td>
          </tr>
      </tbody>
    </table>
  <% end %>
  <% content_for :form_buttons  do %>
    <%= link_submit t(:save),{:class=>"btn btn-primary"}%>
    <%= link_back t(:cancel),{},{:class=>"btn cancel"}%>
  <% end %>
  <!--页面结构-->
  <div class="page-block">
    <table class="page-block-header"><tr>
      <td class="page-block-title">
        <h2 class="block-title"><%=t(:label_gtd_task_assign_new)%></h2>
      </td>
      <td class="page-block-button">
        <%= content_for :form_buttons   %>

      </td>
    </tr></table>
    <div class="page-block-body">
      <%= error_for @task_assign %>
      <div class="sub-page-block">
        <div class="sub-page-block-header">
          <%= form_require_info %>
          <h3 class="sub-page-block-title"><%= t(:label_common_info) %></h3>
        </div>
        <div class="sub-page-block-body">
          <%= content_for :form_block_a   %>
        </div>
      </div>

    </div>

    <table class="page-block-footer"><tr>
      <td class="page-block-title">
      </td>
      <td class="page-block-button">
        <%= content_for :form_buttons   %>
      </td>
    </tr></table>
  </div>
<% end %>
