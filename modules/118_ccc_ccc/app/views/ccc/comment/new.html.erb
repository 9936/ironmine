<!--头部-->
<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
  <h3><%= t(:label_ccc_comment_new) %></h3>
</div>
<!--头部-->

<%= form_for(@comment,:url=>{:action=>"create", :blog_id => @blog_id}, :html => {:class => "modal-form"}, :builder => CustomFormBuilder) do |f| %>
    <!--内容-->
    <div class="modal-body form-horizontal">
      <table class="form-table" cellpadding="0" cellspacing="0" border="0">
        <tbody>

        <tr>
          <td class="label-col"><label for="record"><%=t(:content)%></label></td>
          <td class="data-col"><%=f.text_area :content, :rows => "2", :required => true%></td>
          <td class="label-col">&nbsp;</td>
          <td class="data-col">&nbsp;</td>
        </tr>


        </tbody>
      </table>
    </div>
    <!--内容-->

    <!--尾部-->
    <div class="modal-footer">
      <%= link_submit t(:save), :class => "btn btn-primary" %>
      <%= link_to t(:cancel), "#", :class => "btn", :id => "cancel_mo", "data-dismiss" => "modal", "aria-hidden" => "true" %>
    </div>
    <!--尾部-->
    <script type="text/javascript">
        function updateInstances() {
            var current_target = $("#lookup_type").data("datatable").target;
            current_target.loadPage(1);
        }
    </script>
<% end %>
