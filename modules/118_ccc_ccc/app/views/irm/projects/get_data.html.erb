<%=datatable_view({:count=>@count,:datas=>@datas}) do |builder|%>
    <% builder.column(:id,{:title=>t(:operation), :width => "80px"}) do |data|%>
        <%= link_to(t(:show),{:controller => "irm/external_systems", :action=>"show",:id=>data[:id]},:class => "action-link") %>
    <% end %>
    <% builder.column(:system_name,{:title=>t(:label_irm_external_system),:searchable=>true})%>
    <% builder.column(:group_name,{:title=>t(:label_irm_group_show), :width => "250px"}) do |data|%>
        <%= concat_system_groups(data[:id])%>
    <% end %>
    <% builder.column(:project_code,{:title=>t(:label_irm_project_code), :width => "80px",:searchable=>true})%>
    <% builder.column(:hotline,{:title=>t(:label_irm_project), :width => "60px"}) do |data|%>
        <%= check_img(data[:hotline]) %>
    <% end %>
    <% builder.column(:project_status,{:title=>t(:active), :width => "40px"}) do |data| %>
        <%= check_img(data[:project_status]) %>
    <% end %>
<% end %>