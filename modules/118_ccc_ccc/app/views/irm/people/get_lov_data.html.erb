<%=datatable_view({:count=>@count,:datas=>@datas}) do |builder|%>
    <% builder.column(:id,{:title=>t(:operation), :width => "130px"}) do |data|%>
        <a onclick="fillInput(this)" style="cursor: pointer;text-decoration: none;" id="<%=data[:id]%>" name="<%=data[:full_name]%>">选择</a>
    <% end %>
    <% builder.column(:full_name,{:title=>t(:label_irm_person_login), :width => "50%", :searchable=>true}) do |data|%>
        <%="#{data[:full_name]}(#{data[:consultant_no]})"%>
    <% end %>
<% end %>
<script>
    function fillInput(arg){
        $("#parent_no,#parent_no_label").val(arg.name)
        $("#peopleNoModal").modal("hide")
    }
</script>
