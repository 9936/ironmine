<table  class="form-table">
  <tbody>
    <!-- 公司名称 -->
    <tr>
      <td class="label-col"><label>邮箱</label></td>
      <td class="data-col"><%= text_field_tag(:email_address,'',:value => program_params[:email_address],:name=>"program_params[email_address]")%></td>
      <td class="label-col"></td>
      <td class="data-col"></td>
    </tr>
    <tr>
      <td class="label-col"><label>登录名</label></td>
      <td class="data-col"><%= text_field_tag(:login_name,'',:value => program_params[:login_name],:name=>"program_params[login_name]")%></td>
      <td class="label-col"></td>
      <td class="data-col"></td>
    </tr>
    <tr>
      <td class="label-col"><label>简档</label></td>
      <td class="data-col">
        <%=select_tag_alias :job_name, nullable_options_for_select(available_profile_name,program_params[:job_name]),{
                                                   :name=>"program_params[job_name]",
                                                   :id=>"job_name"
                                           }%>
      </td>
      <td class="label-col"></td>
      <td class="data-col"></td>
    </tr>
    <tr>
      <td class="label-col"><label>公司名称</label></td>
      <td class="data-col">
        <!-- 空的内容请选择                             这里的值赋给请选择   页面刷新后还保留这个参数-->
          <%= select_tag_multiple(
                      "program_params[com_name][]",
                      nullable_options_for_select(available_company_name, program_params[:com_name]),
                      "program_params[com_name_mul]",
                      program_params[:com_name_mul] ? program_params[:com_name_mul] : 'N')%>
                                            <!-- 下拉框是张还是合  并且只能在此ctrl多选-->
      </td>
      <td class="label-col"></td>
      <td class="data-col"></td>
    </tr>
    <tr>
      <td class="label-col"><label>最后登录时间</label></td>
      <td class="data-col">
        <%= date_field_tag(:start_date,:value => program_params[:start_date],:id=>"last_login_at",:name=>"program_params[start_date]",:size=>12,:nobutton=>true)%>
        <label for="filterDateTo"><%= t(:label_irm_report_filter_date_to) %></label>
        <%= date_field_tag(:end_date,:value => program_params[:end_date],:id=>"last_login_at",:name=>"program_params[last_login_at]",:size=>12,:nobutton=>true)%>
      </td>
      <td class="label-col"></td>
      <td class="data-col"></td>
    </tr>
    <tr>
      <td class="label-col"><label>语言选择</label></td>
      <td class="data-col">
        <%= check_box_tag("program_params[language_id_zh]","zh",true) %><%= label_tag(:language_id_zh, "中文") %>
        <%= check_box_tag("program_params[language_id_en]","en") %><%= label_tag(:language_id_en, "英文") %>
        <%= check_box_tag("program_params[language_id_ja]","ja") %><%= label_tag(:language_id_ja, "日文") %>
      </td>
      <td class="label-col"></td>
      <td class="data-col"></td>
    </tr>
    <tr>
      <td class="label-col"><label>性别选择</label></td>
      <td class="data-col">
        <%= radio_button_tag("program_params[sex]", "1",true) %><%= label_tag(:sex, "男") %>
        <%= radio_button_tag("program_params[sex]", "2") %><%= label_tag(:sex, "女") %>
      </td>
      <td class="label-col"></td>
      <td class="data-col"></td>
    </tr>

    </tr>
  </tbody>
</table>