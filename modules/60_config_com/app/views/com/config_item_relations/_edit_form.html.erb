<%= form_for(@config_item_relation,:url=>{:action=>"update"},:builder => CustomFormBuilder) do |f| %>
  <% content_for :form_block_common   do%>
    <table class="form-table">
      <tbody>
          <tr>
            <td class="label-col"><label><%=(t :label_com_config_item)%></label></td>
            <td class="data-col"><label><%=@config_item[:item_number]%></label></td>
            <td class="label-col"><%=f.hidden_field :config_item_id,:value=>@config_item[:id] %></td>
            <td class="data-col"></td>
          </tr>
          <tr>
            <td class="label-col"><label><%=(t :label_com_config_relation_type)%></label></td>
            <td class="data-col"><%= f.select :config_relation_type_id, nullable_options_for_select(available_config_relation_type, @config_item_relation.config_relation_type_id )%></td>
            <td class="label-col"></td>
            <td class="data-col"></td>
          </tr>
          <tr>
            <td class="label-col"><label><%=(t :label_com_config_item_relation_config_item)%></label></td>
            <td class="data-col"><%= f.select :relation_config_item_id, nullable_options_for_select(available_config_item(@config_item), @config_item_relation.relation_config_item_id )%></td>
            <td class="label-col"></td>
            <td class="data-col"></td>
          </tr>
          <tr>
            <td class="label-col"><label><%=t(:description)%></label></td>
            <td class="data-3col"><%=f.text_area :description,:rows=>4,:cols=>60 %></td>
          </tr>
      </tbody>
    </table>
  <% end %>
  <% content_for :form_buttons  do %>
    <%= link_submit t(:save),{:class=>"btn btn-primary"}%>
    <%= link_back t(:cancel),{},{:class=>"btn cancel"}%>
  <% end %>

  <!--页面结构-->
  <div class="page-block">
    <table class="page-block-header"><tr>
      <td class="page-block-title">
        <h2 class="block-title"><%=t(:label_com_config_item_relation)%></h2>
      </td>
      <td class="page-block-button">
        <%= content_for :form_buttons   %>
      </td>
    </tr></table>
    <%= error_for @config_item_relation %>
    <div class="page-block-body">
      <div class="sub-page-block">
        <div class="sub-page-block-header">
          <%= form_require_info %>
          <h3 class="sub-page-block-title"><%= t(:label_common_info) %></h3>
        </div>
        <div class="sub-page-block-body">
          <%= content_for :form_block_common   %>
        </div>
      </div>

    </div>

    <table class="page-block-footer"><tr>
      <td class="page-block-title">
      </td>
      <td class="page-block-button">
        <%= content_for :form_buttons   %>        
      </td>
    </tr></table>
  </div>
<% end %>

