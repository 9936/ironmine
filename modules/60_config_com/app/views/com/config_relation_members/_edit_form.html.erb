<%= form_for(@config_relation_member,:url=>{:action=>"update"},:builder => CustomFormBuilder) do |f| %>
  <%=f.hidden_field :config_relation_type_id %>
  <% content_for :form_block_common   do%>
    <table class="form-table">
      <tbody>
        <tr>
            <td class="label-col"><label><%=(t :label_com_config_relation_type_name)%></label></td>
            <td class="data-col"><label><%=@config_relation_member[:type_name]%></label></td>
            <td class="label-col"></td>
            <td class="data-col"></td>
        </tr>
        <tr>
            <td class="label-col"><label><%=(t :label_com_config_relation_member_class_name)%></label></td>
            <td class="data-col"><%= f.select :config_class_id, nullable_options_for_select(available_config_class, @config_relation_member.config_class_id),{}, {:require=>true} %></td>
            <td class="label-col"></td>
            <td class="data-col"></td>
        </tr>
      </tbody>
    </table>
  <% end %>

  <% content_for :form_buttons  do %>
    <%= link_submit t(:save),{:class=>"btn btn-primary"}%>
    <%= link_back t(:cancel),{},{:class => "btn cancel"}%>
  <% end %>

  <!--页面结构-->
  <div class="page-block">
    <table class="page-block-header">
      <tr>
        <td class="page-block-title">
          <h2 class="block-title"><%=t(:label_com_config_relation_member)%></h2>
        </td>
        <td class="page-block-button">
          <%= content_for :form_buttons   %>
        </td>
      </tr>
    </table>
    <div class="page-block-body">
      <div class="sub-page-block">
        <!-- 一般信息 -->
        <div class="sub-page-block-header">
          <%= form_require_info %>
          <h3 class="sub-page-block-title"><%=t(:label_common_info)%></h3>
        </div>
        <div class="sub-page-block-body">
          <%= content_for :form_block_common   %>
        </div>
      </div>
    </div>
    <table class="page-block-footer">
      <tr>
        <td class="page-block-title"></td>
        <td class="page-block-button">
          <%= content_for :form_buttons   %>
        </td>
      </tr>
    </table>
  </div>
<% end %>