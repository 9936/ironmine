<div class="listRelatedObject setupBlock">
    <div class="page-block">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_multilingual_fields) %></h2></td>
              <td class="pbButton">
                <div class="button"><%= link_to t(:edit), {:action => "multilingual_edit", :id => main_data.id}%></div>
              </td>
              <td class="pbHelp">
                <div></div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
        <div class="datatable">
           <!--  irm datatable      -->
           <div class="irm-datatable">
             <div>
                 <table count="<%=@count%>">
                   <thead>
                     <tr>
                       <th style="width:40px;">
                         <div><%=t(:label_multilingual_language)%></div>
                       </th>
                       <%main_data.multilingual_options[:columns].each do |attr|%>
                         <th>
                           <div>
                              <%=t("label_#{ActiveModel::Naming.singular(main_data)}_#{attr}")%>
                           </div>
                         </th>
                       <%end%>
                       <th style="width:30px;">
                         <div><%=t(:label_multilingual_source_lang)%></div>
                       </th>
                     </tr>
                   </thead>
                   <tbody>
                       <% main_data.send(main_data.multilingual_options[:lang_relation].to_sym).each do |ml| %>
                         <tr>
                           <td>
                             <div ><%=language_code_meaning(ml.language)%></div>
                           </td>
                           <%main_data.multilingual_options[:columns].each do |attr|%>
                             <td >
                               <div ><%=ml.send(attr.to_sym) %></div>
                             </td>
                           <% end -%>
                           <td>
                             <div><%=language_code_meaning(ml.source_lang)%></div>
                           </td>
                         </tr>
                       <% end -%>
                   </tbody>
                 </table>
             </div>
           </div>
          <!--  end irm datatable      -->
        </div>
    </div>
  </div>
</div>