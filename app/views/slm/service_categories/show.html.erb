<%= page_title %>
<!--页面结构-->
<div class="show-block">
  <table class="page-block-header"><tr>
    <td class="page-block-title">
      <h2 class="block-title"><%= t(:label_slm_service_category_show) %></h2>
    </td>
    <td class="page-block-button">
      <%= link_to t(:edit), {:action => "edit", :id =>  @service_category},:class=>"btn btn-primary"%>
      <%= link_to t(:new), {:action => "new"},:class=>"btn"%>
      <%= link_to t(:back), {:action => "index"},:class=>"btn"%>
    </td>
  </tr></table>
  <div class="page-block-body">
    <table class="show-table">
      <tbody>
          <tr>
            <td class="label-col"><label for="service_category_service_category_code"><%=t(:label_slm_service_category_category_code)%></label></td>
            <td class="data-col"><%=@service_category.category_code%></td>
            <td class="label-col empty">&nbsp;</td>
            <td class="data-col empty">&nbsp;</td>
          </tr>
          <tr>
            <td class="label-col"><label for="service_category_system_name"><%=t(:label_slm_service_category_name)%></label></td>
            <td class="data-col"><%=@service_category[:name]%></td>
            <td class="label-col empty">&nbsp;</td>
            <td class="data-col empty">&nbsp;</td>
          </tr>
          <tr>
            <td class="label-col"><label for="service_category_system_description"><%=t(:label_slm_service_category_description)%></label></td>
            <td class="data-col"><%= @service_category[:description]%></td>
            <td class="label-col empty">&nbsp;</td>
            <td class="data-col empty">&nbsp;</td>
          </tr>
          <tr>
            <td class="label-col"><label for="service_category_system_description"><%=t(:label_slm_service_category_status_meaning)%></label></td>
            <td class="data-col"><%= @service_category[:status_meaning]%></td>
            <td class="label-col empty">&nbsp;</td>
            <td class="data-col empty">&nbsp;</td>
          </tr>
      </tbody>
    </table>
  </div>
</div>
