<%= page_title %>
<div class="listRelatedObject setupBlock">
    <div class="page-block">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_slm_service_catalog_list) %></h2></td>
              <td id="topButtonRow" class="pbButton">
                <div class="button"><%= link_to t(:new), {:action => "new"}%></div>
              </td>
              <td class="pbHelp">
                <div id="service_catalogsSearchBox"></div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
        <div id="service_catalogs" class="datatable" style="width:100%">
          <div id="id" style="display:none">
            <%= link_to(t(:edit),{:action=>"edit",:id=>"{id}"}) %>|<%= link_to(t(:show),{:action=>"show",:id=>"{id}"}) %>
          </div>
        </div>
        <%= datatable("service_catalogs",url_for(:action=>"get_data",:format=>"json"),
                      [{:key=>"id",:label=>t(:operation),:formatter=>"Y.irm.template",:width=>"80px"},
                       { :key => "catalog_code", :label => t(:label_slm_service_catalog_catalog_code),:searchable=>true },
                       { :key => "name", :label => t(:label_slm_service_catalog_name),:searchable=>true },
                       { :key => "parent_catalog_name", :label => t(:label_slm_service_catalog_parent_catalog),:searchable=>true },
                       { :key => "description", :label => t(:label_slm_service_catalog_description) },
                       { :key => "status_meaning", :label => t(:label_slm_service_catalog_status_meaning)}
                       ],{:row_perpage=>10,:search_box=>"service_catalogsSearchBox",:paginator_box=>"service_catalogsPaginatorBox"})%>
        <div id="service_catalogsPaginatorBox"></div>
      </div>
    </div>
</div>


