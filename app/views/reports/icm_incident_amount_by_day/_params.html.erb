<% require_javascript(:datepicker) %>
<% require_css(:datepicker) %>
<table cellpadding="0" cellspacing="0" border="0" id="baseFilter">
  <tbody>
    <tr>
      <td width="30%"></td>
      <td>
        <fieldset>
          <legend>
            <%= t(:label_irm_report_time_range) %>
          </legend>
          <table>
            <tr>
              <td>
                <label for="filterDateFrom"><%= t(:label_irm_report_filter_date_from) %></label>
                <%= text_field_tag(:date_from,program_params[:date_from],:id=>"filterDateFrom",
                                   :name=>"program_params[date_from]",:size=>12,:class=>"date")%>
              </td>
              <td>
                <label for="filterDateTo"><%= t(:label_irm_report_filter_date_to) %></label>
                <%= text_field_tag(:date_to,program_params[:date_to],:id=>"filterDateTo",
                                   :name=>"program_params[date_to]",:size=>12,:class=>"date")%>
              </td>
            </tr>
          </table>
        </fieldset>
      </td>
    </tr>
  </tbody>
</table>