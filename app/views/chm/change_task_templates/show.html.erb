<%= common_title(:show_data=>@change_task_template[:name]) %>
<div id="ep" class="detail-block page-block">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_chm_change_task_template_show) %>&nbsp;<%= t(:label_detail_info) %></h2></td>
          <td  class="pbButton">
            <div class="button"><%= link_to t(:edit), {:action => "edit", :id => @change_task_template}%></div>
            <div class="button"><%= link_to t(:new), {:action => "new"}%></div>
            <div class="button"><%= link_to t(:back), {:action => "index"}%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <div class="pbSubsection">
      <table class="detailList infoList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
                <tr>
                  <td class="labelCol"><label for="code"><%=t(:code)%></label></td>
                  <td class="dataCol"><%=@change_task_template.code%></td>
                  <td class="labelCol empty">&nbsp;</td>
                  <td class="dataCol empty">&nbsp;</td>
                </tr>
                <tr>
                  <td class="labelCol"><label for="name"><%=t(:name)%></label></td>
                  <td class="dataCol"><%=@change_task_template[:name]%></td>
                  <td class="labelCol empty">&nbsp;</td>
                  <td class="dataCol empty">&nbsp;</td>
                </tr>

                <tr>
                  <td class="labelCol"><label for="description"><%=t(:description)%></label></td>
                  <td class="dataCol" colspan="3" width="82%"><%=@change_task_template[:description]%></td>
                </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%= page_block("showTask") do |pb| %>
    <%= pb.page_block_header({:title=>t(:label_chm_change_template_task)}) do%>
      <td  class="pbButton">
        <div class="button"><%= link_to t(:new), {:controller=>"chm/change_template_tasks",:action => "new",:source_id=>@change_task_template.id,:back_url=>url_for({})}%></div>
      </td>
      <td class="pbHelp">
      </td>
    <% end %>

    <%= pb.page_block_body do %>
        <%= render :partial=>"tasks",:locals=>{:datas=>change_template_tasks(@change_task_template.id)} %>
    <% end %>
<% end %>

<%=render :partial=>"multilingual/show",:locals=>{:main_data=>@change_task_template} %>