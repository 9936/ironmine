<%= common_title(:show_data=>@change_task_template[:name]) %>
<!--页面结构-->
<div class="show-block">
  <table class="page-block-header"><tr>
    <td class="page-block-title">
      <h2 class="block-title"><%= t(:label_chm_change_task_template_show) %>&nbsp;<%= t(:label_detail_info) %></h2>
    </td>
    <td class="page-block-button">
      <%= link_to t(:edit), {:action => "edit", :id => @change_task_template},:class=>"btn btn-primary"%>
      <%= link_to t(:new), {:action => "new"},:class=>"btn"%>
      <%= link_to t(:back), {:action => "index"},:class=>"btn" %>
    </td>
  </tr></table>
  <div class="page-block-body">
    <table class="show-table">
      <tbody>
          <tr>
            <td class="label-col"><label for="code"><%=t(:code)%></label></td>
            <td class="data-col"><%=@change_task_template.code%></td>
            <td class="label-col empty">&nbsp;</td>
            <td class="data-col empty">&nbsp;</td>
          </tr>
          <tr>
            <td class="label-col"><label for="name"><%=t(:name)%></label></td>
            <td class="data-col"><%=@change_task_template[:name]%></td>
            <td class="label-col empty">&nbsp;</td>
            <td class="data-col empty">&nbsp;</td>
          </tr>
          <tr>
            <td class="label-col"><label for="description"><%=t(:description)%></label></td>
            <td class="data-col" colspan="3" width="82%"><%=@change_task_template[:description]%></td>
          </tr>
      </tbody>
    </table>
  </div>
</div>
<!--页面结构-->
<div class="page-block">
  <table class="page-block-header">
    <tr>
      <td class="page-block-title">
        <h2 class="block-title"><%= t(:label_chm_change_template_task) %></h2>
      </td>
      <td class="page-block-button">
        <%= link_to t(:new), {:controller=>"chm/change_template_tasks",:action => "new",:source_id=>@change_task_template.id,:back_url=>url_for({})},:class=>"btn"%>
      </td>
    </tr>
  </table>
  <div class="page-block-body">
    <div id="task_templates">
      <%= render :partial=>"tasks",:locals=>{:datas=>change_template_tasks(@change_task_template.id)} %>
    </div>
  </div>
</div>


