<style type="text/css">
  .no-line {
      border-top: none;
  }
</style>
<div class="page-block no-line">
  <table class="page-block-header">
    <tr>
      <td class="page-block-title">
        <h2 class="block-title"><%= @change_task_template[:name] %></h2>
      </td>
    </tr>
  </table>
  <div class="page-block-body">
    <table class="show-table">
      <tbody>
          <tr>
            <td class="label-col"><label for="code"><%=t(:code)%></label></td>
            <td class="data-col"><%=@change_task_template.code%></td>
            <td class="label-col empty">&nbsp;</td>
            <td class="data-col empty">&nbsp;</td>
          </tr>
          <tr>
            <td class="label-col"><label for="name"><%=t(:name)%></label></td>
            <td class="data-col"><%=@change_task_template[:name]%></td>
            <td class="label-col empty">&nbsp;</td>
            <td class="data-col empty">&nbsp;</td>
          </tr>

          <tr>
            <td class="label-col"><label for="description"><%=t(:description)%></label></td>
            <td class="data-col" colspan="3" width="82%"><%=@change_task_template[:description]%></td>
          </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="page-block">
  <table class="page-block-header">
    <tr>
      <td class="page-block-title">
        <h2 class="block-title"><%= t(:label_chm_change_template_task) %></h2>
      </td>
    </tr>
  </table>
  <div class="page-block-body">
    <%= render :partial=>"show_tasks",:locals=>{:datas=>change_template_tasks(@change_task_template.id)} %>
  </div>
</div>
