<%= common_title(:show_data=>@change_priority[:name]) %>
<div id="ep" class="detail-block page-block">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_chm_change_urgency_show) %>&nbsp;<%= t(:label_detail_info) %></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= link_to t(:edit), {:action => "edit", :id => @change_priority}%></div>
            <div class="button"><%= link_to t(:new), {:action => "new"}%></div>
            <div class="button"><%= link_to t(:back), {:action => "index"}%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <div class="pbSubsection">
      <table class="detailList infoList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
                <tr>
                  <td class="labelCol"><label for="code"><%=t(:code)%></label></td>
                  <td class="dataCol"><%=@change_priority.code%></td>
                  <td class="labelCol empty">&nbsp;</td>
                  <td class="dataCol empty">&nbsp;</td>
                </tr>
                <tr>
                  <td class="labelCol"><label for="name"><%=t(:name)%></label></td>
                  <td class="dataCol"><%=@change_priority[:name]%></td>
                  <td class="labelCol empty">&nbsp;</td>
                  <td class="dataCol empty">&nbsp;</td>
                </tr>
                <tr>
                  <td class="labelCol"><label for="display_sequence"><%=t(:label_chm_change_priority_weight_values)%></label></td>
                  <td class="dataCol"><%=@change_priority.weight_values%></td>
                  <td class="labelCol empty">&nbsp;</td>
                  <td class="dataCol empty">&nbsp;</td>
                </tr>
                <tr>
                  <td class="labelCol"><label for="description"><%=t(:description)%></label></td>
                  <td class="dataCol" colspan="3" width="82%"><%=@change_priority[:description]%></td>
                </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%=render :partial=>"multilingual/show",:locals=>{:main_data=>@change_priority} %>