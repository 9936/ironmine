<%= page("newTaskPhase") do |p| %>
    <%= p.page_header({:title_options=>{:action_meaning=>t(:label_chm_change_task_template_new)}}) %>
    <%= p.page_body do %>
        <%= form_for(@change_task,:url=>{:action=>"template_create"},:builder => LabellingFormBuilder) do |f| %>
            <%= page_block("newImpact") do |pb|%>
                <%= pb.page_block_header(:title=>t(:label_chm_change_task_template_new)) do %>
                  <td id="topButtonRow" class="pbButton">
                    <div class="button"><%= link_submit t(:save)%></div>
                    <div class="button"><%= link_back t(:cancel)%></div>
                  </td>
                  <td class="pbHelp">
                  </td>

                <% end %>
               <%= pb.page_block_body do %>
                    <%= error_for @change_task%>
                    <%= sub_page_block("baseInfo") do |spb|%>
                        <%= f.hidden_field :source_id %>
                        <%= f.hidden_field :source_type %>
                        <%= spb.sub_page_block_header(:title=>t(:label_common_info),:first=>true)%>
                        <%= spb.sub_page_block_body do %>
                            <table class="detailList" cellpadding="0" cellspacing="0" border="0">
                              <tbody>
                                <tr>
                                  <td class="labelCol empty"><label for="status_code"><%=(t :label_chm_change_task_change_task_template)%></label></td>
                                  <td class="dataCol"><%=f.select :change_task_phase_id, options_for(Chm::ChangeTaskTemplate),{},{:id=>"taskPhase",:required=>true}%></td>
                                  <td class="labelCol"></td>
                                  <td class="dataCol"></td>
                                </tr>

                              </tbody>
                            </table>
                        <% end %>
                  <% end %>
                </div>
                <%= pb.page_block_footer do %>
                  <td id="topButtonRow" class="pbButton">
                    <div class="button"><%= link_submit t(:save)%></div>
                    <div class="button"><%= link_back t(:cancel)%></div>
                  </td>
                <% end %>
            <% end %>
            <% end %>
        <% end %>
        <%= page_block("templateInfo") do |pb|%>
            <%= pb.page_block_header(:title=>t(:label_chm_change_task_template)) %>
            <%= pb.page_block_body do %>
                <div id="showInfo" href="<%= url_for({:controller => "chm/change_task_templates",:action=>"show_tasks",:id=>"{template_id}"}) %>"></div>
            <% end %>
        <% end %>
    <% end %>
<% end %>
<script>
  $("#taskPhase").change(function(e){
      $("#templateInfoBlock").css("display","none");
      if(e.target.value){
          var url = decodeURIComponent($("#showInfo").attr("href"));
          url = url.replace("{template_id}",e.target.value);
          $("#showInfo").load(url);
          $("#templateInfoBlock").css("display","");
      }else{
          $("#showInfo").html("");
      }
  });
  $("#taskPhase").trigger("change");
</script>