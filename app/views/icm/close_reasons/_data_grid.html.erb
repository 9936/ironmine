    <div id="data_area">
        <div class="containerheader">
           <div class="floatleft headertitle"><%=t(:label_icm_close_reason_list)%></div>
        </div>
        <div id="close_reasons_grid" class="datagrid"
            action_type="ajaxDhtmlxGrid"
            grid_header=" , <%=t(:label_icm_close_reason_company)%>,<%=t(:label_icm_close_reason_name)%>,
            <%=t(:label_icm_close_reason_close_code)%>,<%=t(:label_icm_close_reason_category)%>,<%=t(:multilingual)%>"
            grid_width="20,100,100,100,100,80"
            grid_col_types="ra,ro,ro,ro,ro,link"
            grid_onRowDblClicked="dblClickHandler"
            grid_OnRowSelected="rowSelectedHandler"
            grid_paging_skin="bricks"
            enable_paging="true, 15, null, 'pagingArea', true, 'infoArea'"
            grid_load="'<%= url_for(:action => "get_data", :controller => "icm/close_reasons", :format=>:json) %>',function(){init('#close_reasons_grid');},'json'">
        </div>
        <span id="infoArea"></span>
        <span id="recfound"></span>
        <script>
            function dblClickHandler(rId, cInd){
                processDblClicked("container1","close_reason_edit","<%= url_for(:action => "edit", :controller => "icm/close_reasons", :id => ":id") %>", rId);
            }
            function rowSelectedHandler(id, ind){
                dhtmlx_grid_array['close_reasons_grid'].cells(id, 0).setValue("1");
            }
        </script>
        <div class="containerfooter">
          <span id="pagingArea"></span>
        </div>
    </div>