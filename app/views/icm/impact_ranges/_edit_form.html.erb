<%= common_title(:show_data=>@impact_range[:name]) %>

<%= form_for(@impact_range,:url=>{:action=>"update"},:builder => CustomFormBuilder) do |f| %>
  <% content_for :form_block_common   do%>
    <table class="form-table">
      <tbody>
          <tr>
            <td class="label-col"><label for="impact_range_impact_code"><%=(t :label_icm_impact_range_impact_code)%></label></td>
            <td class="data-col"><label><%=@impact_range.impact_code%></label></td>
            <td class="label-col"></td>
            <td class="data-col"></td>
          </tr>
          <tr>
            <td class="label-col"><label for="impact_range_name"><%=(t :label_icm_impact_range_name)%></label></td>
            <td class="data-col"><%=f.text_field :name, :required=>true,:id=>"impact_range_name"%></td>
            <td class="label-col"></td>
            <td class="data-col"></td>
          </tr>
          <tr>
            <td class="label-col"><label for="impact_range_display_sequence"><%=(t :display_sequence)%></label></td>
            <td class="data-col"><%=f.text_field :display_sequence, :required=>true,:id=>"impact_range_display_sequence"%></td>
            <td class="label-col"></td>
            <td class="data-col"></td>
          </tr>
          <tr>
            <td class="label-col"><label for="impact_range_default_flag"><%=(t :default_flag)%></label></td>
            <td class="data-col"><%=f.check_box :default_flag,:id=>"impact_range_default_flag"%></td>
            <td class="label-col"></td>
            <td class="data-col"></td>
          </tr>
          <tr>
            <td class="label-col"><label for="impact_range_description"><%=t(:label_icm_impact_range_description)%></label></td>
            <td class="data-col"><%= f.text_area :description, :rows => 4,:id=>"impact_range_description",:class=>"input-xlarge"%></td>
            <td class="label-col"></td>
            <td class="data-col"></td>
          </tr>
          <tr>
            <td class="label-col empty"><label for="status_code"><%=(t :status)%></label></td>
            <td class="data-col"><%=f.select :status_code, available_active_status%></td>
            <td class="label-col"></td>
            <td class="data-col"></td>
          </tr>
      </tbody>
    </table>
  <% end %>

  <% content_for :form_buttons  do %>
    <%= link_submit t(:save),{:class=>"btn btn-primary"}%>
    <%= link_to t(:cancel), {:action => "index"}, {:class => "btn cancel"}%>
  <% end %>

  <!--页面结构-->
  <div class="page-block">
    <table class="page-block-header">
      <tr>
        <td class="page-block-title">
          <h2 class="block-title"><%=t(:label_icm_impact_range_edit)%></h2>
        </td>
        <td class="page-block-button">
          <%= content_for :form_buttons   %>
        </td>
      </tr>
    </table>
    <%= error_for @impact_range %>
    <div class="page-block-body">
      <div class="sub-page-block">
        <!-- 一般信息 -->
        <div class="sub-page-block-header">
          <%= form_require_info %>
          <h3 class="sub-page-block-title"><%= t(:label_common_info) %></h3>
        </div>
        <div class="sub-page-block-body">
          <%= content_for :form_block_common   %>
        </div>
      </div>
    </div>
    <table class="page-block-footer">
      <tr>
        <td class="page-block-title"></td>
        <td class="page-block-button">
          <%= content_for :form_buttons   %>
        </td>
      </tr>
    </table>
  </div>
<% end %>

