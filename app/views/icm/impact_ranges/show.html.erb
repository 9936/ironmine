<%= common_title(:show_data=>@impact_range[:name]) %>

<!--页面结构-->
<div class="show-block">
  <table class="page-block-header"><tr>
    <td class="page-block-title">
      <h2 class="block-title"><%= t(:label_icm_impact_range) %></h2>
    </td>
    <td class="page-block-button">
      <%= link_to t(:edit), {:action => "edit", :id => @impact_range},:class=>"btn btn-primary"%>
      <%= link_to t(:new), {:action => "new"},:class=>"btn"%>
      <%= link_to t(:back), {:action => "index"},:class=>"btn" %>
    </td>
  </tr></table>
  <div class="page-block-body">
    <table class="show-table">
      <tbody>
          <tr>
            <td class="label-col"><label><%=(t :label_icm_impact_range_impact_code)%></label></td>
            <td class="data-col"><%= @impact_range.impact_code%></td>
            <td class="label-col"></td>
            <td class="data-col"></td>
          </tr>
          <tr>
            <td class="label-col"><label><%=(t :label_icm_impact_range_name)%></label></td>
            <td class="data-col"><%= @impact_range[:name]%></td>
            <td class="label-col"></td>
            <td class="data-col"></td>
          </tr>
          <tr>
            <td class="label-col"><label><%=(t :label_icm_impact_range_weight_values)%></label></td>
            <td class="data-col"><div><%= @impact_range.weight_values%></div></td>
             <td class="label-col"></td>
            <td class="data-col"></td>
          </tr>
          <tr>
            <td class="label-col"><label ><%=(t :display_sequence)%></label></td>
            <td class="data-col"><%= @impact_range[:display_sequence]%></td>
             <td class="label-col"></td>
            <td class="data-col"></td>
          </tr>
          <tr>
            <td class="label-col"><label ><%=(t :default_flag)%></label></td>
            <td class="data-col"><%= check_img(@impact_range[:default_flag])%></td>
            <td class="label-col"></td>
            <td class="data-col"></td>
          </tr>
          <tr>
            <td class="label-col"><%=t(:label_icm_impact_range_description)%></td>
            <td class="data-col"><div><%= @impact_range[:description]%></div></td>
            <td class="label-col empty">&nbsp;</td>
            <td class="data-col empty">&nbsp;</td>
          </tr>
      </tbody>
    </table>
  </div>
</div>
<%=render :partial=>"multilingual/show",:locals=>{:main_data=>@impact_range} %>