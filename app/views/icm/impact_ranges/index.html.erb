<%= page_title %>
<div class="listRelatedObject setupBlock">
    <div class="bPageBlock">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_icm_impact_range_list) %></h2></td>
              <td id="topButtonRow" class="pbButton">
                <div class="button"><%= link_to t(:new), {:action => "new"}%></div>
              </td>
              <td class="pbHelp">
                <div id="impactRangesSearchBox"></div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
        <div id="pizza" class="datatable" style="width:100%">
          <div id="id" style="display:none">
            <%= link_to(t(:edit),{:action=>"edit",:id=>"{id}"}) %>|<%= link_to(t(:show),{:action=>"show",:id=>"{id}"}) %>
          </div>
        </div>
        <%= datatable("pizza",url_for(:action=>"get_data",:format=>"json"),
                      [{:key=>"id",:label=>t(:operation),:formatter=>"Y.irm.template",:width=>"70px"},
                       {:key=>"company_name",:label=>t(:label_icm_impact_range_company),:sortable=>true,:searchable=>true},
                       {:key=>"name",:label=>t(:label_icm_impact_range_name),:sortable=>true,:searchable=>true},
                       {:key=>"impact_code",:label=>t(:label_icm_impact_range_impact_code),:sortable=>true,:searchable=>true},
                       {:key=>"weight_values",:label=>t(:label_icm_impact_range_weight_values),:sortable=>true},
                       {:key=>"display_sequence",:label=>t(:display_sequence),:sortable=>true},
                       {:key=>"default_flag",:label=>t(:default_flag),:sortable=>true,:searchable=>true},
                       {:key=>"status_meaning",:label=>t(:label_irm_script_status_code),:width=>"70px"}
                       ],{:row_perpage=>5,:search_box=>"impactRangesSearchBox"})%>
      </div>
    </div>
</div>
