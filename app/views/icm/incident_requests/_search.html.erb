<div class="sub-block">
    <h3 class="lbHeader"></h3>
    <table cellpadding="0" cellspacing="0" border="0" style="width:100%">
      <tbody>
        <tr>
          <td class="pbTitle"><h3 class="lbHeader"><%= t(:label_icm_incident_request_list) %></h3></td>
          <td id="topButtonRow" class="pbButton">
          </td>
          <td class="pbHelp">
          </td>
        </tr>
      </tbody>
    </table>
    <div class="lbBody">
        <div class="datatable">
          <div class="yui3-widget yui3-datatable">
            <div class="yui3-datatable-content">
                <table id='rows' cellspacing="0" cellpadding="0" class='grid'>
                  <thead class="yui3-datatable-columns">
                    <tr class="yui3-datatable-first yui3-datatable-last">
                      <th class="yui3-column" style="width:40px">
                        <div class="yui3-datatable-liner">#</div>
                      </th>
                      <th class="yui3-column" style="width:180px;">
                        <div class="yui3-datatable-liner"><%= t(:label_icm_incident_request_title) %>
                        </div>
                      </th>
                      <th class="yui3-column" style="width:180px;">
                        <div class="yui3-datatable-liner"><%= t(:label_icm_incident_request_organization) %>
                        </div>
                      </th>
                      <th class="yui3-column" style="width:180px;">
                        <div class="yui3-datatable-liner"><%= t(:label_icm_incident_request_requested_by) %>
                        </div>
                      </th>
                    </tr>
                  </thead>
                  <tbody class="yui3-datatable-data">
                  <% results.each do |r| %>
                  <tr id="<%=r.id%>" class="yui3-datatable-even">
                    <td class="yui3-column">
                      <div class='yui3-datatable-liner'>
                        <%= r[:request_number] %>
                       </div>
                    </td>
                    <td class="yui3-column">
                      <div class='yui3-datatable-liner'>
                          <%=link_to r[:title], {:controller => "icm/incident_journals", :action => "new", :request_id =>r[:id]}%>
                       </div>
                    </td>
                    <td class="yui3-column">
                      <div class='yui3-datatable-liner'>
                        <%=r[:organization_name]%>
                      </div>
                    </td>
                    <td class="yui3-column">
                      <div class='yui3-datatable-liner'>
                        <%=r[:requested_name]%>
                      </div>
                    </td>
                  </tr>
                  <% end -%>
                  </tbody>
                </table>
            </div>
          </div>
        </div>
    </div>
</div>
