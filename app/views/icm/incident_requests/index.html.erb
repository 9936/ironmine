<%= app_title %>
<%= view_filter("ICM_INCIDENT_REQUEST_INDEX_A","incident_requests") %>
<div class="listRelatedObject setupBlock">
    <div class="bPageBlock">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_icm_incident_request_list) %></h2></td>
              <td id="topButtonRow" class="pbButton">
                <div class="button"><%= link_to t(:new), {:action => "new"}%></div>
              </td>
              <td class="pbHelp">
                <div id="incident_requestsSearchBox"></div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
        <div id="incident_requests" class="datatable" style="width:100%">
          <div id="id" style="display:none">
            <%= link_to(t(:edit),{:action=>"edit",:id=>"{id}"}) %>&nbsp;&nbsp;<%= link_to(t(:label_icm_reply),{:controller=>"icm/incident_journals",:action=>"new",:request_id=>"{id}"}) %>
          </div>
        </div>
        <%= datatable("incident_requests",url_for(:action=>"get_data",:format=>"json"),
                      [{:key=>"id",:label=>t(:operation),:formatter=>"Y.irm.template",:width=>"80px"},
                       { :key => "request_number", :label => t(:label_icm_incident_request_request_number),:searchable=>true,:width=>"120px"},
                       { :key => "title", :label => t(:label_icm_incident_request_title),:searchable=>true },                                            
                       { :key => "incident_status_name", :label => t(:label_icm_incident_request_incident_status_code,:searchable=>true) },
                       { :key => "service_name", :label => t(:label_icm_incident_request_service_code,:searchable=>true) },                       
                       { :key => "request_type_name", :label => t(:label_icm_incident_request_request_type_code,:searchable=>true) },
                       { :key => "requested_name", :label => t(:label_icm_incident_request_requested_by,:searchable=>true) },
                       { :key => "priority_name", :label => t(:label_icm_incident_request_priority,:searchable=>true) },
                       { :key => "report_source_name", :label => t(:label_icm_incident_request_report_source_code,:searchable=>true) },
                       ],{:row_perpage=>20,:search_box=>"incident_requestsSearchBox"})%>

      </div>
    </div>
</div>

<table class="toolsContent">
    <tbody>
        <tr>
          <td>
            <div class="toolsContentLeft">
              <div class="bSubBlock">
                <h3 class="lbHeader"><%= t(:report) %></h3>
                <div class="lbBody">
                  <ul>
                    <%= raw(show_module_report("INCIDENT_REQUEST")) %>
                  </ul>
                </div>
                <div class="lbBody">
                  <div class="mainLink">
                    <%= link_to t(:go_to_report),url_for(:controller=>"irm/report_lists",
                                                             :action => "index") %>
                  </div>
                </div>
              </div>
            </div>
          </td>
          <td>
            <div id="myDrag" class="toolsContentRight">
              <div class="bSubBlock">
                <h3 class="lbHeader">报表</h3>
                <div class="lbBody">
                  <ul>
                    <li><a href="javascript:void(0);">导入我的组织的客户 & 联系人</a></li>
                    <li><a href="javascript:void(0);">导入我的客户 & 联系人</a></li>
                    <li><a href="javascript:void(0);">批量删除客户</a></li>
                    <li><a href="javascript:void(0);">转移客户</a></li>
                    <li><a href="javascript:void(0);">合并客户</a></li>
                  </ul>
                </div>
              </div>
            </div>
          </td>
        </tr>
    </tbody>
</table>


