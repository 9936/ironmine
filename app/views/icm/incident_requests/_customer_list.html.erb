<div class="pbBody">
        <div id="incident_requests" class="datatable" style="width:100%">
          <div id="id" style="display:none">
            <%= link_to(t(:label_icm_reply),{:controller=>"icm/incident_journals",:action=>"new",:request_id=>"{id}"}) %>
          </div>
          <div id="title" style="display:none">
            if('{need_customer_reply}' == 'Y'){
               '<%= icon_link("btn_reply", t(:label_icm_reply),{:controller=>"icm/incident_journals",:action=>"new",:request_id=>"{id}"}) %>({incident_status_name})<%= link_to( "{title}",{:controller=>"icm/incident_journals",:action=>"new",:request_id=>"{id}"}) %>'
            }
            else{
              '({incident_status_name})<%= link_to( "{title}",{:controller=>"icm/incident_journals",:action=>"new",:request_id=>"{id}"}) %>'
            }
          </div>
        </div>
       <%= datatable("incident_requests",url_for(:action=>"get_data",:format=>"json"),
                      [{:key=>"id",:label=>t(:operation),:hidden=>true,:width=>"50px"},
                       { :key => "request_number", :label => t(:label_icm_incident_request_request_number_shot),:searchable=>true,:width=>"20px"},
                       { :key => "title",:formatter=>"Y.irm.stemplate",:label => t(:label_icm_incident_request_title),:searchable=>true },
                       { :key => "incident_status_name",:hidden=>true },
                       { :key => "need_customer_reply",:hidden=>true },
                       { :key => "last_response_date", :label => t(:label_icm_incident_request_last_date),:width=>"180px" },
                       { :key => "organization_name", :label => t(:label_icm_incident_request_organization),:width=>"120px"},
                       { :key => "external_system_name", :label => t(:label_irm_external_system),:width=>"180px" }
                       ],{:export_data=>"#incidentRequestExport",:not_load=>true,:row_perpage=>10,:search_box=>"incident_requestsSearchBox",:paginator_box=>'incidentRequestsPaginatorBox'})%>
      <div id="incidentRequestsPaginatorBox"></div>
</div>



