<%journals.each_with_index do |journal,index|  %>
 <div class="reply">
   <div id="journal_<%= journal.id %>" class="replyHeader">
     <h3><%= journal[:replied_name]  %> <%= t(:label_icm_reply_title,:message=>distance_of_time_in_words(Time.now, journal[:created_at])) %></h3>
   </div>
   <div class="replyHeaderSection">
     <div class="avatar">
       <img width="30" height="30" alt="" src="https://secure.gravatar.com/avatar/ed0ce2998995c2b649c31ca06a72dae4?s=140&d=https://d3nwyuy0nl342s.cloudfront.net%2Fimages%2Fgravatars%2Fgravatar-140.png">
     </div>
     <div class="message">
       <%= raw journal[:message_body]  %>
     </div>
   </div>
   <%= list_journal_files(grouped_files,journal) %>
 </div>
<%end %>