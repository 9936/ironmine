            Y.one("#entrySubsection").setStyle("display","");
            var datasource = Y.irm.entry_headers_listDatatable.datasource;
            datasource.query({entry_title:Y.one("#searchSKMText").get("value")});
        });

        Y.one("#searchSKMText").on("keydown",function(e){
          if(e.keyCode==13){
            Y.one("#searchSKM").simulate("click");
            e.preventDefault();
          }
        });
      })
    </script>
