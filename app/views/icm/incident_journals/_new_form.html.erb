  ul{
      padding-left: 40px;
  }
  ol{
      padding-left: 40px;
  }
  div.reply{
      margin-bottom: 2px;
      border: 1px solid #0F5C8E;
  }
  div.reply div.replyHeader{
      padding: 5px 5px 5px 5px;
      background: none repeat scroll 0 0 #ADCBE7;
  }
  div.reply div.replyHeaderSection{
    padding: 5px 5px 5px 5px;
  }
