<style type="text/css">
  ul{
      padding-left: 40px;
  }
  ol{
      padding-left: 40px;
  }
  div.reply{
      margin-bottom: 2px;
      border: 1px solid #0F5C8E;
  }
  div.reply div.replyHeader{
      padding: 5px 5px 5px 5px;
      background: none repeat scroll 0 0 #ADCBE7;
  }
  div.reply div.replyHeaderSection{
    padding: 5px 5px 5px 5px;
  }
  .yui-skin-sam .yui-toolbar-container div.yui-toolbar-subcont{
    border-bottom-width: 1px;
    padding-bottom: 0;
    padding-left: 1px;
  }
  div.fileList {
    color: #333333;
    line-height: 1.6em;
    margin-top: 5px;  
    margin-left: 5px;
    margin-right: 5px;
    overflow: hidden;
    position: relative;
    border-top: 2px solid #E3EEF8;  
  }
  div.fileList div.fileItem{
    color: #888888;
    display: inline;
    float: left;
    padding-bottom: 5px;
    width: 60px;
  }

  div.fileList div.fileItem span.fileDesc{
    color: #888888;
    display: block;
  }

