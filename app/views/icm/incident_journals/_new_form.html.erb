<style type="text/css">
  ul{
      padding-left: 40px;
  }
  ol{
      padding-left: 40px;
  }
  .hidden {
      display:none;
  }
  .show {
      display:block;
  }
  div.reply{
      margin-bottom: 2px;
      border-bottom: 1px solid #CCCCCC;
      padding: 0 0 1em 2em;
      height: auto;
      background: url("/images/arrow_out_longer.png") no-repeat scroll 0 0 transparent;
  }
  div.reply div.replyHeader{

  }
  div.reply div.replyHeaderSection{
    padding: 5px 5px 5px 0px;
    min-height: 40px;
  }
  div.reply h3{
      font-weight:bold;
  }
  div.reply .avatar{
    background-color: white;
    border: 1px solid #D0D0D0;
    float: left;
    line-height: 0;
    margin-right: 0.7em;
    padding: 2px;
  }

  div.reply .message{
      margin-left: 46px;
  }

  .yui-skin-sam .yui-toolbar-container div.yui-toolbar-subcont{
    border-bottom-width: 1px;
    padding-bottom: 0;
    padding-left: 1px;
  }
  div.fileList {
    color: #333333;
    line-height: 1.6em;
    margin-top: 5px;  
    margin-left: 5px;
    margin-right: 5px;
    overflow: hidden;
    position: relative;
    border-top: 2px solid #E3EEF8;  
  }
  div.fileList div.fileItem{
    color: #888888;
    display: inline;
    float: left;
    padding-bottom: 5px;
    width: 60px;
  }

  div.fileList div.fileItem span.fileDesc{
    color: #888888;
    display: block;
  }

  div.fileList div.fileItem img.fileIcon{
    border: 1px solid #BBC9E2;
    float: left;
    margin-bottom: 5px;
    margin-right: 10px;
    padding: 3px;
    vertical-align: top;
  }
</style>
<form>
<div id="ep" class="bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_incident_request) %></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= link_to t(:label_icm_incident_journal_back_to_request_list), {:controller=>"icm/incident_requests",:action => "index"}%></div>
          </td>
          <td class="pbHelp">
            <%if @incident_request[:close_reason_code].nil? %>
              <div class="grayButton"><a href="#reply"><%=t(:label_icm_incident_journal_new)%></a></div>
              <div class="grayButton"><%= link_to t(:close), {:action => "edit_close"}%></div>
              <div class="grayButton"><%= link_to t(:edit), {:controller=>"icm/incident_requests",:action => "edit", :id => @incident_request.id}%></div>
            <%end%>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="pbBody">
    <div class="pbSubheader tertiaryPalette first">
      <h3><%=@incident_request[:title]%></h3>(<a href="javascript:void(0)" id="showMore"><%= t(:label_icm_incident_more_info) %></a>)
    </div>
    <div class="pbSubsection hidden" id="incidentDetail">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label ><%=t(:label_icm_incident_request_service_code)%></label></td>
              <td class="dataCol"><div><%= @incident_request[:service_name] %></div></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <tr>
              <td class="labelCol"><label ><%=t(:label_icm_incident_request_requested_by)%></label></td>
              <td class="dataCol"><div><%= @incident_request[:requested_name] %></div></td>
              <td class="labelCol"><label ><%=t(:label_icm_incident_request_contact)%></label></td>
              <td class="dataCol"><div><%= @incident_request[:contact_name] %>(<%= @incident_request[:contact_number] %>)</div></td>
            </tr>
            <tr>
              <td class="labelCol"><label ><%=t(:label_icm_incident_request_incident_status_code)%></label></td>
              <td class="dataCol"><div><%= @incident_request[:incident_status_name] %></div></td>
              <td class="labelCol"><label ><%=t(:label_icm_incident_request_incident_phase_code)%></label></td>
              <td class="dataCol"><div><%= @incident_request[:incident_phase_name] %></div></td>
            </tr>
            <tr>
              <td class="labelCol"><label ><%=t(:label_icm_incident_request_submitted_by)%></label></td>
              <td class="dataCol"><div><%= @incident_request[:submitted_name] %></div></td>
              <td class="labelCol"><label ><%=t(:label_icm_incident_request_submitted_date)%></label></td>
              <td class="dataCol"><div><%= format_date(@incident_request[:submitted_date]) %></div></td>
            </tr>

            <tr>
              <td class="labelCol"><label ><%=t(:label_icm_incident_request_urgence_code)%></label></td>
              <td class="dataCol"><div><%= @incident_request[:urgence_name] %></div></td>
              <td class="labelCol"><label ><%=t(:label_icm_incident_request_impact_range_code)%></label></td>
              <td class="dataCol"><div><%= @incident_request[:impact_range_name] %></div></td>
            </tr>
            <tr>
              <td class="labelCol"><label ><%=t(:label_icm_incident_request_priority)%></label></td>
              <td class="dataCol"><div><%= @incident_request[:priority_name] %></div></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <tr>
              <td class="labelCol"><label ><%=t(:label_icm_incident_request_request_type_code)%></label></td>
              <td class="dataCol"><div><%= @incident_request[:request_type_name] %></div></td>
              <td class="labelCol"><label ><%=t(:label_icm_incident_request_report_source_code)%></label></td>
              <td class="dataCol"><div><%= @incident_request[:report_source_name] %></div></td>
            </tr>
            <tr>
              <td class="labelCol"><label ><%=t(:label_icm_incident_request_support_group)%></label></td>
              <td class="dataCol"><div><%= @incident_request[:support_group_name] %></div></td>
              <td class="labelCol"><label ><%=t(:label_icm_incident_request_support_person)%></label></td>
              <td class="dataCol"><div><%= @incident_request[:support_person_name] %></div></td>
            </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>
</form>
<div id="histories" class="bEditBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%=t(:label_icm_incident_journal_list)%></h2></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <div class="reply">
     <div id="journal_0" class="replyHeader">
       <h3><%= @incident_request[:submitted_name]  %> <%= t(:label_icm_submit_title,:message=>distance_of_time_in_words(Time.now, @incident_request[:submitted_date])) %></h3>
     </div>
     <div class="replyHeaderSection">
       <div class="avatar">
         <img width="30" height="30" alt="" src="https://secure.gravatar.com/avatar/ed0ce2998995c2b649c31ca06a72dae4?s=140&d=https://d3nwyuy0nl342s.cloudfront.net%2Fimages%2Fgravatars%2Fgravatar-140.png">
       </div>
       <div class="message">
         <%= raw @incident_request[:summary]  %>
       </div>
    </div>
 </div>
     <%= list_journals(@incident_request) %>
   </div>
</div>
<%if @incident_request[:close_reason_code].nil? %>
<%= form_for(@incident_reply,:url=>{:action=>"create"},:builder => LabellingFormBuilder,:html => { :multipart => true }) do |f| %>
<div id="reply" class="bEditBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%=t(:label_icm_incident_journal_new)%></h2></td>
          <td class="pbButton">
            <div class="button"><%= f.submit t(:save)%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label for="incident_request_incident_status_code"><%=t(:label_icm_incident_reply_incident_status_code)%></label></td>
              <td class="dataCol">
                <%=f.select :incident_status_code,nullable_options_for_select(available_request_status_code,@incident_reply.incident_status_code),
                                                    {},{:id=>"incident_request_incident_status_code"}%>
              </td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <tr>
              <%= fields_for @incident_journal,:as=>"incident_journal",:normal=>true do |sub_f|%>
                <%= sub_f.hidden_field(:incident_request_id) %>    
              <td class="dataCol" colspan="4" width="100%">
                <%= sub_f.text_area :message_body ,:id=>"msgEditor",:style=>"display:none;"%>
              </td>
              <% end%>
            </tr>
            <tr>
              <td class="labelCol"><%= t(:label_icm_incident_journal_attachment) %></td>
              <td class="dataCol" colspan="3" width="82%">

              <table>
                <tbody id="fileTemplate" style="display:none" seq="0">
                <tr id="file_{seq}" class="fileArea">
                    <td><input type="file" name="{ref}[{seq}][file]"/></td>
                    <td class="labelCol"><%= t(:label_icm_incident_journal_attachment_desc) %></td>
                    <td><input type="text" name="{ref}[{seq}][description]" size="40"/></td>
                    <td><a class="deleteAttach" delete_ref="file_{seq}" href="javascript:void(0)"><%= t(:delete) %></a></td>
                </tr>
                </tbody>
                <tbody id="fileContent">

                </tbody>
                <tbody id="fileButtons">
                  <tr>
                    <td><a id="addButton" href="javascript:void(0)"><%= t(:label_icm_incident_journal_add_attachment) %></a></td>
                  </tr>
                </tbody>
              </table>
              </td>
            </tr>
        </tbody>
      </table>

    </div>
  </div>
  <div class="pbBottomButtons">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"></td>
          <td id="bottomButtonRow" class="pbButtonb">
            <div class="button"><%= f.submit t(:save)%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>  
</div>
<% end %>
<% end %>
<script type="text/javascript">

GY.use('node','substitute','yui2-editor', function(Y) {
  var YAHOO = Y.YUI2;
  var editor = new YAHOO.widget.Editor('msgEditor', {
        height:'200px',
        width:'99%',
        toolbar: {
            buttons: [
                { group: 'textstyle',
                    buttons: [
                        { type: 'push', label: 'Bold', value: 'bold' },
                        { type: 'push', label: 'Italic', value: 'italic' },
                        { type: 'push', label: 'Underline', value: 'underline' },
                        { type: 'push', label: 'Create an Unordered List', value: 'insertunorderedlist' },
	                    { type: 'push', label: 'Create an Ordered List', value: 'insertorderedlist' },
                        { type: 'color', label: 'Font Color', value: 'forecolor', disabled: true },
                        { type: 'color', label: 'Background Color', value: 'backcolor', disabled: true }
                    ]
                }
            ]
        }
    });
    editor.render();
    Y.one("#new_icm_incident_reply").on("submit",function(){
      editor.saveHTML();    
    });

    Y.one("#fileButtons #addButton").on('click',function(){
      var templateContainer = Y.one("#fileTemplate");
      var seq = templateContainer.getAttribute("seq");
      templateContainer.setAttribute("seq",parseInt(seq)+1);
      var template = templateContainer.getContent();
      var row =  Y.Lang.substitute(template,{seq:seq,ref:"files"});
      Y.one("#fileContent").appendChild(row);
    });
    Y.one("#fileContent").delegate("click",function(e){
        Y.log(this.getAttribute("delete_ref"));
        Y.one("#"+this.getAttribute("delete_ref")).remove();
    },'.deleteAttach')
    Y.one("#showMore").on("click",function(e){
        if(Y.one("#incidentDetail").hasClass("hidden")){
          Y.one("#incidentDetail").removeClass("hidden")
        }else{
          Y.one("#incidentDetail").addClass("hidden")
        }
    });
});
</script>

