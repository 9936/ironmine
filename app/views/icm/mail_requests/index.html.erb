<%= common_title%>

<!--页面结构-->
<div class="page-block">
  <table class="page-block-header">
    <tr>
      <td class="page-block-title">
        <h2 class="block-title"><%= t(:label_icm_mail_request) %></h2>
      </td>
      <td class="page-block-button">
        <%= link_to t(:new), {:action => "new"},:class=>"btn"%>
      </td>
      <td class="page-block-help">
        <div id="mailRequestSearchBox"></div>
      </td>
    </tr>
  </table>
  <div class="page-block-body">
    <div id="mail_requests_list">
      <%= datatable("mail_requests_list",{:action=>"get_data",:format=>"json"},[],{:paginator_box=>"mailRequestPaginator",:search_box=>"mailRequestSearchBox"})%>
    </div>
    <div id="mailRequestPaginator"></div>
  </div>
</div>