<%= common_title %>
<div id="ep" class="bDetailBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_icm_rule_setting_show) %>&nbsp;<%= t(:label_detail_info) %></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= link_to t(:edit), {:action => "edit", :id => @rule_setting}%></div>
            <div class="button"><%= link_to t(:new), {:action => "new"}%></div>
            <div class="button"><%= link_to t(:back), {:action => "index"}%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"></td>
              <td class="dataCol"></td>
              <td class="labelCol"><label><%=(t :label_icm_rule_setting_report_date_changable)%></label></td>
              <td class="dataCol"><%= check_img(@rule_setting.report_date_changable)%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_icm_rule_setting_auto_closure_days)%></label></td>
              <td class="dataCol"><%= @rule_setting.auto_closure_days%></td>
              <td class="labelCol"><label><%=(t :label_icm_rule_setting_slove_date_changable)%></label></td>
              <td class="dataCol"><%= check_img(@rule_setting.slove_date_changable)%></td>
            </tr>
            <tr>
               <td class="labelCol"><label><%=(t :label_icm_rule_setting_status_code)%></label></td>
              <td class="dataCol"><%= check_img(@rule_setting[:status_code])%></td>
              <td class="labelCol"><label><%=(t :label_icm_rule_setting_respond_date_changable)%></label></td>
              <td class="dataCol"><%= check_img(@rule_setting.respond_date_changable)%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_icm_rule_setting_description)%></label></td>
              <td class="dataCol"><%= @rule_setting.description%></td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

