<%= setting_title %>

<%= form_for(@group_assignment,:url=>{:action=>"create"},:builder => LabellingFormBuilder) do |f| %>
<div id="ep" class="bEditBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%=t(:label_icm_group_assignment_new)%></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_back t(:cancel)%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <%= error_for @group_assignment%>
    <div id="head_1_ep" class="pbSubheader first tertiaryPalette">
      <span class="pbSubExtra">
        <span class="requiredLegend">
          <span class="requiredExampleOuter">
            <span class="requiredExample">&nbsp;</span>
          </span><span class="requiredMark">*</span>
          <span class="requiredText"> = <%=t(:label_is_required)%></span>
        </span>
      </span>
      <h3><%= t(:label_common_info) %></h3>
    </div>
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label for="ass_support_group"><%=t(:label_icm_incident_request_support_group)%></label></td>
              <td class="dataCol"><%=f.select :support_group_code, available_ass_support_groups,{}, {:id=>"support_group", :required => true}%></td>
              <td class="labelCol"></td>
              <td class="dataCol"></td>
            </tr>
            <tr>
              <td class="labelCol"><label for="ass_company"><%=t(:label_irm_company_name)%></label></td>
              <td class="dataCol"><%=f.select :customer_company_id, available_ass_companies,{},{:id=>"ass_company", :required => true}%></td>
              <td class="labelCol"></td>
              <td class="dataCol"></td>
            </tr>
            <tr>
              <td class="labelCol"><label for="ass_site_group"><%=t(:label_irm_location_site_group)%></label></td>
              <td class="dataCol"><%=f.select :customer_site_group_code, nullable_options_for_select(available_ass_site_groups, @group_assignment.customer_site_group_code),{},{:id=>"ass_site_group"}%></td>
              <td class="labelCol"><label for="ass_department"><%=t(:label_irm_location_department)%></label></td>
              <td class="dataCol"><%=f.select :customer_department_id, nullable_options_for_select(available_ass_departments, @group_assignment.customer_department_id),{},{:id=>"ass_department"}%></td>
            </tr>
            <tr>
              <td class="labelCol"><label for="ass_site"><%=t(:label_irm_company_site_info)%></label></td>
              <td class="dataCol"><%=f.select :customer_site_code, nullable_options_for_select(available_ass_sites, @group_assignment.customer_site_code),{},{:id=>"ass_site"}%></td>
              <td class="labelCol"><label for="ass_people"><%=t(:label_irm_person)%></label></td>
              <td class="dataCol"><%=f.select :customer_person_id, nullable_options_for_select(available_ass_people, @group_assignment.customer_person_id),{},{:id=>"ass_people"}%></td>
            </tr>
            <tr>
              <td class="labelCol"><label for="ass_status_code"><%=(t :active)%></label></td>
              <td class="dataCol"><%=f.select :status_code, available_active_status, {}, {:id => "ass_status_code"}%></td>
              <td class="labelCol"></td>
              <td class="dataCol"></td>
            </tr>        
        </tbody>
      </table>
    </div>
  </div>
  <div class="pbBottomButtons">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"></td>
          <td id="bottomButtonRow" class="pbButtonb">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_back t(:cancel)%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<% end %>
