<%= setting_title %>

<%= form_for(@priority_code,:url=>{:action=>"update"},:builder => LabellingFormBuilder) do |f| %>
<div id="ep" class="bEditBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%=t(:label_icm_priority_code_edit)%></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_to t(:cancel), {:action => "index"}%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <%= error_for @priority_code%>
    <div id="head_1_ep" class="pbSubheader first tertiaryPalette">
      <span class="pbSubExtra">
        <span class="requiredLegend"><span class="requiredExampleOuter">
          <span class="requiredExample">&nbsp;</span></span>
           <span class="requiredMark">*</span><span class="requiredText"> = <%=t(:label_is_required)%></span></span></span>
      <h3><%=t(:label_icm_priority_code_info)%></h3>
    </div>
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label><%=(t :label_icm_priority_code_company)%></label></td>
              <td class="dataCol"><%=f.select :company_id,nullable_options_for_select(selectable_companies,@priority_code.company_id),
                                                    {},{:require=>true}%></td>
              <td class="labelCol"><label><%=(t :label_icm_priority_code_priority_code)%></label></td>
              <td class="dataCol"><%=@priority_code.priority_code%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_icm_priority_code_name)%></label></td>
              <td class="dataCol"><%=f.text_field :name,:value=>@priority_code[:name], :required=>true %></td>
              <td class="labelCol"><label><%=(t :label_icm_priority_code_low_weight_value)%></label></td>
              <td class="dataCol"><%=f.text_field :low_weight_value, :required=>true%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_script_status_code)%></label></td>
              <td class="dataCol"><%=f.select :status_code,nullable_collection_options(available_status,:lookup_code,:wrap_meaning,@priority_code.status_code)%></td>
              <td class="labelCol"><label><%=(t :label_icm_priority_code_high_weight_value)%></label></td>
              <td class="dataCol"><%=f.text_field :high_weight_value, :required=>true%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_icm_priority_code_description)%></label></td>
              <td class="dataCol"><%=f.text_area :description,:value=>@priority_code[:description],:rows=>4%></td>

            </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="pbBottomButtons">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"></td>
          <td id="bottomButtonRow" class="pbButtonb">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_to t(:cancel), {:action => "index"}%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<% end %>
   
