<%= setting_title %>
<div class="listRelatedObject setupBlock">
    <div class="bPageBlock">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_icm_priority_code_list) %></h2></td>
              <td id="topButtonRow" class="pbButton">
                <div class="button"><%= link_to t(:new), {:action => "new"}%></div>
              </td>
              <td class="pbHelp">
                <div id="priorityCodesSearchBox"></div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
        <div id="priority_code" class="datatable" style="width:100%;">
          <div id="id" style="display:none">
            <%= link_to(t(:edit),{:action=>"edit",:id=>"{id}"}) %>&nbsp;&nbsp;<%= link_to(t(:show),{:action=>"show",:id=>"{id}"}) %>
          </div>
        </div>
        <%= datatable("priority_code",url_for(:action=>"get_data",:format=>"json"),
                  [{:key=>"id",:label=>t(:edit),:formatter=>"Y.irm.template",:width=>"80px"},
                   {:key=>"company_name",:label=>t(:label_icm_priority_code_company),:sortable=>true,:searchable=>true},
                   {:key=>"priority_code",:label=>t(:label_icm_priority_code_priority_code),:sortable=>true,:searchable=>true},
                   {:key=>"name",:label=>t(:label_icm_priority_code_name),:sortable=>true,:searchable=>true},
                   {:key=>"low_weight_value",:label=>t(:label_icm_priority_code_low_weight_value),:sortable=>true},
                   {:key=>"high_weight_value",:label=>t(:label_icm_priority_code_high_weight_value),:sortable=>true},
                   {:key=>"status_meaning",:label=>t(:label_irm_script_status_code),:sortable=>true,:width=>"70px"}],
                   {:row_perpage=>5,:search_box=>"priorityCodesSearchBox"})%>
      </div>
    </div>
</div>