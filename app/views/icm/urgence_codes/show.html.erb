<%= page_title("", @urgence_code.urgency_code) %>
<div id="ep" class="bDetailBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_icm_urgence_code_show) %>&nbsp;<%= t(:label_detail_info) %></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= link_to t(:edit), {:action => "edit", :id => @urgence_code}%></div>
            <div class="button"><%= link_to t(:new), {:action => "new"}%></div>
            <div class="button"><%= link_to t(:back), {:action => "index"}%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label><%=(t :label_icm_urgence_code_company)%></label></td>
              <td class="dataCol"><%=@urgence_code[:company_name]%></td>
              <td class="labelCol"><label><%=(t :label_icm_urgence_code_urgency_code)%></label></td>
              <td class="dataCol"><%=@urgence_code.urgency_code%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_icm_urgence_code_name)%></label></td>
              <td class="dataCol"><%= @urgence_code[:name]%></td>
              <td class="labelCol"><label><%=(t :label_icm_urgence_code_weight_values)%></label></td>
              <td class="dataCol"><%= @urgence_code[:weight_values]%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_icm_urgence_code_description)%></label></td>
              <td class="dataCol"><%= @urgence_code[:description]%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

