<%= common_title%>
<div class="listRelatedObject setupBlock">
    <div class="bPageBlock">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_icm_urgence_code_list) %></h2></td>
              <td id="topButtonRow" class="pbButton">
                <div class="button"><%= link_to t(:new), {:action => "new"}%></div>
              </td>
              <td class="pbHelp">
                <div id="urgenceCodesSearchBox"></div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
        <div id="urgence_code" class="datatable" style="width:100%;">
          <div id="id" style="display:none">
            <%= link_to(t(:edit),{:action=>"edit",:id=>"{id}"}) %>&nbsp;
            <%= link_to(t(:show),{:action=>"show",:id=>"{id}"}) %>
          </div>
          <div id="default_flag" style="display:none">
            <%= check_img("{default_flag}") %>
          </div>                  
        </div>
        <%= datatable("urgence_code",url_for(:action=>"get_data",:format=>"json"),
                  [{:key=>"id",:label=>t(:edit),:formatter=>"Y.irm.template",:width=>"80px"},
                   {:key=>"urgency_code",:label=>t(:label_icm_urgence_code_urgency_code),:searchable=>true},
                   {:key=>"name",:label=>t(:label_icm_urgence_code_name),:searchable=>true},
                   {:key=>"weight_values",:label=>t(:label_icm_urgence_code_weight_values)},
                   {:key=>"display_sequence",:label=>t(:display_sequence)},
                   {:key=>"default_flag",:label=>t(:default_flag),:formatter=>"Y.irm.template",:searchable=>true, :width => "40px"},
                   {:key=>"status_meaning",:label=>t(:label_irm_script_status_code),:width=>"70px"}],
                   {:paginator_box=>"urgencePaginator",:search_box=>"urgenceCodesSearchBox"})%>
        <div id="urgencePaginator"></div>
      </div>
    </div>
</div>