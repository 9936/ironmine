<%= common_title(:show_data=>@urgence_code[:name]) %>
<%= form_for(@urgence_code,:url=>{:action=>"create"},:builder => CustomFormBuilder) do |f| %>
  <% content_for :form_block_common   do%>
    <table class="form-table">
      <tbody>
          <tr>
            <td class="label-col"><label for="urgence_code_urgency_code"><%=(t :label_icm_urgence_code_urgency_code)%></label></td>
            <td class="data-col"><%=f.text_field :urgency_code, :required=>true,:irm_uppercase=>true,:id=>"urgence_code_urgency_code"%></td>
            <td class="label-col"></td>
            <td class="data-col"></td>
          </tr>
          <tr>
            <td class="label-col"><label  for="urgence_code_name"><%=(t :label_icm_urgence_code_name)%></label></td>
            <td class="data-col"><%=f.text_field :name,:value=>@urgence_code[:name], :required=>true,:id=>"urgence_code_name" %></td>
            <td class="label-col"></td>
            <td class="data-col"></td>
          </tr>
          <tr>
            <td class="label-col"><label for="urgence_code_display_sequence"><%=(t :display_sequence)%></label></td>
            <td class="data-col"><%=f.text_field :display_sequence, :required=>true%></td>
            <td class="label-col"></td>
            <td class="data-col"></td>
          </tr>
          <tr>
            <td class="label-col"><label for="urgence_code_default_flag"><%=(t :default_flag)%></label></td>
            <td class="data-col"><%=f.check_box :default_flag%></td>
            <td class="label-col"></td>
            <td class="data-col"></td>
          </tr>
          <tr>
            <td class="label-col"><label for="urgence_code_description"><%=(t :label_icm_urgence_code_description)%></label></td>
            <td class="data-col"><%=f.text_area :description,:value=>@urgence_code[:description],:rows=>4,:id=>"urgence_code_description",:class=>"input-xlarge"%></td>
            <td class="label-col"></td>
            <td class="data-col"></td>
          </tr>
      </tbody>
    </table>
  <% end %>

  <% content_for :form_buttons  do %>
    <%= link_submit t(:save),{:class=>"btn btn-primary"}%>
    <%= link_to t(:cancel), {:action => "index"}, {:class => "btn cancel"}%>
  <% end %>

  <!--页面结构-->
  <div class="page-block">
    <table class="page-block-header">
      <tr>
        <td class="page-block-title">
          <h2 class="block-title"><%=t(:label_icm_urgence_code_new)%></h2>
        </td>
        <td class="page-block-button">
          <%= content_for :form_buttons   %>
        </td>
      </tr>
    </table>
    <div class="page-block-body">
      <div class="sub-page-block">
        <!-- 一般信息 -->
        <div class="sub-page-block-header">
          <%= form_require_info %>
          <h3 class="sub-page-block-title"><%=t(:label_icm_urgence_code_info)%></h3>
        </div>
        <div class="sub-page-block-body">
          <%= content_for :form_block_common   %>
        </div>
      </div>
    </div>
    <table class="page-block-footer">
      <tr>
        <td class="page-block-title"></td>
        <td class="page-block-button">
          <%= content_for :form_buttons   %>
        </td>
      </tr>
    </table>
  </div>
<% end %>
