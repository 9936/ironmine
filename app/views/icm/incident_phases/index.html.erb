<%= setting_title %>
<div class="listRelatedObject setupBlock">
    <div class="bPageBlock">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_icm_incident_phase_list) %></h2></td>
              <td id="topButtonRow" class="pbButton">
                <div class="button"><%= link_to t(:new), {:action => "new"}%></div>
              </td>
              <td class="pbHelp">
                <div id="incidentPhasesSearchBox"></div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
        <div id="pizza" class="datatable" style="width:100%">
          <div id="id" style="display:none">
            <%= icon_link_edit({:action=>"edit",:id=>"{id}"}) %>&nbsp;
            <%= icon_link_show({:action=>"show",:id=>"{id}"}) %>
          </div>
        </div>
        <%= datatable("pizza",url_for(:action=>"get_data",:format=>"json"),
                      [{:key=>"id",:label=>t(:operation),:formatter=>"Y.irm.template",:width=>"80px"},
                       {:key=>"name",:label=>t(:label_icm_incident_phase_name),:sortable=>true,:searchable=>true},
                       {:key=>"phase_code",:label=>t(:label_icm_incident_phase_phase_code),:sortable=>true,:searchable=>true},
                       {:key=>"display_sequence",:label=>t(:display_sequence),:sortable=>true},
                       {:key=>"status_meaning",:label=>t(:label_irm_script_status_code),:width=>"70px"}
                       ],:search_box=>"incidentPhasesSearchBox")%>
      </div>
    </div>
</div>
