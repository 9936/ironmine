<%= form_for(@external_login,:url=>{:action=>"update"},:builder => LabellingFormBuilder) do |f| %>
<div id="ep" class="bEditBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%=t(:label_uid_external_login_edit)%></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_to t(:cancel), {:action => "index"}%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <%= error_for @external_login%>
    <div id="head_1_ep" class="pbSubheader first tertiaryPalette">
      <span class="pbSubExtra">
        <span class="requiredLegend"><span class="requiredExampleOuter">
          <span class="requiredExample">&nbsp;</span></span>
           <span class="requiredMark">*</span><span class="requiredText"> = <%=t(:label_is_required)%></span></span></span>
      <h3><%=t(:label_uid_external_login_info)%></h3>
    </div>
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
             <tr>
              <td class="labelCol"><label for="external_login_external_system_code">
                <%=t(:label_uid_external_login_external_system_code)%></label></td>
              <td class="dataCol"><%=f.select :external_system_code,
                                      options_from_collection_for_select(available_external_systems,:external_system_code,:wrap_system_name),
                                             :required=>true ,    :id=>"external_login_external_system_code"%></td>
              <td class="labelCol"><label for="external_login_active_start_date">
                <%=t(:label_uid_external_login_active_start_date)%></label></td>
              <td class="dataCol"><%=f.text_field :active_start_date, :required=>true ,
                                                  :id=>"external_login_active_start_date"%></td>
            </tr>

            <tr>
              <td class="labelCol"><label for="external_login_external_login_name"><%=t(:label_uid_external_login_external_login_name)%></label></td>
              <td class="dataCol"><%=f.text_field :external_login_name, :required=>true ,:id=>"external_login_external_login_name"%></td>
              <td class="labelCol"><label for="external_login_active_end_date">
                <%=t(:label_uid_external_login_active_end_date)%></label></td>
              <td class="dataCol"><%=f.text_field :active_end_date, 
                                                  :id=>"external_login_active_end_date"%></td>
            </tr>

            <tr>
              <td class="labelCol"><label for="external_login_description"><%=t(:label_uid_external_login_description)%></label></td>
              <td class="dataCol"><%=f.text_area :description,  :rows => 4,:id=>"external_login_description"%></td>
              <td class="labelCol"><label for="external_login_source_type"><%=t(:label_uid_external_login_source_type)%></label></td>
              <td class="dataCol"><%=f.select :source_type, options_from_collection_for_select(available_external_login_source_type,:lookup_code,:wrap_meaning),
                                              :required=>true ,:id=>"external_login_source_type"%></td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="pbBottomButtons">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"></td>
          <td id="bottomButtonRow" class="pbButtonb">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_to t(:cancel), {:action => "index"}%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<% end %>
