<%= form_for(@login_mapping,:url=>{:action=>"update"},:builder => LabellingFormBuilder) do |f| %>
<div id="ep" class="bEditBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%=t(:label_uid_login_mapping_edit)%></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_to t(:cancel), {:action => "index"}%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <%= error_for @login_mapping%>
    <div id="head_1_ep" class="pbSubheader first tertiaryPalette">
      <span class="pbSubExtra">
        <span class="requiredLegend"><span class="requiredExampleOuter">
          <span class="requiredExample">&nbsp;</span></span>
           <span class="requiredMark">*</span><span class="requiredText"> = <%=t(:label_is_required)%></span></span></span>
      <h3><%=t(:label_uid_login_mapping_info)%></h3>
    </div>
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
             <tr>
              <td class="labelCol"><label for="login_mapping_login_mapping_code"><%=t(:label_uid_login_mapping_person_name)%></label></td>
              <td class="dataCol"><%=f.select :person_id,options_from_collection_for_select(available_uid_person,:id,:wrap_person_name,@login_mapping.person_id),:required=>true , :id=>"login_mapping_login_mapping_code"%></td>
              <td class="labelCol"><label for="login_mapping_external_system_name"><%=t(:label_uid_login_mapping_external_system_name)%></label></td>
              <td class="dataCol"><%=f.select :external_system_code,options_from_collection_for_select(available_external_systems,:external_system_code,:wrap_system_name), :required=>true ,:id=>"login_mapping_external_hostname"%></td>
            </tr>

            <tr>
              <td class="labelCol"><label><%=(t :label_uid_external_system_status_meaning)%></label></td>
              <td class="dataCol"><%=f.select :status_code,options_from_collection_for_select(available_status,:lookup_code,:wrap_meaning,@login_mapping.status_code)%></td>
              <td class="labelCol"><label for="login_mapping_external_login_name"><%=t(:label_uid_login_mapping_external_login_name)%></label></td>
              <td class="dataCol"><%=f.text_field :external_login_name, :required=>true ,:id=>"login_mapping_external_login_name"%></td>              
            </tr>
            
        </tbody>
      </table>
    </div>
  </div>
  <div class="pbBottomButtons">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"></td>
          <td id="bottomButtonRow" class="pbButtonb">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_to t(:cancel), {:action => "index"}%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<% end %>
