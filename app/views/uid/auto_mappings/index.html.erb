<%= page_title %>
<div class="listRelatedObject setupBlock">
    <div class="bPageBlock">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_uid_auto_mapping_list) %></h2></td>
              <td id="topButtonRow" class="pbButton">
                <div class="button"><%= link_to t(:label_mapping_confirm), {:controller=>"uid/external_logins",
                                                                     :action => "new"}%></div>
              </td>
              <td class="pbHelp">
                <div id="external_systemsSearchBox"></div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
        <div id="external_systems" class="datatable" style="width:100%">
          <div id="id" style="display:none">
            <%= check_box_tag "uid_auto_mapping[temp_mapping_id][]","{id}"%>
            |<%= link_to(t(:confirm),{:action=>"confirm",:id=>"{id}"}) %>
          </div>
        </div>
        <%= datatable("external_systems",url_for(:action=>"get_data",:format=>"json"),
                      [{:key=>"id",:label=>t(:operation),:formatter=>"Y.irm.template",:width=>"80px"},

                       { :key => "person_name", :label => t(:label_uid_user_login_mapping_person_name),:searchable=>true },
                       { :key => "system_name", :label => t(:label_uid_user_login_mapping_system_name),:searchable=>true },
                       { :key => "external_login_name", :label => t(:label_uid_user_login_mapping_external_login_name) },
                       { :key => "status_meaning", :label => t(:label_uid_external_system_status_meaning)}

                       ],{:row_perpage=>20,:search_box=>"external_systemsSearchBox",:paginator_box=>"login_mappingsPaginatorBox"})%>
        <div id="login_mappingsPaginatorBox"></div>
      </div>
    </div>
</div>

<% content_for :sidebar do %>
    <%= render "uid/uid_home/uid_nav_function" %>
<% end %>


