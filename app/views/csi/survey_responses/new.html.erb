<%= common_title(:show_data=>@survey.title,:action_meaning=>t(:label_csi_survey_response_new)) %>
<style type="text/css">
  span.prompt{
    display:none;
  }
  td.surveydataCol{
    padding-left:15px;
  }
  div.requiredBlock h3{
      color:red;
  }
</style>

<div id="ep" class="detail-block page-block">
    <div id="id_survey_reply">
        <% if @survey.close? %>
          <div id='errors' class='error'></div>
          <%= form_tag({:controller=>"csi/survey_responses",:action=>"create"},{:id=>"responseForm"}) do %>
             <%= hidden_params_field :survey_member_id%>
             <%= back_url_hidden_field_tag %>
             <%= hidden_field_tag 'page', @page %>
             <%= hidden_field_tag 'survey_id', @survey.id %>
             <%= hidden_field_tag 'start_at', Time.now %>

             <%= render :partial => '/csi/survey_responses/subjects',:locals => {:survey => @survey}%>


             <div class="pbBottomButtons">
                 <table cellpadding="0" cellspacing="0" border="0">
                   <tbody>
                     <tr>
                       <td class="pbTitle"></td>
                       <td id="bottomButtonRow" class="pbButtonb">
                           <div class="button"><%=  link_to(t(:label_csi_survey_pre_page),{},{:href=>"javascript:void(0)",:id=>"prePage"})%></div>
                           <div class="button"><%=  link_submit t(:submit),{:id=>"submitPage"}%></div>
                           <div class="button"><%=  link_to(t(:label_csi_survey_next_page),{},{:href=>"javascript:void(0)",:id=>"nextPage"})%></div>
                           <div class="button"><%= link_back t(:cancel)%></div>
                       </td>
                     </tr>
                   </tbody>
                 </table>
             </div>

           <% end %>
        <% else %>
          <%= t(:label_csi_survey_closed) %>
        <% end %>
    </div>
</div>


