<%= page_title %>
<div class="listRelatedObject setupBlock">
    <div class="bPageBlock">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_csi_survey_range_list) %></h2></td>
              <td id="topButtonRow" class="pbButton">
                <div class="button"><%= link_to t(:new), {:action => "new"}%></div>
                <div class="button"><%= link_to t(:return),{:controller=>"csi/surveys",:action=>"index"}%></div>
              </td>
              <td class="pbHelp">
                <div id="survey_rangesSearchBox"></div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
        <div id="survey_ranges" class="datatable" style="width:100%">
          <div id="id" style="display:none">
            <%= icon_link_edit({:action=>"edit",:id=>"{id}"}) %>&nbsp;
            <%= icon_link_show({:action=>"show",:id=>"{id}"}) %>&nbsp;
            <%= icon_link_delete({:controller=>"csi/survey_ranges",:action=>"destroy",:id=>"{id}"},:confirm => t(:label_are_you_sure) ,
                                      :method => :delete) %>
          </div>
        </div>
        <%= datatable("survey_ranges",url_for(:action=>"get_data",:format=>"json"),
                      [{:key=>"id",:label=>t(:operation),:formatter=>"Y.irm.template",:width=>"120px"},
                       { :key => "required_flag", :label => t(:label_csi_survey_range_required_flag),:searchable=>true },
                       { :key => "range_type_meaning", :label => t(:label_csi_survey_range_range_type),:searchable=>true },
                       { :key => "status_meaning", :label => t(:label_csi_survey_range_status_code) }
                       ],{:paginator_box=>"surveryPaginator",:search_box=>"survey_rangesSearchBox"})%>
        <div id="surveryPaginator"></div>
      </div>
    </div>
</div>


