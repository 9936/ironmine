<div  id="options">
  <% Csi::SubjectOption.query_by_subject_id(subject.id,'drop').each do |option| %>
    <%= render :partial => '/csi/shared/drop_option', :locals => {:value => option.value, :parent => parent, :subject => subject} %>
  <% end if subject %>
  <% if subject.nil? || subject.subject_options.size == 0 %>
    <%= render :partial => '/csi/shared/drop_option', :locals => {:value => t(:label_csi_survey_subjects_option_one), :parent => parent, :subject => subject} %>
  <% end %>
</div>
<p>
    <%= text_field_tag "option", "", :onfocus => "subject_add_option(this, 'drop');", :style => "opacity:0.5;" %>
</p>
