<html>
<head>
</head>
<body>
<div id="mychart"></div>
<script type="text/javascript">
(function()
    {
        GY.use('charts', function (Y)
        {
            // Create data
            var myDataValues = [
                    {day:"Monday", taxes:2000},
                    {day:"Tuesday", taxes:2000},
                    {day:"Wednesday", taxes:4000},
                    {day:"Thursday", taxes:200},
                    {day:"Friday", taxes:2000}
            ];

            var pieGraph = new Y.Chart({
                    render:"#mychart",
                    categoryKey:"day",
                    seriesKeys:["taxes"],
                    dataProvider:myDataValues,
                    type:"pie",
                    seriesCollection:[
                        {
                            categoryKey:"day",
                            valueKey:"taxes",
                            styles:{
                                    fill:{
                                        colors:['#194E84','#60BB22','#F2BABB','#FFC200',
                                            '#FF5B00','#B80028','#84002E','#4AC0F2']
                                    }
                                   }
                        }
                    ]
                });
        });
    }
   )();
</script>
<%= pie_chart("test",@data_provider) %>

<div id="mychart1"></div>
<script type="text/javascript">
(function() {
    GY.use('charts', function (Y)
    {
        var myDataValues = [
            {category:"5/1/2010", values:9000, expenses:3700, revenue:2200},
            {category:"5/2/2010", values:50, expenses:9100, revenue:100},
            {category:"5/3/2010", values:400, expenses:1100, revenue:1500},
            {category:"5/4/2010", values:200, expenses:1900, revenue:2800},
            {category:"5/5/2010", values:200, expenses:1900, revenue:2800},
            {category:"5/6/2010", values:200, expenses:1900, revenue:2800},
            {category:"5/7/2010", values:200, expenses:1900, revenue:2800}
        ];
        var myChart = new Y.Chart({
                      dataProvider:myDataValues,
                      render:"#mychart1",
                      horizontalGridlines: {
                            styles: {
                                line: {
                                    color: "#dad8c9"
                                }
                            }
                      },
                      verticalGridlines: {
                            styles: {
                                line: {
                                    color: "#dad8c9"
                                }
                            }
                      }
        });
    });
})();
</script>

<div id="mychart2"></div>
<script type="text/javascript">
(function() {
    GY.use('charts', function (Y)
    {
        var myDataValues = [
            {category:"5/1/2010", values:9000, expenses:3700, revenue:2200},
            {category:"5/2/2010", values:50, expenses:9100, revenue:100},
            {category:"5/3/2010", values:400, expenses:1100, revenue:1500},
            {category:"5/4/2010", values:200, expenses:1900, revenue:2800},
            {category:"5/5/2010", values:5000, expenses:5000, revenue:2650}
        ];

        var myChart = new Y.Chart({
                 dataProvider:myDataValues,
                 render:"#mychart2",
