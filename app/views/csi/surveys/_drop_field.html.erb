<div class="field">
  <%= label_tag subject.id,subject.name, :class => "q_title" %>
  <%=content_tag(:abbr,'*',:class=> 'required') if subject.required %>

  <div class="input">
    <%= select_tag "row[f#{subject.id}]", options_for_select(subject.options.map(&:value)) %>
    <span id="<%=subject.id%>_subject" class='error'></span>
    <br />
    <span class="prompt"><%=h subject.prompt %></span>
  </div>
</div>