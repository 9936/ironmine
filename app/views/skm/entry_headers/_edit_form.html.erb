  }


  var line_count = 1;

 function delete_line(l)
 {
     $("#file_" + l).remove();
  }
  function generate_line()
  {
       var node = $('<tr id="file_' + line_count + '">'
               + '<td class="dataCol"></td>'
               + '<td class="dataCol"><a onclick="delete_line(' + line_count + ');" href="javascript:void(0);"><%= t :delete%></a></td>'
               + '<td class="dataCol"><input type="file" name="file[' + line_count + '][file]" id="file_' + line_count + '_file"></td>'
               + '<td class="dataCol"><select name="file[' + line_count + '][file_category]" id="file_' + line_count + '_file_category">' + '<%= raw(options_for_select(available_file_categories).gsub!(/\n+/, ""))%>' + '</select></td>'
               + '<td class="dataCol"><input type="text" value="" rows="3" name="file[' + line_count + '][description]" id="file_' + line_count + '_description" cols="35">(<%= t(:file_upload_limit_alert, :m => Irm::SystemParametersManager.upload_file_limit) %>)</td>'
               + '</tr>');
       $("#file_body").append(node);
      line_count ++;
  }
</script>