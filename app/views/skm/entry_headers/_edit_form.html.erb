<%= app_title %>
<% require_javascript(:extjs) %>
<% require_css(:extjs) %>
<%= form_for(@entry_header,:url=>{:action=>"update"},:builder => LabellingFormBuilder, :html => {:name => "edit_form", :id => "edit_form",:multipart => true}) do |f| %>
<div id="ep" class="edit-block page-block">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%=t(:label_skm_entry_header_edit)%></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= link_to t(:save_as_published), {}, :href => "javascript:void(0);", :onclick => "submit_published();"%></div>
            <div class="button"><%= link_to t(:cancel), {:controller => "skm/entry_headers", :action => "index"}  %></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <%= error_for @entry_header%>
    <div class="pbSubheader first tertiaryPalette">
      <span class="pbSubExtra">
        <span class="requiredLegend">
          <span class="requiredExampleOuter">
            <span class="requiredExample">&nbsp;</span>
          </span><span class="requiredMark">*</span>
          <span class="requiredText"> = <%=t(:label_is_required)%></span>
        </span>
      </span>
      <h3><%= t(:label_common_info) %></h3>
    </div>
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label><%=(t :label_skm_entry_header_doc_number)%></label></td>
              <td class="data2Col"><%= @entry_header.doc_number%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_skm_entry_header_title)%></label></td>
              <td class="data2Col"><%=f.text_field :entry_title, :required=>true, :size => 80%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_skm_entry_header_keyword_tags)%></label></td>
              <td class="data2Col"><%=f.text_field :keyword_tags, :size => 80%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_skm_channel)%></label></td>
              <td class="data2Col"><%= f.lov_field :channel_id, Skm::Channel, {:required => true}%></td>
            </tr>
        </tbody>
      </table>
    </div>
    <% @entry_header.entry_details.order("line_num ASC").each do |ed| %>
    <div class="pbSubheader tertiaryPalette">
      <h3><%= ed.element_name %>&nbsp;<%= ed.required_flag == "Y" ? "(必填)" : "" %></h3>
    </div>
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <%= fields_for("skm_entry_details[]", ed) do |ef| %>
            <tr>
              <td><% if ed.required_flag == "Y"%>
                  <%= ef.text_area :entry_content, {:rows => ed.default_rows, :style => "width:100%;", :jrequired => true, :value => ed.entry_content} %>
                  <% else %>
                  <%= ef.text_area :entry_content, {:rows => ed.default_rows, :style => "width:100%;", :value => ed.entry_content} %>
                  <% end %>
              </td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
    <% end %>
    <!-- 加载上传附件模板 -->
    <%= render :partial=>"helper/upload_file_template",:locals=>{:type_flag => true, :exist_attachments => list_exist_skm_entry_attachments(@entry_header.attachments, @entry_header.id), :attachments => @entry_header.attachments,:delete_url => {:controller => "skm/entry_headers", :action => "remove_exits_attachment"} } %>

  </div>
  <div class="pbBottomButtons">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"></td>
          <td id="bottomButtonRow" class="pbButtonb">
            <div class="button"><%= link_to t(:save_as_published), {}, :href => "javascript:void(0);", :onclick => "submit_published();"%></div>
            <div class="button"><%= link_to t(:cancel), {:controller => "skm/entry_headers", :action => "index"}  %></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<script type="text/javascript">
  function submit_draft(){
    if (confirm("文章内容已被修改，是否保存为新的版本？"))
    {
        document.edit_form.action = "<%= url_for(:controller => 'skm/entry_headers', :action => 'update', :status => "DRAFT", :new => "1")%>";
    }
    else
    {
        document.edit_form.action = "<%= url_for(:controller => 'skm/entry_headers', :action => 'update', :status => "DRAFT")%>";
    }
    document.edit_form.submit();
  }

  function submit_published(){
    if (confirm("文章内容已被修改，是否保存为新的版本？"))
    {
        document.edit_form.action = document.edit_form.action = "<%= url_for(:controller => 'skm/entry_headers', :action => 'update', :status => "PUBLISHED", :new => "1")%>";
    }
    else
    {
        document.edit_form.action = "<%= url_for(:controller => 'skm/entry_headers', :action => 'update', :status => "PUBLISHED")%>";
    }
    document.edit_form.submit();
  }
</script>    
<% end %>

