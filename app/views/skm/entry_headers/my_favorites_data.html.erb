<!--  irm datatable      -->
 <div class="irm-datatable">
   <div>
       <table count="<%=@count%>">
         <thead>
           <tr>
             <th style="width:120px;">
               <div><%= t(:operation) %></div>
             </th>
             <th style="width:120px;">
               <div><%= t(:label_skm_entry_header_doc_number) %></div>
             </th>
             <th>
               <div><%= t(:label_skm_entry_header_title) %></div>
             </th>
             <th style="width:180px;">
               <div><%= t(:label_skm_entry_header_published_date) %></div>
             </th>
           </tr>
         </thead>
         <tbody>
         <% @datas.each do |data| %>
         <tr id="<%=data[:id]%>">
           <td>
             <div>
               <%= link_to(t(:show),{:controller => "skm/entry_headers", :action=>"show",:id => data[:id]}) %>&nbsp;
               <%= link_to(t(:remove_from_favorite), {:controller => "skm/entry_headers", :action=>"remove_favorite",:person_id=>Irm::Person.current.id, :entry_header_id => data[:id]},:confirm => t(:label_are_you_sure)) %>
             </div>
           </td>
           <td>
             <div>
               <%= link_to(data[:doc_number], {:controller => "skm/entry_headers", :action => "show", :id => data[:id]})%>
             </div>
           </td>
           <td>
             <div>
               <%= link_to(data[:full_title], {:controller => "skm/entry_headers", :action => "show", :id => data[:id]})%>
             </div>
           </td>
           <td>
             <div>
               <%=data[:published_date_f]%>
             </div>
           </td>

         </tr>
         <% end -%>
         </tbody>
       </table>
   </div>
 </div>
<!--  end irm datatable      -->