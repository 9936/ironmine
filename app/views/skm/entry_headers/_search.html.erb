<div class="sub-block">
    <h3 class="lbHeader"></h3>
    <table cellpadding="0" cellspacing="0" border="0" style="width:100%">
      <tbody>
        <tr>
          <td class="pbTitle"><h3 class="lbHeader"><%= t(:label_skm_entry_header_list) %></h3></td>
          <td id="topButtonRow" class="pbButton">
          </td>
          <td class="pbHelp">
          </td>
        </tr>
      </tbody>
    </table>
    <div class="lbBody">
        <div class="datatable">
          <div class="yui3-widget yui3-datatable">
            <div class="yui3-datatable-content">
                <table id='rows' cellspacing="0" cellpadding="0" class='grid'>
                  <thead class="yui3-datatable-columns">
                    <tr class="yui3-datatable-first yui3-datatable-last">
                      <th class="yui3-column" style="width:180px;">
                        <div class="yui3-datatable-liner"><%= t(:label_skm_entry_header_title) %>
                        </div>
                      </th>
                      <th class="yui3-column" style="width:180px;">
                        <div class="yui3-datatable-liner"><%= t(:label_skm_entry_header_published_date) %>
                        </div>
                      </th>
                    </tr>
                  </thead>
                  <tbody class="yui3-datatable-data">
                  <% results.each do |r| %>
                  <tr id="<%=r.id%>" class="yui3-datatable-even">

                    <td class="yui3-column">
                      <div class='yui3-datatable-liner'>
                          <%=link_to "[#{r[:doc_number]}]#{r[:entry_title]}", {:controller => "skm/entry_headers", :action => "show", :id =>r[:id]}%>
                       </div>
                    </td>
                    <td class="yui3-column">
                      <div class='yui3-datatable-liner'>
                        <%=r[:published_date].strftime("%Y-%m-%d %H:%M:%S")%>
                      </div>
                    </td>
                  </tr>
                  <% end -%>
                  </tbody>
                </table>
            </div>
          </div>
        </div>
    </div>
</div>
