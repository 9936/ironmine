<div class="listRelatedObject setupBlock">
    <div class="bPageBlock">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_skm_entry_status_list) %></h2></td>
              <td id="topButtonRow" class="pbButton">
                <div class="button"><%= link_to t(:new), {:action => "new"}%></div>
              </td>
              <td class="pbHelp">
                <select title="显示所选内容" name="hotlist_mode" id="hotlist_mode"><option value="2">最近创建</option>
                <option value="1">最近修改</option>
                <option selected="selected" value="3">最近查看</option>
                </select>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
        <div id="entry_statuses_list" class="datatable" style="width:100%">
          <div id="id" style="display:none">
            <%= link_to(t(:edit),{:controller => "skm/entry_statuses", :action=>"edit",:id=>"{id}"}) %>
          </div>          
        </div>
        <%= datatable("entry_statuses_list",url_for(:action=>"get_data",:format=>"json"),
                  [{:key=>"id",:label=>t(:operation),:formatter=>"Y.irm.template",:width=>"50%"},
                   {:key=>"entry_status_code",:label=>t(:label_skm_entry_status_code),:sortable=>true},
                   {:key=>"name",:label=>t(:name),:sortable=>true},
                   {:key=>"description",:label=>t(:description),:sortable=>true},
                   {:key=>"visiable_flag",:label=>t(:label_skm_entry_status_visiable),:sortable=>true},
                   {:key=>"status_meaning",:label=>t(:active),:sortable=>true}])%>
      </div>
    </div>
</div>