<%= setting_title %>
<%= form_for(@column,:url=>{:action=>"update"},:builder => LabellingFormBuilder) do |f| %>
<div id="ep" class="bEditBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%=t(:label_skm_column_edit)%></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_to t(:cancel), {:action=>"index"}%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <%= error_for @column%>
    <div id="head_1_ep" class="pbSubheader first tertiaryPalette">
      <span class="pbSubExtra">
        <span class="requiredLegend">
          <span class="requiredExampleOuter">
            <span class="requiredExample">&nbsp;</span>
          </span><span class="requiredMark">*</span>
          <span class="requiredText"> = <%=t(:label_is_required)%></span>
        </span>
      </span>
      <h3><%= t(:label_common_info) %></h3>
    </div>
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label><%=(t :label_skm_column_parent)%></label></td>
              <td class="data2Col"><%= lov_field_tag "skm_columns", "SKM_COLUMNS", :id => "parent_column_lov", :value => @column.parent_column_id, :label_required => true %></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_skm_column_code)%></label></td>
              <td class="data2Col"><%= @column.column_code%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :name)%></label></td>
              <td class="data2Col"><%=f.text_field :name, :required=>true%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :description)%></label></td>
              <td class="data2Col"><%=f.text_area :description, :rows => 4%></td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="pbBody">
    <div class="pbSubheader first tertiaryPalette">
      <h3><%= t(:label_skm_column_access) %><span style="font-weight:normal;font-size:12px;">&nbsp;-&nbsp;<%=  t(:label_skm_column_if_access_list_none)  %></span></h3>
    </div>
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <%= render :partial => "irm/duel_select/search",:locals => {:label=>t(:label_irm_wf_rule_action_type),:f=>f,:types=>duel_types,:sources=>duel_values,:str_value_field=>:access_str,:str_value=>@column.get_access_str} %>

        </tbody>
      </table>
    </div>
  </div>

  <div class="pbBottomButtons">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"></td>
          <td id="bottomButtonRow" class="pbButton">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_to t(:cancel), {:action=>"index"}%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<% end %>

<script type="text/javascript">
  GY.use("duelselect",function(Y){
    var duelselect = new Y.DuelSelect({source:"#source",target:"#target",valueNode:"#selectedActions",type:Y.one("#actionType").get("value"),addButton:"#duelAdd",removeButton:"#duelRemove"});
    Y.one("#actionType").on("change",function(e){
      Y.one("#duelQuery").set("value","");
      duelselect.filter(Y.one("#actionType").get("value"),Y.one("#duelQuery").get("value"));
    });
    Y.one("#duelSearch").on("click",function(e){
      duelselect.filter(Y.one("#actionType").get("value"),Y.one("#duelQuery").get("value"));
    });
    Y.one("#duelQuery").on("keydown",function(e){
      if(e.keyCode==13){
          e.preventDefault();
          duelselect.filter(Y.one("#actionType").get("value"),Y.one("#duelQuery").get("value"));
      }
    });
  });
</script>