<%= setting_show_title(:show_data => @function_group[:name]) %>

<div id="ep" class="detail-block page-block">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_function_group) %></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= link_to t(:edit), {:action => "edit", :id => @function_group}%></div>
            <div class="button"><%= link_to t(:back), {:action => "index"} %></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_function_group_group_code)%></label></td>
              <td class="data2Col"><%= @function_group.code%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_function_group_name)%></label></td>
              <td class="data2Col"><%= @function_group[:name]%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=t(:label_irm_function_group_description)%></label></td>
              <td class="data2Col"><div><%= @function_group[:description]%></div></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :active)%></label></td>
              <td class="data2Col"><%= check_img(@function_group.status_code)%></td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="listRelatedObject setupBlock">
    <div class="page-block">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_function_list) %></h2></td>
              <td  class="pbButton">
              </td>
              <td class="pbHelp">
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
        <div id="functions_list" class="datatable" style="width:100%">
          <div id="id" style="display:none">
            <%= link_to(t(:edit),{:action=>"edit",:id=>"{id}"}) %>&nbsp;&nbsp;<%= link_to(t(:show),{:action=>"show",:id=>"{id}"}) %>
          </div>
          <div id="status_code" style="display:none">
            <%= check_img("{status_code}") %>
          </div>
        </div>
        <%= datatable("functions_list",url_for(:controller=>"irm/functions",:action=>"get_data",:function_group_id=>@function_group.id,:format=>"json"),
                      [{:key=>"id",:label=>t(:operation),:formatter=>"Y.irm.template", :width => "80px"},
                       {:key=>"code",:label=>t(:label_irm_function_function_code)},
                       {:key=>"name",:label=>t(:label_irm_function_name)},
                       {:key=>"description",:label=>t(:label_irm_function_description)},
                       {:key=>"status_code",:label=>t(:active),:formatter=>"Y.irm.template"}],
                       {:paginator_box=>"functionPaginator"}) %>
        <div id="functionPaginator"></div>
      </div>
    </div>
</div>

