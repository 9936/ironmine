<div class="sub-block">
    <h3 class="lbHeader"></h3>
    <table cellpadding="0" cellspacing="0" border="0" style="width:100%">
      <tbody>
        <tr>
          <td class="pbTitle"><h3 class="lbHeader"><%= t(:label_irm_bulletin_list) %></h3></td>
          <td id="topButtonRow" class="pbButton">
          </td>
          <td class="pbHelp">
          </td>
        </tr>
      </tbody>
    </table>
    <div class="lbBody">
        <div>
          <div class="irm-datatable">
                <table id='rows'>
                  <thead>
                    <tr>
                      <th >
                        <div><%= t(:label_irm_bulletin_title) %>
                        </div>
                      </th>
                      <th style="width:180px;">
                        <div ><%= t(:label_irm_bulletin_page_views) %>
                        </div>
                      </th>
                      <th style="width:180px;">
                        <div ><%= t(:label_irm_bulletin_published_date) %>
                        </div>
                      </th>
                    </tr>
                  </thead>
                  <tbody >
                  <% results.each do |r| %>
                  <tr id="<%=r.id%>" >
                    <td >
                      <div>
                          <%= link_to(r[:bulletin_title], {:controller => "irm/bulletins", :action => "show", :id => r[:id]})%>
                       </div>
                    </td>
                    <td >
                      <div>
                        <%= r[:page_views] %>
                      </div>
                    </td>
                    <td >
                      <div >
                        <%= r[:published_date]%>
                      </div>
                    </td>
                  </tr>
                  <% end -%>
                  </tbody>
                </table>
          </div>
        </div>
    </div>
</div>
