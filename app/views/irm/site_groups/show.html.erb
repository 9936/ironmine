<div class="bPageTitle">
  <div class="ptBody">
    <div class="content">
      <h1 class="pageType"><%= t(:label_irm_site_group_show) %></h1>
      <h2 class="pageDescription"><%=@site_group.group_code%></h2>
      <div class="blank">&nbsp;</div>
    </div>
    <div class="links">
      <a href="javascript:void(0);" class="configLinks">编辑局部</a>|
      <a href="javascript:void(0);" class="configLinks">用户简档</a>|
      <a href="javascript:void(0);" class="configLinks"><%=t(:label_help_about_page)%></a>
    </div>
    <div class="ptBreadcrumb"></div>
  </div>
</div>

<div id="ep" class="bDetailBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_site_group_show) %>&nbsp;<%= t(:label_detail_info) %></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= link_to t(:edit), {:action => "edit", :id => @site_group}%></div>
            <div class="button"><%= link_to t(:new), {:action => "new"}%></div>
            <div class="button"><%= link_to t(:back), {:action => "index"}%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_site_group_region_name)%></label></td>
              <td class="dataCol"><%=@site_group[:region_name]%></td>
              <td class="labelCol"><label><%=(t :label_irm_site_group_group_code)%></label></td>
              <td class="dataCol"><%=@site_group.group_code%></td>
            </tr>
            <tr>              
              <td class="labelCol"><label><%=(t :label_irm_site_group_name)%></label></td>
              <td class="dataCol"><%=@site_group[:name]%></td>
              <td class="labelCol"><label><%=(t :label_irm_site_group_status_code)%></label></td>
              <td class="dataCol"><%=@site_group[:status_meaning]%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_site_group_description)%></label></td>
              <td class="dataCol"><%=@site_group[:description]%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

