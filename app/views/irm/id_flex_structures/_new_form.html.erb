<%= setting_title %>

<%= form_for(@id_flex_structure,:url=>{:action=>"create"},:builder => LabellingFormBuilder) do |f| %>
<%= hidden_field_tag "return_url",@return_url%>    
<div id="ep" class="bEditBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%=t(:label_irm_id_flex_structure_edit)%></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= f.submit t(:save)%></div>
            <% if @return_url.blank?%>
                <div class="button"><%= link_to t(:cancel), {:action => "index", :id_flex_code => @id_flex_structure.id_flex_code}%></div>
            <% else %>
                <div class="button"><%= link_to t(:cancel), @return_url%></div>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <%= error_for @id_flex_structure%>
    <div id="head_1_ep" class="pbSubheader first tertiaryPalette">
      <span class="pbSubExtra">
        <span class="requiredLegend">
          <span class="requiredExampleOuter">
            <span class="requiredExample">&nbsp;</span>
          </span><span class="requiredMark">*</span>
          <span class="requiredText"> = <%=t(:label_is_required)%></span>
        </span>
      </span>
      <h3><%= t(:label_common_info) %></h3>
    </div>
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_id_flex_name_full)%></label></td>
              <td class="dataCol"><%= @id_flex.id_flex_name%></td>
              <td class="labelCol"><label><%=(t :label_irm_id_flex_code)%></label></td>
              <td class="dataCol"><%= @id_flex.id_flex_code%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_id_flex_structure_name)%></label></td>
              <td class="dataCol"><%=f.text_field :id_flex_structure_name, :required=>true%></td>
              <td class="labelCol"><label><%=(t :label_irm_id_flex_structure_code)%></label></td>
              <td class="dataCol"><%= f.text_field :id_flex_structure_code, :required => true%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_id_flex_structure_description)%></label></td>
              <td class="dataCol"><%=f.text_area :description, :rows => 4%></td>
              <td class="labelCol"><%=(t :label_irm_id_flex_structure_concatenated_segment_delimiter)%></td>
              <td class="dataCol"><%= f.text_field :concatenated_segment_delimiter %></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :active)%></label></td>
              <td class="dataCol"><%=f.select :status_code, available_active_status, {:include_blank => false}%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <%= f.hidden_field :id_flex_code, :value => @id_flex_structure.id_flex_code %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="pbBottomButtons">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"></td>
          <td id="bottomButtonRow" class="pbButtonb">
            <div class="button"><%= f.submit t(:save)%></div>
            <% if @return_url.blank?%>
                <div class="button"><%= link_to t(:cancel), {:action => "index", :id_flex_code => @id_flex_structure.id_flex_code}%></div>
            <% else %>
                <div class="button"><%= link_to t(:cancel), @return_url%></div>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<% end %>