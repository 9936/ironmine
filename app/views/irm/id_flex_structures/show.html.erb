<%= page_title %>

<div id="ep" class="bDetailBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_id_flex_structure) %></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= link_to t(:edit), {:action => "edit", :id => @id_flex_structure}%></div>
            <div class="button"><%= link_back %></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_id_flex_structure_code)%></label></td>
              <td class="dataCol"><%= @id_flex_structure.id_flex_structure_code%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_id_flex_structure_name)%></label></td>
              <td class="dataCol"><%= @id_flex_structure[:id_flex_structure_name]%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_id_flex_structure_description)%></label></td>
              <td class="dataCol"><div><%= @id_flex_structure[:description]%></div></td>
              <td class="labelCol"><%=(t :label_irm_id_flex_structure_concatenated_segment_delimiter)%></td>
              <td class="dataCol"><%= @id_flex_structure.concatenated_segment_delimiter%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :active)%></label></td>
              <td class="dataCol"><%= @id_flex_structure.status_code%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="listRelatedObject setupBlock">
    <div class="bPageBlock">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_id_flex_segment_list) %></h2></td>
              <td class="pbButton">
                <div class="button"><%= link_to t(:new),
                {:controller => "irm/id_flex_segments", :action => "new", :id_flex_code => @id_flex_structure.id_flex_code, :id_flex_num => @id_flex_structure.id_flex_num}%></div>
              </td>
              <td class="pbHelp">
                <select title="显示所选内容" name="hotlist_mode" id="hotlist_mode"><option value="2">最近创建</option>
                <option value="1">最近修改</option>
                <option selected="selected" value="3">最近查看</option>
                </select>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
        <div id="pizza" class="datatable" style="width:100%">
          <div id="id" style="display:none">
            <%= link_to(t(:edit),{:controller => "irm/id_flex_segments", :action => "edit", :id => "{id}"}) %>|<%= link_to(t(:show),{:controller => "irm/id_flex_segments", :action => "show", :id => "{id}"}) %>|<%= link_to(t(:remove),{}) %>
          </div>
        </div>
        <%= datatable("pizza",url_for(:controller => "irm/id_flex_segments", :action=>"get_data", :id_flex_structure_id => @id_flex_structure,:format=>"json"),
                      [{:key=>"id",:label=>t(:operation),:formatter=>"Y.irm.template"},
                       {:key=>"segment_num",:label=>t(:label_irm_id_flex_segment_segment_num),:sortable=>true},
                       {:key=>"segment_name",:label=>t(:label_irm_id_flex_segment_name),:sortable=>true},
                       {:key=>"form_left_prompt",:label=>t(:label_irm_id_flex_segment_form_left_prompt),:sortable=>true},
                       {:key=>"description",:label=>t(:label_irm_id_flex_segment_description),:sortable=>true},
                       {:key=>"value_set_name",:label=>t(:label_irm_value_set),:sortable=>true},
                       {:key=>"status_code",:label=>t(:active),:sortable=>true}]) %>
      </div>
    </div>
</div>