<div class="bSubBlock">
    <% tasks_count = my_tasks_count %>
    <% list_limit = 5%>
    <h3 class="lbHeader"><%= t(:my_task) + "(" + tasks_count.to_s + ")" %></h3>
    <div class="lbBody">
      <ul>
        <%= raw(my_tasks_list(list_limit)) %>
      </ul>
    </div>
    <div class="quickCreateField">
      <div class="button"><%= link_to t(:label_irm_wf_task_new), {:controller => "irm/wf_tasks", :action => "new"} %></div>
      <div style="float:right;"><%= (link_to t(:more) + "...", {:controller => "irm/wf_tasks", :action => "my_tasks_index"}) if tasks_count >= list_limit %></div><br>
    </div>
</div>