<style type="text/css">
  div.trigger{
      float:left;
  }
</style>
<%= form_for(@wf_rule_time_trigger,:url=>{:action=>"create"},:builder => LabellingFormBuilder) do |f| %>
    <%= f.hidden_field(:rule_id)%>
    <%= back_url_hidden_field_tag%>
<div id="ep" class="bEditBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%=t(:label_irm_wf_rule_time_trigger_new)%></h2></td>
          <td id="topButtonRow" class="pbButton">
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <%= error_for @wf_rule_time_trigger %>
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label for="wf_rule_time_trigger_rule"><%=t(:label_irm_wf_rule_time_trigger_rule)%></label></td>
              <td class="dataCol"><%=wf_rule_name(@wf_rule_time_trigger.rule_id)%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <tr>
              <td class="labelCol">&nbsp;</td>
              <td class="dataCol" colspan="3" width="82%">
                <div class="trigger">
                     <%=f.text_field :time_lead,:size=>5, :required=>true%>
                </div>
                <div class="trigger">
                     <%=f.select :time_unit,available_wf_trigger_time_unit%>
                </div>
                <div class="trigger">
                     <%=f.select :trigger_mode,available_wf_trigger_time_mode%>
                </div>
                <div class="trigger">
                     <%=f.select :trigger_data_object, available_wf_trigger_date_attribute(@wf_rule_time_trigger.rule_id)%>
                </div>
              </td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="pbBottomButtons">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"></td>
          <td id="bottomButtonRow" class="pbButtonb">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_to t(:cancel),back_url_default({:controller=>"irm/wf_rules",:action=>"show",:id=>@wf_rule_time_trigger.rule_id})%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<% end %>
