   <div id="form_area" class="container">
     <%= form_for(@menu,:url=>{:action=>"update"},:builder => LabellingFormBuilder) do |f| %>
                <div class="containerheader">
                    <div class="floatleft headertitle"><%=t(:label_irm_menu_edit)%> - <%= @menu.menu_code%></div>
                </div>
                <table class="twocolumnstable" cellspacing="0">
                    <tr>
                        <td class="twocolumn">
                           <table class="itemdetailtable">
                               <tr><td class="itemdetailtablelabel"><%=(t :label_irm_menu_menu_code)%>:</td>
                                <td><%=f.text_field :menu_code,:size=>40,:required=>true,:irm_uppercase=>true, :readonly=> true %></td>
                            </tr>
                            <tr><td class="itemdetailtablelabel"><%=(t :label_irm_menu_name)%>:</td>
                              <td><%=f.text_field :name, :value => @menu[:name] ,:size=>40,:required=>true%></td>
                            </tr>
                            <tr><td class="itemdetailtablelabel"><%=(t :active)%>:</td>
                              <td><%=f.check_box :active_flag%></td>
                            </tr>                             
                           </table>
                        </td>
                        <td class="twocolumn" cellspacing="0">
                           <table class="itemdetailtable">
                            <div id="id_lookup_level">
                               <tr><td class="itemdetailtablelabel">
                                     <%=t(:label_irm_menu_description)%>:
                               </td>
                               <td><%= f.text_area :description, :value => @menu[:description], :cols => 40, :rows => 2%></td>
                            </tr>
                            </div>
                           </table>
                        </td>
                        <td width="10%"></td>
                    </tr>
                </table>
                <div class="containerfooter">
                    <div class="button floatright" ><%= link_to t(:save), {}, {:action_type => "ajaxSubmit", :script => "/replace(system_message_box,system_message_box);reload('menus_grid');/replace(system_message_box,system_message_box);"}%></div>
                    <div class="button floatright"><%= link_to t(:cancel), {:action => "new"}, :script => "/replace(form_area,form_area);/", :action_type=>"ajaxLink"%></div>
                </div>
     <% end %>
   </div>
