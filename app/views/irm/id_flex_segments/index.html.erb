<%= setting_title %>
<div class="listRelatedObject setupBlock">
    <div class="page-block">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_id_flex_segment_list) %></h2></td>
              <td class="pbButton">
                <div class="button"></div>
              </td>
              <td class="pbHelp">
                <div id="segmentsSearchBox"></div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
        <div id="id_flex_segments_list" class="datatable" style="width:100%">
          <div id="id" style="display:none">
            <%= link_to(t(:edit),{:controller => "irm/id_flex_segments", :action => "edit", :id => "{id}"})%>&nbsp;
            <%= link_to(t(:show),{:controller => "irm/id_flex_segments", :action => "show", :id => "{id}"}) %>&nbsp;
            <%= icon_link_remove({}) %>
          </div>
          <div id="status_code" style="display:none">
            <%= check_img("{status_code}") %>
          </div>                  
        </div>
        <%= datatable("id_flex_segments_list",url_for(:controller => "irm/id_flex_segments", :action=>"get_data", :format=>"json"),
                      [{:key=>"id",:label=>t(:operation),:formatter=>"Y.irm.template", :width => "120px"},
                       {:key=>"segment_num",:label=>t(:label_irm_id_flex_segment_segment_num)},
                       {:key=>"segment_name",:label=>t(:label_irm_id_flex_segment_name),:searchable=>true},
                       {:key=>"form_left_prompt",:label=>t(:label_irm_id_flex_segment_form_left_prompt),:searchable=>true},
                       {:key=>"description",:label=>t(:label_irm_id_flex_segment_description)},
                       {:key=>"value_set_name",:label=>t(:label_irm_value_set),:searchable=>true},
                       {:key=>"status_code",:label=>t(:active),:formatter=>"Y.irm.template", :width => "40px"}],
                       {:search_box=>"segmentsSearchBox"}) %>
      </div>
    </div>
</div>