<%= common_title%>
<div class="listRelatedObject setupBlock">
    <div class="page-block">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_external_system_list) %></h2></td>
              <td id="topButtonRow" class="pbButton">
                <div class="button"><%= link_to t(:new), {:action => "new"}%></div>
              </td>
              <td class="pbHelp">
                <div id="external_systemsSearchBox"></div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
        <div id="external_systems" class="datatable" style="width:100%">
          <div id="id" style="display:none">
            <%= link_to(t(:edit),{:action=>"edit",:id=>"{id}"}) %>|<%= link_to(t(:show),{:action=>"show",:id=>"{id}"}) %>
          </div>
        </div>
        <%= datatable("external_systems",url_for(:action=>"get_data",:format=>"json"),
                      [{:key=>"id",:label=>t(:operation),:formatter=>"Y.irm.template",:width=>"80px"},
                       
                       { :key => "external_system_code", :label => t(:label_irm_external_system_external_system_code),:searchable=>true },
                       { :key => "system_name", :label => t(:label_irm_external_system_system_name),:searchable=>true },
                       { :key => "system_description", :label => t(:label_irm_external_system_system_description) },
                       { :key => "external_hostname", :label => t(:label_irm_external_system_external_hostname),:searchable=>true },
                       { :key => "external_ip_address", :label => t(:label_irm_external_system_external_ip_address),:searchable=>true },
                       { :key => "status_meaning", :label => t(:label_irm_external_system_status_meaning)}

                       ],{:row_perpage=>10,:search_box=>"external_systemsSearchBox",:paginator_box=>"external_systemsPaginatorBox"})%>
        <div id="external_systemsPaginatorBox"></div>
      </div>
    </div>
</div>


