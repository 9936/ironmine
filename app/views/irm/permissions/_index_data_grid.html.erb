<div class="listRelatedObject setupBlock">
    <div class="bPageBlock">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_permission_list) %></h2></td>
              <td id="topButtonRow" class="pbButton">
                <div class="button"><%= link_to t(:new), {:controller => "irm/permissions", :action => "new"}%></div>
              </td>
              <td class="pbHelp">
                <div id="permissionsSearchBox"></div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
        <div id="permissions_list" class="datatable" style="width:100%">
          <div id="id" style="display:none">
            <%= link_to(t(:edit),{:controller => "irm/permissions", :action=>"edit",:id=>"{id}"}) %>|<%= link_to(t(:show),{:controller => "irm/permissions", :action=>"show",:id=>"{id}"}) %>
          </div>
        </div>
        <%= datatable("permissions_list",url_for(:controller => "irm/permissions", :action=>"get_data",:format=>"json"),
                      [{:key=>"id",:label=>t(:operation),:formatter=>"Y.irm.template",:width=>"50%"},
                       {:key=>"product_module_name",:label=>t(:label_irm_permission_product_name),:sortable=>true,:searchable=>true},
                       {:key=>"permission_code",:label=>t(:label_irm_permission_permission_code),:sortable=>true,:searchable=>true},
                       {:key=>"name",:label=>t(:label_irm_permission_name),:sortable=>true},
                       {:key=>"page_controller",:label=>t(:label_irm_permission_page_controller),:sortable=>true},
                       {:key=>"page_action",:label=>t(:label_irm_permission_page_action),:sortable=>true},
                       {:key=>"status_meaning",:label=>t(:label_irm_permission_status_code),:sortable=>true}],{:not_load=>true,:search_box=>"permissionsSearchBox"})%>
      </div>
    </div>
</div>
