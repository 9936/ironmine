<div id="form_area" class="container">
     <%= form_for(@permission,:url=>{:action=>"create"},:builder => LabellingFormBuilder) do |f| %>
            <div class="containerheader">
                <div class="floatleft headertitle"><%=t(:label_irm_permission_new)%></div>
            </div>
            <table class="twocolumnstable" cellspacing="0">
                <tr>
                    <td class="twocolumn">
                       <table class="itemdetailtable">
                            <tr><td class="itemdetailtablelabel"><%=(t :label_irm_permission_permission_code)%>:</td>
                              <td><%=f.text_field :permission_code, :size=>40,:required=>true,:irm_uppercase=>true%></td>
                            </tr>
                            <tr><td class="itemdetailtablelabel"><%=(t :label_irm_permission_name)%>:</td>
                              <td><%=f.text_field :name, :size=>40,:required=>true%></td>
                            </tr>
                            <tr><td class="itemdetailtablelabel"><%=(t :label_irm_permission_page_controller)%>:</td>
                              <td><%=f.text_field :page_controller, :size=>40,:required=>true%></td>
                            </tr>
                            <tr><td class="itemdetailtablelabel"><%=(t :label_irm_permission_page_action)%>:</td>
                              <td><%=f.text_field :page_action, :size=>40,:required=>true%></td>
                            </tr>
                            <tr><td class="itemdetailtablelabel"><%=(t :label_irm_permission_product_name)%>:</td>
                                <td><%=f.select :product_id, available_product_modules, {:include_blank => false}%></td>
                            </tr>
                            <tr><td class="itemdetailtablelabel"><%=(t :active)%>:</td>
                              <td><%=f.select :status_code, available_active_status, {:include_blank => false}%></td>
                            </tr>
                       </table>
                    </td>
                    <td class="twocolumn" cellspacing="0">
                       <table class="itemdetailtable">
                        <tr><td class="itemdetailtablelabel">
                              <%=t(:label_irm_permission_description)%>:
                           </td>
                           <td><%= f.text_area :description, :cols => 40, :rows => 4%></td>
                        </tr>
                       </table>
                    </td>
                    <td width="10%"></td>
                </tr>
            </table>
            <div class="containerfooter">
                <div class="button floatright"><%= link_to t(:save), {}, {:action_type => "ajaxSubmit", :script => "/replace(system_message_box,system_message_box);reload_grid('permissions_grid');/replace(system_message_box,system_message_box);"}%></div>
                <div class="button floatright"><%= link_to t(:cancel), {:action => "new"}, :script => "/replace(form_area,form_area);/", :action_type=>"ajaxLink"%></div>
            </div>
     <% end %>
</div>
