    <div id="data_area">
        <div class="containerheader">
           <div class="floatleft headertitle"><%=t(:label_irm_permission_list)%></div>
        </div>
        <div id="permissions_grid" class="datagrid"
            action_type="ajaxDhtmlxGrid"
            grid_header=" , <%=t(:label_irm_permission_product_name)%>,<%=t(:label_irm_permission_permission_code)%>,
            <%=t(:label_irm_permission_name)%>,<%=t(:label_irm_permission_page_controller)%>,
            <%=t(:label_irm_permission_page_action)%>,<%=t(:label_irm_permission_status_code)%>,<%=t(:multilingual)%>"
            grid_width="20,100,100,100,100,80,80,80,80"
            grid_col_types="ra,ro,ro,ro,ro,ro,ro,link"
            grid_onRowDblClicked="dblClickHandler"
            grid_OnRowSelected="rowSelectedHandler"
            grid_paging_skin="bricks"
            grid_attachHeader = "&nbsp;,#select_filter,#text_search,#text_search,#text_search,#text_search,&nbsp;,#cspan"
            enable_paging="true, 15, null, 'pagingArea', true, 'infoArea'"
            grid_load="'<%= url_for(:action => "get_data", :controller => "irm/permissions", :format=>:json) %>',function(){init('#permissions_grid');},'json'">
        </div><span id="infoArea"></span>
        <span id="recfound"></span>
        <script>
            function dblClickHandler(rId, cInd){
                processDblClicked("container1","permission_edit","<%= url_for(:action => "edit", :controller => "irm/permissions", :id => ":id") %>", rId);
            }
            function rowSelectedHandler(id, ind){
                dhtmlx_grid_array['permissions_grid'].cells(id, 0).setValue("1");
            }
        </script>
        <div class="containerfooter">
          <div class="floatleft"><span id="pagingArea"></span></div>
        </div>
    </div>