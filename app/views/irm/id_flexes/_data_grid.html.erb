    <div id="data_area">
        <div class="containerheader">
           <div class="floatleft headertitle"><%=t(:label_irm_id_flex_list)%></div>
        </div>
        <div id="id_flexes_grid" class="datagrid"
            action_type="ajaxDhtmlxGrid"
            grid_header=" ,<%=t(:label_irm_id_flex_code)%>, <%=t(:label_irm_id_flex_name)%>,<%=t(:label_irm_id_flex_description)%>,<%=t(:active)%>"
            grid_width="20,100,100,150,100"
            grid_col_types="ra,ro,ro,ro,ro"
            grid_onRowDblClicked="dblClickHandler"
            grid_OnRowSelected="rowSelectedHandler"
            grid_paging_skin="bricks"
            enable_paging="true, 15, null, 'pagingArea', true, 'infoArea'"
            grid_load="'<%= url_for(:action => "get_data", :controller => "irm/id_flexes", :format=>:json) %>','','json'">
        </div><span id="infoArea"></span>
        <span id="recfound"></span>
        <script>
            function dblClickHandler(rId, cInd){
                processDblClicked("container1","id_flex_edit","<%= url_for(:action => "edit", :controller => "irm/id_flexes", :id => ":id") %>", rId);
            }
            function rowSelectedHandler(id, ind){
                dhtmlx_grid_array['id_flexes_grid'].cells(id, 0).setValue("1");
            }
        </script>
        <div class="containerfooter">
          <div class="floatleft"><span id="pagingArea"></span></div>
        </div>
    </div>