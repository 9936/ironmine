<%= form_for(@report_type,:url=>{:action=>"update"},:builder => LabellingFormBuilder) do |f| %>
<div id="ep" class="edit-block page-block">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%=t(:label_irm_report_type_new)%></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_back t(:cancel)%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <%= error_for @report_type %>
    <div id="head_1_ep" class="pbSubheader first tertiaryPalette">
      <span class="pbSubExtra">
        <span class="requiredLegend">
          <span class="requiredExampleOuter">
            <span class="requiredExample">&nbsp;</span>
          </span><span class="requiredMark">*</span>
          <span class="requiredText"> = <%=t(:label_is_required)%></span>
        </span>
      </span>
      <h3><%= t(:label_irm_report_type_business_object) %></h3>
    </div>
    <div class="pbSubsection">
        <table class="detailList" cellpadding="0" cellspacing="0" border="0">
          <tbody>
              <tr>
                <td class="labelCol"><label for="report_type_business_object_id"><%=t(:label_irm_report_type_business_object)%></label></td>
                <td class="dataCol"><%= @report_type[:business_object_name] %></td>
                <td class="labelCol empty">&nbsp;</td>
                <td class="dataCol empty">&nbsp;</td>
              </tr>
          </tbody>
        </table>
    </div>
    <div id="head_2_ep" class="pbSubheader tertiaryPalette">
      <h3><%= t(:label_common_info) %></h3>
    </div>
    <div class="pbSubsection">
        <table class="detailList" cellpadding="0" cellspacing="0" border="0">
          <tbody>
              <tr>
                <td class="labelCol"><label for="report_type_code"><%=t(:label_irm_report_type_code)%></label></td>
                <td class="dataCol"><%= @report_type.code %></td>
                <td class="labelCol empty">&nbsp;</td>
                <td class="dataCol empty">&nbsp;</td>
              </tr>
              <tr>
                <td class="labelCol"><label for="report_type_name"><%=t(:label_irm_report_type_name)%></label></td>
                <td class="dataCol"><%=f.text_field :name, :required=>true ,:id=>"report_type_name"%></td>
                <td class="labelCol empty">&nbsp;</td>
                <td class="dataCol empty">&nbsp;</td>
              </tr>
              <tr>
                <td class="labelCol"><label for="report_type_description"><%=t(:label_irm_report_type_description)%></label></td>
                <td class="dataCol" colspan="3" width="82%"><%=f.text_area :description,:rows=>4, :required=>true ,:id=>"report_type_description"%></td>
                <td class="labelCol empty">&nbsp;</td>
                <td class="dataCol empty">&nbsp;</td>
              </tr>
              <tr>
                <td class="labelCol"><label for="report_type_category_id"><%=t(:label_irm_report_type_category)%></label></td>
                <td class="dataCol"><%=f.blank_select :category_id,available_report_type_category,{},:required=>true ,:id=>"report_type_category_id"%></td>
                <td class="labelCol empty">&nbsp;</td>
                <td class="dataCol empty">&nbsp;</td>
              </tr>
          </tbody>
        </table>
    </div>
  </div>
  <div class="pbBottomButtons">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"></td>
          <td id="bottomButtonRow" class="pbButtonb">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_back t(:cancel)%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<% end %>
