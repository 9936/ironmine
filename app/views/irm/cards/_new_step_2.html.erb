<div  class="wizard-block">
    <div class="pbWizardTitle tertiaryPalette">
        <div class="ptRightTitle">
            <%= t(:step_n_total_m, :n => "2", :m => "2") %>
        </div>
        <h2>
            <%= t(:step_n, :n => "2") %><%= t(:label_irm_card_rule_config) %>
        </h2>
    </div>
  <div class="pbBody">
    <%= form_for(@card,:url=>{:action=>"create"},:builder => LabellingFormBuilder) do |f| %>
      <%= error_for @card %>
      <%= error_for @rule_filter %>
      <div id="head_3_ep" class="pbSubheader tertiaryPalette">
        <h3><%= t(:label_irm_card_column_config) %></h3>
      </div>

      <div class="pbSubsection">
          <table class="detailList" cellpadding="0" cellspacing="0" border="0">
            <tbody>
                <tr>
                  <td class="labelCol"><label><%=(t :label_irm_card_title_column)%></label></td>
                  <td class="data2Col"><%=f.select :title_attribute_name, available_selectable_object_attribute(@card.bo_code)%></td>
                </tr>
                <tr>
                  <td class="labelCol"><label><%=(t :label_irm_card_description_column)%></label></td>
                  <td class="data2Col"><%=f.select :description_attribute_name, available_selectable_object_attribute(@card.bo_code)%></td>
                </tr>
                <tr>
                  <td class="labelCol"><label><%=t(:label_irm_card_date_column)%></label></td>
                  <td class="data2Col"><%=f.select :date_attribute_name, available_selectable_object_attribute(@card.bo_code)%></td>
                </tr>
            </tbody>
          </table>
      </div>

      <div id="head_3_ep" class="pbSubheader tertiaryPalette">
        <h3><%= t(:label_irm_card_rule) %></h3>
      </div>
      <% if @rule_filter %>
        <%= render "rule_filter" %>
      <% end %>
      <div class="pbWizardFooter">
          <div class="pbBottomButtons">
              <table cellpadding="0" cellspacing="0" border="0">
                <tbody>
                  <tr>
                    <td class="pbTitle"></td>
                    <td id="bottomButtonRow" class="pbButtonb">
                      <div class="button"><%= link_to t(:last), {:action => "new",:step=>1} %></div>
                      <div class="button"><%= f.submit t :save %></div>
                      <div class="button"><%= link_to t(:cancel), {:action => "index"} %></div>
                    </td>
                  </tr>
                </tbody>
              </table>
          </div>
      </div>
    <%end%>
  </div>
</div>