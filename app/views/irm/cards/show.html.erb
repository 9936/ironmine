<%= setting_show_title(:show_data => @card[:name]) %>

<div id="ep" class="bDetailBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_card) %></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= link_to t(:edit), {:action => "edit", :id => @card}%></div>
            <div class="button"><%= link_to t(:back), {:action => "index"} %></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_card_code)%></label></td>
              <td class="data2Col"><div><%= @card.card_code%></div></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :name)%></label></td>
              <td class="data2Col"><div><%= @card[:name]%></div></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :description)%></label></td>
              <td class="dataCol"><%= @card[:description]%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_card_background_color)%></label></td>
              <td class="dataCol"><%= @card.background_color%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_card_font_color)%></label></td>
              <td class="dataCol"><%= @card.font_color%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :active)%></label></td>
              <td class="data2Col"><div><%= check_img(@card.status_code)%></div></td>
            </tr>
            <tr>
              <td class="labelCol"><label ><%=t(:label_irm_wf_rule_filter)%></label></td>
              <td class="dataCol" colspan="3" style="width:82%"><div><%= @rule_filter.meaning %></div></td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>