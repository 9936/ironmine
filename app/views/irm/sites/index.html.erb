<div class="bPageTitle">
  <div class="ptBody">
    <div class="content">
      <h1 class="pageType"></h1>
      <h2 class="pageDescription"><%= t(:label_irm_site_index) %></h2>
      <div class="blank">&nbsp;</div>
    </div>
    <div class="links">
      <a href="javascript:void(0);" class="configLinks">此页面的帮助</a>
    </div>
    <div class="ptBreadcrumb"></div>
  </div>
</div>
<div class="filterOverview">
    <div class="bFilterView">
      <%= form_tag(:action => "select_site") do %>
      <span class="bFilter">
        <label style="text-align: left; font-weight: bold; padding-right: 0.69em;"><%= t(:label_irm_site_group_list) %>：</label>
        <span class="fBody">
            <%= select_tag(:site_group_code,"<option value=\"\">--- #{t(:actionview_instancetag_blank_option)} ---</option>".html_safe +
                           options_from_collection_for_select(available_site_group,:group_code,:wrap_name,@site_group.group_code)) %>
            <%= submit_tag t(:jump), :title => t(:jump), :class => "btn" %>
        </span>
        <span class="fFooter">
          <a href="javascript:void(0);">编辑</a> |
          <a href="javascript:void(0);">创建新视图</a>
        </span>
      </span>
      <% end %>
    </div>
</div>
<% if !@site_group.new_record? %>
<div id="ep" class="bDetailBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_site_index) %></h2></td>
          <td class="pbButton">
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_site_group_region_name)%></label></td>
              <td class="dataCol"><%= @site_group[:region_name]%></td>
              <td class="labelCol"><label><%=(t :label_irm_site_site_group_name)%></label></td>
              <td class="dataCol"><%= @site_group[:name]%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_site_description)%></label></td>
              <td class="dataCol"><%= @site_group[:description]%></td>
              <td class="labelCol"><label><%=(t :active)%></label></td>
              <td class="dataCol"><%= @site_group.status_code%></td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="listRelatedObject setupBlock">
    <div class="bPageBlock">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_site_list) %></h2></td>
              <td id="topButtonRow" class="pbButton">
                <div class="button"><%= link_to t(:new), {:action => "new", :site_group_code => @site_group.group_code}%></div>
              </td>
              <td class="pbHelp">
                <select title="显示所选内容" name="hotlist_mode" id="hotlist_mode"><option value="2">最近创建</option>
                <option value="1">最近修改</option>
                <option selected="selected" value="3">最近查看</option>
                </select>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
        <div id="pizza" class="datatable" style="width:100%">
          <div id="id" style="display:none">
            <%= link_to(t(:edit),{:action=>"edit",:id=>"{id}"}) %>|<%= link_to(t(:show),{:action=>"show",:id=>"{id}"}) %>
          </div>
        </div>
        <%= datatable("pizza",url_for(:action=>"get_data",:site_group_code => @site_group.group_code),
                      [{:key=>"id",:label=>t(:operation),:formatter=>"Y.irm.template",:width=>"50%"},
                       {:key=>"site_code",:label=>t(:label_irm_site_site_code)},
                       {:key=>"name",:label=>t(:label_irm_site_name)},
                       {:key=>"description",:label=>t(:label_irm_site_description)},
                       {:key=>"status_meaning",:label=>t(:label_irm_site_status_code)}])%>
      </div>
    </div>
</div>
<% end %>
