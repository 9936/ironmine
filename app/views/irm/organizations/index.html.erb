<%= stylesheet_link_tag "/javascripts/yui3.3/datatable/assets/skins/sam/datatable.css"%>

<%= app_title %>
<div class="listRelatedObject setupBlock">
    <div class="bPageBlock">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_organization_list) %></h2></td>
              <td id="topButtonRow" class="pbButton">
                <div class="button"><%= link_to t(:new), {:action => "new"}%></div>
              </td>
              <td class="pbHelp">
                <div id="permissionsSearchBox"></div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
          <div class="datatable">
            <div class="yui3-widget yui3-datatable">
              <div class="yui3-datatable-content">
                  <table id='rows' cellspacing="0" cellpadding="0" class='grid'>
                    <thead class="yui3-datatable-columns">
                      <tr class="yui3-datatable-first yui3-datatable-last">
                        <th class="yui3-column" style="width:80px;">
                          <div class="yui3-datatable-liner"><%= t(:operation) %>
                          </div>
                        </th>
                        <th class="yui3-column" style="width:220px;">
                          <div class="yui3-datatable-liner"><%= t(:label_irm_organization_name) %>
                          </div>
                        </th>
                        <th class="yui3-column" style="width:180px;">
                          <div class="yui3-datatable-liner"><%= t(:label_irm_organization_parent_org) %>
                          </div>
                        </th>
                        <th class="yui3-column" style="width:180px;">
                          <div class="yui3-datatable-liner"><%= t(:description) %>
                          </div>
                        </th>

                      </tr>
                    </thead>
                    <tbody class="yui3-datatable-data">
                    <% @leveled_organizations.each do |organization| %>
                    <tr id="<%=organization.id%>" class="yui3-datatable-even">
                      <td class="yui3-column">
                        <div class='yui3-datatable-liner'>
                          <%= link_to(t(:edit),{:action=>"edit",:id=>organization.id}) %>
                          <%= link_to(t(:show),{:action=>"show",:id=>organization.id}) %>
                         </div>
                      </td>
                      <td class="yui3-column">
                        <div class='yui3-datatable-liner'>
                           <% organization.level.times do %>&nbsp;&nbsp;&nbsp;&nbsp;<%end%><%= organization[:name] %>(<%= organization.short_name %>)
                        </div>
                      </td>
                      <td class="yui3-column">
                        <div class='yui3-datatable-liner'>
                           <%= organization[:parent_org_name] %>
                        </div>
                      </td>
                      <td class="yui3-column">
                        <div class='yui3-datatable-liner'>
                           <%= organization[:description] %>
                        </div>
                      </td>
                    </tr>
                    <% end -%>
                    </tbody>
                  </table>
              </div>
            </div>
          </div>
        </div>
    </div>
</div>