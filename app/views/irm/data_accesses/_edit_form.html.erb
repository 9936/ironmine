<%= form_tag({:action=>"update"}) do %>
<div id="ep" class="edit-block page-block">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%=t(:label_irm_data_access_edit)%></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= link_submit t(:save)%></div>
            <div class="button"><%= link_back t(:cancel)%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <%= error_for @data_access %>
         <div id="data_accesses" class="datatable" style="width:100%">
          <!--  irm datatable      -->
          <div class="irm-datatable">
            <div>
                <table count="<%=@data_accesses.length%>">
                  <thead>
                    <tr>
                      <th style="width:250px;">
                        <div><%= t(:label_irm_data_access_business_object) %></div>
                      </th>
                      <th  style="width:250px;">
                        <div><%= t(:label_irm_data_access_access_level) %></div>
                      </th>
                      <th>
                        <div><%= t(:label_irm_data_access_hierarchy_access_flag) %></div>
                      </th>
                    </tr>
                  </thead>
                  <tbody>
                  <% @data_accesses.each do |data_access| %>
                  <tr id="<%=data_access[:id]%>">
                    <td>
                      <div>
                        <%= data_access[:business_object_name] %>
                      </div>
                    </td>
                    <td>
                      <div>
                        <%= select_tag_alias("access_levels[#{data_access[:business_object_id]}]",available_access_level,data_access[:access_level]) %>
                      </div>
                    </td>
                    <td>
                      <div>
                        <%= hidden_field_tag("hierarchy_accesses[#{data_access[:business_object_id]}]",Irm::Constant::SYS_NO) %>
                        <%= check_box_tag("hierarchy_accesses[#{data_access[:business_object_id]}]","Y",Irm::Constant::SYS_YES.eql?(data_access[:hierarchy_access_flag])) %>
                      </div>
                    </td>
                  </tr>
                  <% end -%>
                  </tbody>
                </table>
            </div>
          </div>
          <!--  end irm datatable      -->
        </div>
  </div>
  <div class="pbBottomButtons">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"></td>
          <td id="bottomButtonRow" class="pbButtonb">
            <div class="button"><%= link_submit t(:save)%></div>
            <div class="button"><%= link_back t(:cancel)%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<% end %>
