<% if "RELATED_PERSON".eql?(params[:recipient_type])%>
    <%=blank_select_tag :recipient,available_bo_person_attribute(params[:bo_code]),{},:id=>"recipientValue"%>
<% elsif "PERSON".eql?(params[:recipient_type]) %>
    <%= lov_field_tag :recipient, "PEOPLE_LIST", :id => "recipientValue" %>
<% elsif "ROLE".eql?(params[:recipient_type]) %>
    <%=select_tag_alias :recipient,available_roles,{},:id=>"recipientValue"%>
<% else %>
    <%=text_field_tag :default,t(:label_irm_wf_mail_default_recipient),:id=>"recipientValue",:readonly=>true%>
<% end %>