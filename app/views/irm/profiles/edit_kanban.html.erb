<%= setting_title %>
<%= form_for(@profile_kanban,:url=>{:action=>"update_kanban", :profile_id => @profile.id},:builder => LabellingFormBuilder) do |f| %>
<%= f.hidden_field :profile_id, :value => @profile.id %>
<div id="ep" class="bEditBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%=t(:label_irm_profile_select_kanban)%></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_to t(:cancel), {:action=>"show", :id => @profile.id}%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <%= error_for @profile_kanban%>
    <div id="head_1_ep" class="pbSubheader first tertiaryPalette">
      <span class="pbSubExtra">
        <span class="requiredLegend">
          <span class="requiredExampleOuter">
            <span class="requiredExample">&nbsp;</span>
          </span><span class="requiredMark">*</span>
          <span class="requiredText"> = <%=t(:label_is_required)%></span>
        </span>
      </span>
      <h3><%= t(:label_common_info) %></h3>
    </div>
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_kanban)%></label></td>
              <td class="data2Col"><%=f.select :kanban_id, available_kanbans, {:required=>true}%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_profile_kanban_position)%></label></td>
              <td class="data2Col"><%=f.select :position_code, profile_available_kanban_positions(@profile.id) + [[@profile_kanban[:position_name], @profile_kanban.position_code]], {:required=>true}%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_lane_limit)%></label></td>
              <td class="data2Col"><%=f.text_field :limit%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_kanban_refresh_interval)%></label></td>
              <td class="data2Col"><%=f.text_field :refresh_interval%></td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="pbBottomButtons">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"></td>
          <td id="bottomButtonRow" class="pbButton">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_to t(:cancel), {:action=>"show", :id => @profile.id}%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<% end %>