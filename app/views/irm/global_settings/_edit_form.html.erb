<%= setting_title %>

<%= form_for(@global_setting,:url=>{:action=>"update", :id => @global_setting},:builder => LabellingFormBuilder, :html => {:method => :put, :id => "edit_setting_form", :multipart => true}) do |f| %>
<div id="ep" class="bEditBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_global_setting) %></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_to t(:cancel), {:action => "index"}%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <%= error_for @global_setting%>
    <div id="head_1_ep" class="pbSubheader first tertiaryPalette">
      <span class="pbSubExtra">
        <span class="requiredLegend">
          <span class="requiredExampleOuter">
            <span class="requiredExample">&nbsp;</span>
          </span><span class="requiredMark">*</span>
          <span class="requiredText"> = <%=t(:label_is_required)%></span>
        </span>
      </span>
      <h3><%= t(:label_common_info) %></h3>
    </div>
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label><%= t(:label_irm_global_setting_theme_name)%></label></td>
              <td class="data2Col"><%=f.select :theme_name, available_themes, {:include_blank => false}%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%= t(:label_irm_global_setting_upload_file_limit) %></label></td>
              <td class="data2Col"><%=f.text_field :upload_file_limit, :irm_numberonly => true, :required => true%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%= t(:label_irm_global_setting_timezone)%></label></td>
              <td class="data2Col"><%=f.select :timezone, available_timezone, {:include_blank => false}%></td>
            </tr>

            <tr>
              <td class="labelCol"><label><%= t(:label_irm_global_setting_timezone)%></label></td>
              <td class="data2Col"><%=f.select :timezone, available_timezone, {:include_blank => false}%></td>
            </tr>
        </tbody>
      </table>
    </div>
    <div id="head_1_ep" class="pbSubheader first tertiaryPalette">
      <span class="pbSubExtra">
        <span class="requiredLegend">
        </span>
      </span>
      <h3><%= t(:label_irm_global_setting_logo) %></h3>
    </div>
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label><%=(@settings.query_by_code("APP_TOP_LOGO").first[:name])%></label></td>
              <td class="data2Col"><%= file_field_tag @settings.query_by_code("APP_TOP_LOGO").first[:parameter_code],
                                                      :accept => 'image/png,image/gif,image/jpeg'%>&nbsp;<%= t :recommended_size%>:&nbsp;175px * 65px
              </td>
            </tr>
            <tr>
              <td class="labelCol"></td>
              <td class="data2Col">
              <%= image_tag @settings.query_by_code("APP_TOP_LOGO").first.img.url, :style => "width: 175px; height:65px; border: 1px solid #c9c9c9 !important" %></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(@settings.query_by_code("LOGIN_PAGE_LOGO").first[:name])%></label></td>
              <td class="data2Col"><%= file_field_tag @settings.query_by_code("LOGIN_PAGE_LOGO").first[:parameter_code],
                                                      :accept => 'image/png,image/gif,image/jpeg'%>&nbsp;<%= t :recommended_size%>:&nbsp;300px * 124px</td>
            </tr>
            <tr>
              <td class="labelCol"></td>
              <td class="data2Col">
              <%= image_tag @settings.query_by_code("LOGIN_PAGE_LOGO").first.img.url, :style => "width: 300px; height:124px; border: 1px solid #c9c9c9 !important" %></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(@settings.query_by_code("ADDRESS_BAR_LOGO").first[:name])%></label></td>
              <td class="data2Col"><%= file_field_tag @settings.query_by_code("ADDRESS_BAR_LOGO").first[:parameter_code],
                                                      :accept => 'image/png,image/gif,image/jpeg'%>&nbsp;<%= t :recommended_size%>:&nbsp;16px * 16px</td>
            </tr>
            <tr>
              <td class="labelCol"></td>
              <td class="data2Col">
              <%= image_tag @settings.query_by_code("ADDRESS_BAR_LOGO").first.img.url, :style => "width: 16px; height:16px; border: 1px solid #c9c9c9 !important" %></td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="pbBottomButtons">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"></td>
          <td id="bottomButtonRow" class="pbButtonb">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_to t(:cancel), {:action => "index"}%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<% end %>