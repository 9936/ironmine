<%= common_title %>

<%= form_for("setting",:url=>{:action=>"update"},:builder => LabellingFormBuilder, :html => {:method => :put, :id => "edit_setting_form", :multipart => true}) do |f| %>
<div id="ep" class="edit-block page-block">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_global_setting) %></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_to t(:cancel), {:action => "index"}%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <div id="head_1_ep" class="pbSubheader first tertiaryPalette">
      <span class="pbSubExtra">
        <span class="requiredLegend">
          <span class="requiredExampleOuter">
            <span class="requiredExample">&nbsp;</span>
          </span><span class="requiredMark">*</span>
          <span class="requiredText"> = <%=t(:label_is_required)%></span>
        </span>
      </span>
      <h3><%= t(:label_common_info) %></h3>
    </div>
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label><%=@setting_names[:APPLICATION_TITLE]%></label></td>
              <td class="data2Col"><%= text_field_tag "APPLICATION_TITLE",
                                                      @setting_values[:APPLICATION_TITLE],
                                                      :jrequired => true%>
              </td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(@setting_names[:HOST_NAME])%></label></td>
              <td class="data2Col"><%= text_field_tag "HOST_NAME",
                                                      @setting_values[:HOST_NAME],
                                                      :jrequired => true%>
              </td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(@setting_names[:HOST_PATH])%></label></td>
              <td class="data2Col"><%= text_field_tag "HOST_PATH",
                                                      @setting_values[:HOST_PATH],
                                                      :jrequired => true%>
              </td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(@setting_names[:HOST_PORT])%></label></td>
              <td class="data2Col"><%= text_field_tag "HOST_PORT" ,
                                                       @setting_values[:HOST_PORT],
                                                      :jrequired => true%>
              </td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(@setting_names[:EMISSION_EMAIL_ADDRESS])%></label></td>
              <td class="data2Col"><%= text_field_tag "EMISSION_EMAIL_ADDRESS" ,
                                                      @setting_values[:EMISSION_EMAIL_ADDRESS ],
                                                      :jrequired => true%>
              </td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(@setting_names[:UPLOAD_FILE_LIMIT])%></label></td>
              <td class="data2Col"><%= text_field_tag "UPLOAD_FILE_LIMIT" ,
                                                      @setting_values[:UPLOAD_FILE_LIMIT ],
                                                      :jrequired => true%>
              </td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(@setting_names[:TIMEZONE])%></label></td>
              <td class="data2Col"><%= select_tag "TIMEZONE" ,
                                                      options_for_select(available_timezone,@setting_values[:TIMEZONE ]),
                                                      :jrequired => true%>
              </td>
            </tr>
        </tbody>
      </table>
    </div>
    <div class="pbSubheader first tertiaryPalette">
      <span class="pbSubExtra">
        <span class="requiredLegend">
        </span>
      </span>
      <h3><%= t(:label_irm_global_setting_logo) %></h3>
    </div>
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label><%=(@setting_names[:APP_TOP_LOGO])%></label></td>
              <td class="data2Col"><%= file_field_tag "APP_TOP_LOGO" ,
                                                      :accept => 'image/png,image/gif,image/jpeg'%>&nbsp;<%= t :recommended_size%>:&nbsp;175px * 65px
              </td>
            </tr>
            <tr>
              <td class="labelCol"></td>
              <td class="data2Col">
              <%= image_tag Irm::SystemParametersManager.app_top_logo, :style => "width: 175px; height:65px;border: 1px solid #c9c9c9 !important;"%>
              </td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(@setting_names[:LOGIN_PAGE_LOGO])%></label></td>
              <td class="data2Col"><%= file_field_tag "LOGIN_PAGE_LOGO" ,
                                                      :accept => 'image/png,image/gif,image/jpeg'%>&nbsp;<%= t :recommended_size%>:&nbsp;300px * 124px</td>
            </tr>
            <tr>
              <td class="labelCol"></td>
              <td class="data2Col">
              <%= image_tag Irm::SystemParametersManager.login_page_logo, :style => "width: 300px; height:124px; border: 1px solid #c9c9c9 !important" %></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(@setting_names[:ADDRESS_BAR_LOGO])%></label></td>
              <td class="data2Col"><%= file_field_tag "ADDRESS_BAR_LOGO",
                                                      :accept => 'image/png,image/gif,image/jpeg'%>&nbsp;<%= t :recommended_size%>:&nbsp;16px * 16px</td>
            </tr>
            <tr>
              <td class="labelCol"></td>
              <td class="data2Col">
              <%= image_tag Irm::SystemParametersManager.address_bar_logo, :style => "width: 16px; height:16px; border: 1px solid #c9c9c9 !important" %></td>
            </tr>
        </tbody>
      </table>
    </div>
    <div class="pbSubheader first tertiaryPalette">
      <span class="pbSubExtra">
        <span class="requiredLegend">
        </span>
      </span>
      <h3><%= t(:label_irm_global_setting_error_page_info) %></h3>
    </div>
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label><%=(@setting_names[:ERROR_404])%></label></td>
              <td class="data2Col"><%= text_field_tag "ERROR_404" ,
                                                      @setting_values[:ERROR_404 ],
                                                      :jrequired => true%>
              </td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(@setting_names[:ERROR_500])%></label></td>
              <td class="data2Col"><%= text_field_tag "ERROR_500" ,
                                                      @setting_values[:ERROR_500 ],
                                                      :jrequired => true%>
              </td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(@setting_names[:ERROR_422])%></label></td>
              <td class="data2Col"><%= text_field_tag "ERROR_422" ,
                                                      @setting_values[:ERROR_422 ],
                                                      :jrequired => true%>
              </td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(@setting_names[:ERROR_ACCESS_DENY])%></label></td>
              <td class="data2Col"><%= text_field_tag "ERROR_ACCESS_DENY" ,
                                                      @setting_values[:ERROR_ACCESS_DENY ],
                                                      :jrequired => true%>
              </td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
  </div>
  <div class="pbBottomButtons">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"></td>
          <td id="bottomButtonRow" class="pbButtonb">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_to t(:cancel), {:action => "index"}%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<% end %>