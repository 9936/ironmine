    <div id="data_area" class="container">
        <div class="containerheader">
           <div class="floatleft headertitle"><%=t(:label_irm_product_module_list)%></div>
        </div>
        <div id="product_modules_grid" class="datagrid"></div>
        <script type="text/javascript" charset="utf-8">
            var product_modules_grid = new dhtmlXGridObject('product_modules_grid');
            product_modules_grid.setHeader(" , <%=t(:label_irm_product_module_product_short_name)%>,<%=t(:label_irm_product_module_name)%>,<%=t(:label_irm_product_module_description)%>,<%=t(:label_irm_product_module_installed_flag)%>,<%=t(:active)%>,<%=t(:multilingual)%>");
            product_modules_grid.setInitWidths("20,100,100,200,80,80,50");
            product_modules_grid.setColTypes("ch,link,ro,ro,ro,ro,ro");//set column types
            product_modules_grid.setColSorting("str,str,str,str,str,str,str");
            init_grid(product_modules_grid);
            product_modules_grid.load('<%= url_for(:action => "get_data", :controller => "irm/product_modules", :format=>:json) %>',
                                     function(){init('#data_area');}, 'json');
            
        </script>
        <div class="containerfooter">
            <div class="button floatright" id = "id_add"><a href="#"><%= t(:add) %></a></div>
            <div class="button floatright"><a href="javascript:void(0);"><%= t(:delete) %></a></div>
        </div>
    </div>