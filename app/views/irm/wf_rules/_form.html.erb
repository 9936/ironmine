<%= form_for(@wf_rule,:url=>{:action=>"create"},:builder => LabellingFormBuilder) do |f| %>
<div id="ep" class="bEditBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%=t(:label_irm_wf_rule_new)%></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_back t(:cancel)%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <%= error_for @wf_rule %>
    <div id="head_1_ep" class="pbSubheader first tertiaryPalette">
      <span class="pbSubExtra">
        <span class="requiredLegend">
          <span class="requiredExampleOuter">
            <span class="requiredExample">&nbsp;</span>
          </span><span class="requiredMark">*</span>
          <span class="requiredText"> = <%=t(:label_is_required)%></span>
        </span>
      </span>
      <h3><%= t(:label_common_info) %></h3>
    </div>
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
                      <tr>
              <td class="labelCol"><label for="wf_rule_bo_code"><%=t(:label_irm_wf_rule_bo_code)%></label></td>
              <td class="dataCol"><%=f.text_field :bo_code, :required=>true ,:id=>"wf_rule_bo_code"%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
                      <tr>
              <td class="labelCol"><label for="wf_rule_name"><%=t(:label_irm_wf_rule_name)%></label></td>
              <td class="dataCol"><%=f.text_field :name, :required=>true ,:id=>"wf_rule_name"%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
                      <tr>
              <td class="labelCol"><label for="wf_rule_description"><%=t(:label_irm_wf_rule_description)%></label></td>
              <td class="dataCol"><%=f.text_field :description, :required=>true ,:id=>"wf_rule_description"%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
                      <tr>
              <td class="labelCol"><label for="wf_rule_evaluatecriteria_rule"><%=t(:label_irm_wf_rule_evaluatecriteria_rule)%></label></td>
              <td class="dataCol"><%=f.text_field :evaluatecriteria_rule, :required=>true ,:id=>"wf_rule_evaluatecriteria_rule"%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
                      <tr>
              <td class="labelCol"><label for="wf_rule_evaluate_rule_mode"><%=t(:label_irm_wf_rule_evaluate_rule_mode)%></label></td>
              <td class="dataCol"><%=f.text_field :evaluate_rule_mode, :required=>true ,:id=>"wf_rule_evaluate_rule_mode"%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
                      <tr>
              <td class="labelCol"><label for="wf_rule_status_code"><%=t(:label_irm_wf_rule_status_code)%></label></td>
              <td class="dataCol"><%=f.text_field :status_code, :required=>true ,:id=>"wf_rule_status_code"%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
                  </tbody>
      </table>
    </div>
  </div>
  <div class="pbBottomButtons">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"></td>
          <td id="bottomButtonRow" class="pbButtonb">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_back t(:cancel)%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<% end %>
