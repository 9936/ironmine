<div class="listRelatedObject setupBlock">
    <div class="page-block">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_select_result) %>&nbsp;<%= t(:label_detail_info) %></h2></td>
              <td id="topButtonRow" class="pbButton">
                <%= form_for(@system_person,:url=>{:action=>"create_from_person"},:builder => LabellingFormBuilder) do |f| %>
                  <%= f.hidden_field(:status_code) %>
                  <% if @step %>
                      <div class="button"><%= link_to t(:last), {}, {:href => "javascript:void(0);", :class => "add_group_button_last"}%></div>
                      <div class="button"><%= link_to t(:next), {}, {:href => "javascript:void(0);", :class => "add_group_button"} %></div>
                      <div class="button"><%= link_to(t(:cancel),{:controller =>"irm/people",:action=>"show",:id=>@person.id})%></div>
                  <% else %>
                      <div class="button"><%= f.submit t(:save)%></div>
                      <div class="button"><%= link_to(t(:cancel),{:controller =>"irm/people",:action=>"show",:id=>@person.id})%></div>
                  <% end %>
                <% end %>
              </td>
              <td class="pbHelp">
                <div id="selectableSystemSearchBox"></div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
        <%= error_for @system_person %>
        <div id="externalSystemList" class="datatable" style="width:100%">
        </div>
        <%= datatable("externalSystemList",{:action=>"get_available_external_system_data",:person_id=>@person.id},
                  [{:key=>"id",:hidden=>true},
                   {:key=>"external_system_code",:label=>t(:label_irm_external_system),:searchable=>true},
                   {:key=>"system_name",:label=>t(:name),:searchable=>true},
                   {:key=>"system_description",:label=>t(:description)},],
                   {:paginator_box=>"systemPaginator",:search_box=>"selectableSystemSearchBox",:select=>"multiple"})%>
        <div id="systemPaginator"></div>
      </div>
    </div>
</div>
<script type="text/javascript">
  Ext.onReady(function(){
      var setSelectedValue = function(selModel,selected){
          var ids = [];
          for(var i = 0;i<selected.length;i++){
            ids.push(selected[i].data.id);
          }
          console.debug(ids);
          $("#irm_external_system_person_status_code").val(ids.join(","));
      }
      Ext.getCmp("externalSystemListDatatable").selModel.addListener("selectionchange",setSelectedValue);
});
</script>
<script type="text/javascript">
  $(function(){
    $(".add_group_button").click(function(){
        $("#new_irm_external_system_person").attr('action', '<%= url_for(:action => "create_from_person", :controller => "irm/external_system_members", :next_action => "next")%>');
        $("#new_irm_external_system_person").submit();
    });
    $(".add_group_button_last").click(function(){
        $("#new_irm_external_system_person").attr('action', '<%= url_for(:action => "create_from_person", :controller => "irm/external_system_members", :next_action => "last")%>');
        $("#new_irm_external_system_person").submit();
    });
  })
</script>