<div class="bPageTitle">
  <div class="ptBody">
    <div class="content">
      <h1 class="pageType"><%=t(:label_irm_person_edit)%></h1>
      <h2 class="pageDescription"><%=t(:label_irm_person_edit)%></h2>
      <div class="blank">&nbsp;</div>
    </div>
    <div class="links">
      <a href="javascript:void(0);" class="configLinks"><%=t(:label_help_about_page)%><</a>
    </div>
    <div class="ptBreadcrumb"></div>
  </div>
</div>

<%= form_for(@person,:url=>{:action=>"update"},:builder => LabellingFormBuilder) do |f| %>
<div id="ep" class="bEditBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%=t(:label_irm_person_edit)%></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_to t(:cancel), {:action => "index"}%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <%= error_for @person%>
    <div id="head_1_ep" class="pbSubheader first tertiaryPalette">
      <span class="pbSubExtra">
        <span class="requiredLegend"><span class="requiredExampleOuter">
          <span class="requiredExample">&nbsp;</span></span>
           <span class="requiredMark">*</span><span class="requiredText"> = <%=t(:label_is_required)%></span></span></span>
      <h3><%=t(:label_irm_person_info)%></h3>
    </div>
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_person_last_name)%></label></td>
              <td class="dataCol"><%=@person.last_name%></td>
              <td class="labelCol"><label><%=(t :label_irm_person_first_name)%></label></td>
              <td class="dataCol"><%=@person.first_name%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_person_email_address)%></label></td>
              <td class="dataCol"><%=@person.email_address%></td>
              <td class="labelCol"><%=(t :label_irm_person_title)%></td>
              <td class="dataCol"><%=@person.title%></td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="pbBody">
    <div id="head_2_ep" class="pbSubheader first tertiaryPalette">
      <h3><%=t(:label_irm_person_other_info)%></h3>
    </div>
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
             <tr>
                 <td class="labelCol"><label><%=t(:label_irm_person_company)%></label></td>
                 <td class="dataCol"><%=f.select(:company_id,"<option value=\"\">--- #{t(:actionview_instancetag_blank_option)} ---</option>".html_safe +
                                           options_from_collection_for_select(available_company,:id,:wrap_name,@person.company_id),
                                           {},:action=>url_for(:controller=>"irm/organizations",
                                                               :action=>"belongs_to",
                                                               :company_id=>"cascade_id"),
                                           :choice_title=>t(:actionview_instancetag_blank_option),:required=>true,
                             :cascade=>"organization_select")%></td>
                 <td class="labelCol"><label><%=(t :label_irm_person_login)%></label></td>
                 <td class="dataCol"><%=f.select :identity_id,"<option value=\"\">--- #{t(:actionview_instancetag_blank_option)} ---</option>".html_safe +
                                                   options_from_collection_for_select(all_login_name,
                                                                                      :id,:login_name,@person.identity_id),{},{:required=>true}%></td>
             </tr>
             <tr>
             <td class="labelCol"><label><%=t(:label_irm_person_organization)%></label></td>
             <td class="dataCol"><%=f.select(:organization_id,"<option value=\"\">--- #{t(:actionview_instancetag_blank_option)} ---</option>".html_safe +
                                           options_from_collection_for_select(available_organization,:id,:wrap_name,@person.organization_id),{},
                                 :id=>"organization_select")%></td>
             <td class="labelCol"><label><%=(t :label_irm_person_function_group_code)%></label></td>
             <td class="dataCol"><%=select_tag :function_group_code,"<option value=\"\">--- #{t(:actionview_instancetag_blank_option)} ---</option>".html_safe +
                                                   options_from_collection_for_select(available_function_group,
                                                                                      :group_code,:wrap_name,@person.function_group_code) %></td>
             </tr>
             <tr>
                 <td class="labelCol"><label><%=t(:label_irm_person_department)%></label></td>
                 <td class="dataCol"><%=f.select(:department_id,"<option value=\"\">--- #{t(:actionview_instancetag_blank_option)} ---</option>".html_safe +
                                           options_from_collection_for_select(available_department,:id,:wrap_name,@person.department_id)
                                 )%></td>
                 <td class="labelCol"><label>
                    <%=t(:label_irm_person_vip_flag)%></label></td>
                 <td class="dataCol"><%=f.check_box :vip_flag%></td>
             </tr>
             <tr>
                 <td class="labelCol"><label><%=t(:label_irm_person_home_phone)%></label></td>
                 <td class="dataCol">
                   <%=f.text_field :home_phone%>
                 </td>
                 <td class="labelCol"><label>
                     <%=t(:label_irm_person_assignment_availability_flag)%></label></td>
                  <td class="dataCol"><%=f.check_box :assignment_availability_flag%></td>
             </tr>
             <tr>
                 <td class="labelCol"><label><%=t(:label_irm_person_home_address)%></label></td>
                 <td class="dataCol">
                   <%=f.text_field :home_address%>
                 </td>
                 <td class="labelCol"><label><%=(t :label_irm_person_region_code)%></label></td>
                  <td class="dataCol"><%=f.select :region_code,"<option value=\"\">--- #{t(:actionview_instancetag_blank_option)} ---</option>".html_safe +
                                                options_from_collection_for_select(available_region,:region_code,:wrap_name,@person.region_code),{},{:required=>true}%></td>
             </tr>
             <tr>
                 <td class="labelCol"><label><%=t(:label_irm_person_mobile_phone)%></label></td>
                 <td class="dataCol">
                   <%=f.text_field :mobile_phone%>
                 </td>
                 <td class="labelCol"><label><%=(t :label_irm_person_site_group_code)%></label></td>
                 <td class="dataCol"><%=f.select :site_group_code,"<option value=\"\">--- #{t(:actionview_instancetag_blank_option)} ---</option>".html_safe +
                                       options_from_collection_for_select(available_site_group,:group_code,:wrap_name,@person.site_group_code)%></td>
             </tr>
             <tr>
                 <td class="labelCol"><label><%=t(:label_irm_person_fax_number)%></label></td>
                 <td class="dataCol">
                   <%=f.text_field :fax_number%>
                 </td>
                 <td class="labelCol"><label><%=(t :label_irm_person_site_code)%></label></td>
                 <td class="dataCol"><%=f.select :site_code,"<option value=\"\">--- #{t(:actionview_instancetag_blank_option)} ---</option>".html_safe +
                                       options_from_collection_for_select(available_site,:site_code,:wrap_name,@person.site_code)%></td>
             </tr>
             <tr>
                 <td class="labelCol"><label><%=t(:label_irm_person_bussiness_phone)%></label></td>
                 <td class="dataCol">
                   <%=f.text_field :bussiness_phone%>
                 </td>
                 <td class="labelCol"><label>
                     <%=t(:label_irm_person_unrestricted_access_flag)%></label></td>
                <td class="dataCol"><%=f.check_box :unrestricted_access_flag%></td>
             </tr>
             <tr>
                  <td class="labelCol"><label><%=t(:label_irm_person_notification_lang)%></label>
                 </td>
                 <td class="dataCol"><%=f.select :notification_lang,"<option value=\"\">--- #{t(:actionview_instancetag_blank_option)} ---</option>".html_safe +
                                           options_from_collection_for_select(available_languages,:language_code,:wrap_description,@person.notification_lang)%></td>
                  <td class="labelCol"><label>
                     <%=t(:label_irm_person_notification_flag)%></label></td>
                  <td class="dataCol"><%=f.check_box :notification_flag%></td>
             </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="pbBottomButtons">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"></td>
          <td id="bottomButtonRow" class="pbButtonb">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_to t(:cancel), {:action => "index"}%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<% end %>
