<div class="listRelatedObject setupBlock">
    <div class="bPageBlock">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_person_list) %></h2></td>
              <td id="topButtonRow" class="pbButton">
                <div class="button"><%= link_to t(:new), {:action => "new"}%></div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
        <div id="person" class="datatable" style="width:100%;">
          <div id="id" style="display:none">
            <%= link_to(t(:edit),{:action=>"edit",:id=>"{id}"}) %>|<%= link_to(t(:show),{:action=>"show",:id=>"{id}"}) %>
          </div>
        </div>        
        <%= datatable("person",url_for(:action=>"get_data",:format=>"json"),
                  [{:key=>"id",:label=>t(:operation),:formatter=>"Y.irm.template",:width=>"50%"},
                   {:key=>"login_name",:label=>t(:label_irm_person_login),:sortable=>true},
                   {:key=>"person_name",:label=>t(:label_irm_person_name),:sortable=>true},
                   {:key=>"email_address",:label=>t(:label_irm_person_email_address),:sortable=>true},
                   {:key=>"mobile_phone",:label=>t(:label_irm_person_mobile_phone),:sortable=>true},
                   {:key=>"company_name",:label=>t(:label_irm_person_company),:sortable=>true}],
                   {:row_perpage=>5})%>
      </div>
    </div>
</div>

