<style type="text/css">
  .floatLeft{
      float:left;
      vertical-align:middle;
  }
</style>
<%= form_for(@report_folder,:url=>{:action=>"create"},:builder => LabellingFormBuilder) do |f| %>
<div id="ep" class="bEditBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%=t(:label_irm_report_folder_new)%></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_back t(:cancel)%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <%= error_for @report_folder %>
    <div id="head_1_ep" class="pbSubheader first tertiaryPalette">
      <span class="pbSubExtra">
        <span class="requiredLegend">
          <span class="requiredExampleOuter">
            <span class="requiredExample">&nbsp;</span>
          </span><span class="requiredMark">*</span>
          <span class="requiredText"> = <%=t(:label_is_required)%></span>
        </span>
      </span>
      <h3><%= t(:label_common_info) %></h3>
    </div>
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label for="report_folder_code"><%=t(:label_irm_report_folder_code)%></label></td>
              <td class="dataCol"><label><%= @report_folder.code %></label></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <tr>
              <td class="labelCol"><label for="report_folder_name"><%=t(:label_irm_report_folder_name)%></label></td>
              <td class="dataCol"><%=f.text_field :name, :required=>true ,:id=>"report_folder_name"%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <tr>
              <td class="labelCol"><label for="report_folder_access_type"><%=t(:label_irm_report_folder_access_type)%></label></td>
              <td class="dataCol"><%=f.select :access_type,available_report_folder_access_type ,{:required=>true} ,:id=>"report_folder_access_type"%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <tr>
              <td class="labelCol"><label for="report_folder_member_type"><%=t(:label_irm_report_folder_member_type)%></label></td>
              <td class="dataCol" colspan="3" width="82%">
                <% available_report_folder_member_type.each_with_index do |v,i|  %>
                  <div>
                    <%=f.radio_button(:member_type,v[1],:id=>"memberType#{i}",:class=>"memberType")%> <label for="memberType<%=i%>"><%= v[0] %></label>
                  </div>
                <% end %>
              </td>
            </tr>
            <tr id="memberTypeSearch" style="display:none">
              <td></td>
              <td class="dataCol" colspan="3" style="width:82%">
                <div class="floatLeft">
                     <label><%= t(:search) %></label>
                </div>
                <div class="floatLeft">
                   <%=select_tag_alias :member_type,available_report_folder_viewer_type,{},:id=>"duelType"%>
                </div>
                <div class="floatLeft">
                  <input type="text" size="30" id="duelQuery"/>
                </div>
                <div class="floatLeft">
                   <div class="button"><a href="javascript:void(0)" id="duelSearch"><%=t(:search) %></a></div>
                </div>
              </td>
            </tr>
            <tr id="memberTypeDuel" style="display:none">
              <td class="labelCol"></td>
              <td class="dataCol" colspan="3" width="82%">
                <table class="duel">
                  <tr class="duelTitle">
                    <th><%= t(:duel_selectable)%></th>
                    <th></th>
                    <th><%= t(:duel_selected)%></th>
                  </tr>
                  <tr class="duelList">
                    <td class="sourceCell">
                      <%= select_tag_alias(:source,available_report_folder_viewer,nil,{:id=>"source",:multiple=>true,:size=>14}) %>
                    </td>
                    <td class="buttonCell">
                      <div class="text"><%= t(:add) %></div>
                      <div class="text">
                        <a href="javascript:void(0)" id="duelAdd"><img title="<%= t(:add) %>" class="rightArrowIcon" alt="<%= t(:add) %>" src="<%= theme_image_path("s.gif") %>"></a>
                      </div>
                      <div class="text">
                        <a href="javascript:void(0)" id="duelRemove"><img title="<%= t(:delete) %>" class="leftArrowIcon" alt="<%= t(:delete) %>" src="<%= theme_image_path("s.gif") %>"></a>
                      </div>
                      <div class="duelingText"><%= t(:delete) %></div>
                    </td>
                    <td class="targetCell">
                      <%= f.hidden_field(:member_str,:value=>"",:id=>"members") %>
                      <%= select_tag_alias(:target,[],nil,{:id=>"target",:multiple=>true,:size=>14}) %>
                    </td>
                  </tr>
                </table>
              </td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="pbBottomButtons">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"></td>
          <td id="bottomButtonRow" class="pbButtonb">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_back t(:cancel)%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<% end %>
<script type="text/javascript">
  GY.use("duelselect",function(Y){
        Y.on('click', function(e) {
          if(e.target.get("value")=="MEMBER"){
            Y.one("#memberTypeSearch").setStyle("display","");
            Y.one("#memberTypeDuel").setStyle("display","");
          }
          else{
            Y.one("#memberTypeSearch").setStyle("display","none");
            Y.one("#memberTypeDuel").setStyle("display","none");
          }

	    }, '.memberType');


        var duelselect = new Y.DuelSelect({source:"#source",target:"#target",valueNode:"#members",type:Y.one("#duelType").get("value"),addButton:"#duelAdd",removeButton:"#duelRemove"});
        Y.one("#duelType").on("change",function(e){
          Y.one("#duelQuery").set("value","");
          duelselect.filter(Y.one("#duelType").get("value"),Y.one("#duelQuery").get("value"));
        });
        Y.one("#duelSearch").on("click",function(e){
          duelselect.filter(Y.one("#duelType").get("value"),Y.one("#duelQuery").get("value"));
        });
        Y.one("#duelQuery").on("keydown",function(e){
          if(e.keyCode==13){
              e.preventDefault();
              duelselect.filter(Y.one("#duelType").get("value"),Y.one("#duelQuery").get("value"));
          }
        });


        if(!Y.one("input.memberType[checked=checked]"))
          Y.one("input.memberType").simulate("click");
        else
          Y.one("input.memberType[checked=checked]").simulate("click");
  });
</script>
