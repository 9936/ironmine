<div class="listRelatedObject setupBlock">
    <div class="bPageBlock">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_auth_source_list) %></h2></td>
              <td id="topButtonRow" class="pbButton">
                <div class="button"><%= link_to t(:new), {:controller => "irm/auth_sources", :action => "new"}%></div>
              </td>
              <td class="pbHelp">
                <select title="显示所选内容" name="hotlist_mode" id="hotlist_mode"><option value="2">最近创建</option>
                <option value="1">最近修改</option>
                <option selected="selected" value="3">最近查看</option>
                </select>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
        <div id="auth_sources_list" class="datatable" style="width:100%">
          <div id="id" style="display:none">
            <%= link_to(t(:edit),{:controller => "irm/auth_sources", :action=>"edit",:id=>"{id}"}) %>&nbsp;&nbsp;<%= link_to(t(:show),{:controller => "irm/auth_sources", :action=>"show",:id=>"{id}"}) %>
          </div>
        </div>
        <%= datatable("auth_sources_list",url_for(:controller => "irm/auth_sources", :action=>"get_data",:format=>"json"),
                      [{:key=>"id",:label=>t(:operation),:formatter=>"Y.irm.template",:width=>"80px"},
                       {:key=>"name",:label=>t(:label_irm_auth_source_name),:sortable=>true},
                       {:key=>"host",:label=>t(:label_irm_auth_source_host),:sortable=>true},
                       {:key=>"port",:label=>t(:label_irm_auth_source_port),:sortable=>true},
                       {:key=>"account",:label=>t(:label_irm_auth_source_account),:sortable=>true},
                       {:key=>"base_dn",:label=>t(:label_irm_auth_source_base_dn),:sortable=>true},
                       {:key=>"attr_login",:label=>t(:label_irm_auth_source_attr_login),:sortable=>true},
                       {:key=>"status_meaning",:label=>t(:active),:sortable=>true}])%>
      </div>
    </div>
</div>    