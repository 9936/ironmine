<div id="auth_source_new" class="container">
  <%= form_for(@auth_source,:url=>{:action=>"create"},:builder => LabellingFormBuilder) do |f| %>
             <div class="containerheader">
                 <div class="floatleft headertitle"><%=t(:label_irm_auth_source_new)%></div>
             </div>
             <table class="twocolumnstable" cellspacing="0">
                 <tr>
                     <td class="twocolumn">
                        <table class="itemdetailtable">
                         <tr><td class="itemdetailtablelabel"><%=(t :label_irm_auth_source_name)%>:</td>
                           <td><%=f.text_field :name, :size=>40,:required=>true%></td>
                         </tr>
                         <tr><td class="itemdetailtablelabel"><%=(t :label_irm_auth_source_host)%>:</td>
                           <td><%=f.text_field :host, :size=>40%></td>
                         </tr>
                         <tr><td class="itemdetailtablelabel"><%=(t :label_irm_auth_source_port)%>:</td>
                           <td><%=f.text_field :port, :size=>40,:irm_numberonly=>true%></td>
                         </tr>
                        </table>
                     </td>
                     <td class="twocolumn" cellspacing="0">
                        <table class="itemdetailtable">
                            <tr><td class="itemdetailtablelabel">
                                  <%=t(:label_irm_auth_source_account)%>:
                                </td>
                                <td><%= f.text_field :account%></td>
                            </tr>
                            <tr><td class="itemdetailtablelabel">
                                  <%=t(:label_irm_auth_source_account_password)%>:
                                </td>
                                <td><%= f.text_field :account_password%></td>
                            </tr>
                            <tr><td class="itemdetailtablelabel">
                                  <%=t(:label_irm_auth_source_base_dn)%>:
                                </td>
                                <td><%= f.text_field :base_dn%></td>
                            </tr>
                        </table>
                     </td>
                     <td width="10%"></td>
                 </tr>
             </table>
            <table class="twocolumnstable" cellspacing="0">
                <tr>
                    <td class="twocolumn">
                       <table class="itemdetailtable">
                        <tr><td class="itemdetailtablelabel"><%=(t :label_irm_auth_source_attr_login)%>:</td>
                          <td><%=f.text_field :attr_login, :size=>40%></td>
                        </tr>
                        <tr><td class="itemdetailtablelabel"><%=(t :label_irm_auth_source_attr_email)%>:</td>
                          <td><%=f.text_field :attr_email, :size=>40%></td>
                        </tr>
                       </table>
                    </td>
                    <td class="twocolumn" cellspacing="0">
                       <table class="itemdetailtable">
                           <tr><td class="itemdetailtablelabel">
                                 <%=t(:label_irm_auth_source_attr_firstname)%>:
                               </td>
                               <td><%= f.text_field :attr_firstname%></td>
                           </tr>
                           <tr><td class="itemdetailtablelabel">
                                 <%=t(:label_irm_auth_source_attr_lastname)%>:
                               </td>
                               <td><%= f.text_field :attr_lastname%></td>
                           </tr>
                       </table>
                    </td>
                    <td width="10%"></td>
                </tr>
            </table>
             <div class="containerfooter">
                 <div class="button floatright" ><%= link_to t(:save), {}, {:action_type => "ajaxSubmit", :script => "/replace(system_message_box,system_message_box);reload_grid('auth_sources_grid');/replace(system_message_box,system_message_box);"}%></div>
                 <div class="button floatright"><%= link_to t(:cancel), {:action => "new"}, :script => "/replace(new_area,form_area);/", :action_type=>"ajaxLink"%></div>
             </div>
  <% end %>
</div>
