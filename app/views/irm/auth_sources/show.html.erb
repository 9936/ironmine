<%= setting_show_title(:show_data => @auth_source.name) %>

<div id="ep" class="bDetailBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_auth_source) %></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= link_to t(:edit), {:action => "edit", :id => @auth_source}%></div>
            <div class="button"><%= link_to t(:back), {:action => "index"} %></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_auth_source_name)%></label></td>
              <td class="dataCol"><%= @auth_source.name%></td>
              <td class="labelCol"><label><%=t(:label_irm_auth_source_account)%></label></td>
              <td class="dataCol"><%= @auth_source.account%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_auth_source_host)%></label></td>
              <td class="dataCol"><%= @auth_source.host%></td>
              <td class="labelCol"><%=t(:label_irm_auth_source_account_password)%></td>
              <td class="dataCol"><%= @auth_source.account_password%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_auth_source_port)%></label></td>
              <td class="dataCol"><%= @auth_source.port%></td>
              <td class="labelCol"><%=t(:label_irm_auth_source_base_dn)%></td>
              <td class="dataCol"><%= @auth_source.base_dn%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :active)%></label></td>
              <td class="dataCol"><%= @auth_source.status_code%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_auth_source_attr_login)%></label></td>
              <td class="dataCol"><%=@auth_source.attr_login %></td>
              <td class="labelCol"><label><%=t(:label_irm_auth_source_attr_firstname)%></label></td>
              <td class="dataCol"><%= @auth_source.attr_firstname %></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_auth_source_attr_email)%></label></td>
              <td class="dataCol"><%= @auth_source.attr_email%></td>
              <td class="labelCol"><%=t(:label_irm_auth_source_attr_lastname)%></td>
              <td class="dataCol"><%= @auth_source.attr_lastname %></td>
            </tr>        
        </tbody>
      </table>
    </div>
  </div>
</div>