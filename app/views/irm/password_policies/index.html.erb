<%= setting_title %>

<%= form_for(@policy,:url=>{:action=>"update", :id=> @policy},:builder => LabellingFormBuilder) do |f| %>
<div id="ep" class="edit-block page-block">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_psw_policy) %></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= f.submit t(:save)%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <%= error_for @policy%>
    <div id="head_1_ep" class="pbSubheader first tertiaryPalette">
      <h3><%= t(:label_common_info) %></h3>
    </div>
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label><%= t :label_irm_psw_policy_expire_in %></label></td>
              <td class="data2Col"><%= f.select :expire_in, Irm::LookupValue.get_lookup_value("IRM_PSW_EXPIRE_IN").collect{|p| [p[:meaning], p.lookup_code]}, {}, :required => true %>
              </td>
            </tr>
            <tr>
              <td class="labelCol"><label><%= t :label_irm_psw_policy_enforce_history %></label></td>
              <td class="data2Col"><%= f.select :enforce_history, Irm::LookupValue.get_lookup_value("IRM_PSW_ENFORCE_HISTORY").collect{|p| [p[:meaning], p.lookup_code]}, {}, :required => true %>
              </td>
            </tr>
            <tr>
              <td class="labelCol"><label><%= t :label_irm_psw_policy_min_length %></label></td>
              <td class="data2Col"><%= f.select :minimum_length, Irm::LookupValue.get_lookup_value("IRM_PSW_MINIMUM_LENGTH").collect{|p| [p[:meaning], p.lookup_code]}, {}, :required => true  %>
              </td>
            </tr>
            <tr>
              <td class="labelCol"><label><%= t :label_irm_psw_policy_complexity_requirement %></label></td>
              <td class="data2Col"><%= f.select :complexity_requirement, Irm::LookupValue.get_lookup_value("IRM_PSW_COMPLEXITY_REQ").collect{|p| [p[:meaning], p.lookup_code]}, {}, :required => true  %>
              </td>
            </tr>
            <tr>
              <td class="labelCol"><label><%= t :label_irm_psw_policy_question_requirement %></label></td>
              <td class="data2Col"><%= f.select :question_requirement, Irm::LookupValue.get_lookup_value("IRM_PSW_QUESTION_REQ").collect{|p| [p[:meaning], p.lookup_code]}, {}, :required => true  %>
              </td>
            </tr>
            <tr>
              <td class="labelCol"><label><%= t :label_irm_psw_policy_max_attempts %></label></td>
              <td class="data2Col"><%= f.select :maximum_attempts, Irm::LookupValue.get_lookup_value("IRM_PSW_MAXIMUM_ATTEMPTS").collect{|p| [p[:meaning], p.lookup_code]}, {}, :required => true  %>
              </td>
            </tr>
            <tr>
              <td class="labelCol"><label><%= t :label_irm_psw_policy_lockout_period %></label></td>
              <td class="data2Col"><%= f.select :lockout_period, Irm::LookupValue.get_lookup_value("IRM_PSW_LOCKOUT_PERIOD").collect{|p| [p[:meaning], p.lookup_code]}, {}, :required => true  %>
              </td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="pbBottomButtons">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"></td>
          <td id="bottomButtonRow" class="pbButtonb">
            <div class="button"><%= f.submit t(:save)%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<% end %>