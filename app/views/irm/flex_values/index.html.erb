<div class="bPageTitle">
  <div class="ptBody">
    <div class="content">
      <h1 class="pageType"></h1>
      <h2 class="pageDescription"><%= t(:label_irm_flex_value) %></h2>
      <div class="blank">&nbsp;</div>
    </div>
    <div class="links">
      <a href="javascript:void(0);" class="configLinks">此页面的帮助</a>
    </div>
    <div class="ptBreadcrumb"></div>
  </div>
</div>
<div class="filterOverview">
    <div class="bFilterView">
      <span class="bFilter">
        <label style="text-align: left; font-weight: bold; padding-right: 0.69em;"><%= t(:label_irm_value_set) %>：</label>
        <span class="fBody">
            <%= select("current_value_set",{}, available_flex_value_sets, {:include_blank => t(:select)}, {:onchange => "", :id => "current_value_set"}) %>
            <input type="button" title="<%= t :jump  %>" name="go" class="btn" value="<%= t :jump  %>">
        </span>
        <span class="fFooter">
          <a href="javascript:void(0);">编辑</a> |
          <a href="javascript:void(0);">创建新视图</a>
        </span>
      </span>
    </div>
</div>
<% if @value_set %>
<div id="ep" class="bDetailBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_value_set) %></h2></td>
          <td class="pbButton">
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_value_set_name)%></label></td>
              <td class="dataCol"><%= @value_set.flex_value_set_name%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_value_set_description)%></label></td>
              <td class="dataCol"><%= @value_set.description%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :active)%></label></td>
              <td class="dataCol"><%= @value_set.status_code%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="listRelatedObject setupBlock">
    <div class="bPageBlock">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_flex_value_list) %></h2></td>
              <td id="topButtonRow" class="pbButton">
                <div class="button"><%= link_to t(:new), {:action => "new"}%></div>
              </td>
              <td class="pbHelp">
                <select title="显示所选内容" name="hotlist_mode" id="hotlist_mode"><option value="2">最近创建</option>
                <option value="1">最近修改</option>
                <option selected="selected" value="3">最近查看</option>
                </select>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
        <div id="pizza" class="datatable" style="width:100%">
          <div id="id" style="display:none">
            <%= link_to(t(:edit),{:action=>"edit",:id=>"{id}"}) %>|<%= link_to(t(:show),{:action=>"show",:id=>"{id}"}) %>
          </div>
        </div>
        <%= datatable("pizza",url_for(:action=>"get_data",:format=>"json"),
                      [{:key=>"id",:label=>t(:operation),:formatter=>"Y.irm.template",:width=>"50%"},
                       {:key=>"product_module_name",:label=>t(:label_irm_flex_value_position)},
                       {:key=>"permission_code",:label=>t(:label_irm_flex_value_name)},
                       {:key=>"name",:label=>t(:label_irm_flex_value_description)},
                       {:key=>"page_controller",:label=>t(:label_irm_flex_value_start_date_active)},
                       {:key=>"page_action",:label=>t(:label_irm_flex_value_end_date_active)}])%>
      </div>
    </div>
</div>
<% end %>
