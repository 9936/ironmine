<div class="bPageTitle">
  <div class="ptBody">
    <div class="content">
      <h1 class="pageType"></h1>
      <h2 class="pageDescription"><%=t(:label_irm_flex_value_new)%></h2>
      <div class="blank">&nbsp;</div>
    </div>
    <div class="links">
      <a href="javascript:void(0);" class="configLinks">此页面的帮助</a>
    </div>
    <div class="ptBreadcrumb"></div>
  </div>
</div>

<%= form_for(@flex_value,:url=>{:action=>"create"},:builder => LabellingFormBuilder) do |f| %>
<div id="ep" class="bEditBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%=t(:label_irm_flex_value_new)%></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_to t(:cancel), {:action => "index", :value_set_id => @flex_value.flex_value_set_id}%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <%= error_for @flex_value%>
    <div id="head_1_ep" class="pbSubheader first tertiaryPalette">
      <span class="pbSubExtra"><span class="requiredLegend"><span class="requiredExampleOuter"><span class="requiredExample">&nbsp;</span></span><span class="requiredMark">*</span><span class="requiredText"> = 必填信息</span></span></span>
      <h3>一般信息</h3>
    </div>
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_value_set)%></label></td>
              <td class="dataCol"><%= @value_set.flex_value_set_name %></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_flex_value_value_code)%></label></td>
              <td class="dataCol"><%=f.text_field :flex_value, :required => true%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_flex_value_name)%></label></td>
              <td class="dataCol"><%=f.text_field :flex_value_meaning, :required => true%></td>
              <td class="labelCol"><label><%=(t :label_irm_flex_value_position)%></label></td>
              <td class="dataCol"><%=f.text_field :display_sequence, :required => true%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_flex_value_start_date_active)%></label></td>
              <td class="dataCol"><%=f.text_field :start_date_active, :required => true%></td>
              <td class="labelCol"><label><%=(t :label_irm_flex_value_end_date_active)%></label></td>
              <td class="dataCol"><%=f.text_field :end_date_active%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_flex_value_description)%></label></td>
              <td class="dataCol"><%= f.text_area :description, :rows => 4%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :active)%></label></td>
              <td class="dataCol"><%=f.select :status_code, available_active_status, {:include_blank => false}%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <%= f.hidden_field :flex_value_set_id, :value => @value_set.id %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="pbBottomButtons">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"></td>
          <td id="bottomButtonRow" class="pbButtonb">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_to t(:cancel), {:action => "index", :value_set_id => @flex_value.flex_value_set_id}%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<% end %>