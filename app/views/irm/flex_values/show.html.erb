<%= setting_show_title(:show_data => @flex_value[:flex_value_meaning]) %>

<div id="ep" class="bDetailBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_flex_value) %></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= link_to t(:edit), {:action => "edit", :id => @flex_value.flex_value_set_id  }%></div>
            <div class="button"><%= link_to t(:back), {:action => "index", :value_set_id => @flex_value.flex_value_set_id  }%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_flex_value_name)%></label></td>
              <td class="dataCol"><%= @flex_value[:flex_value_meaning]%></td>
              <td class="labelCol"><label><%=(t :label_irm_flex_value_value_code)%></label></td>
              <td class="dataCol"><%= @flex_value.flex_value%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_flex_value_start_date_active)%></label></td>
              <td class="dataCol"><%= @flex_value.start_date_active%></td>
              <td class="labelCol"><label><%=(t :label_irm_flex_value_end_date_active)%></label></td>
              <td class="dataCol"><div><%= @flex_value.end_date_active%></div></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_flex_value_description)%></label></td>
              <td class="dataCol"><div><%= @flex_value[:description]%></div></td>
              <td class="labelCol"><label><%=(t :label_irm_flex_value_position)%></label></td>
              <td class="dataCol"><%= @flex_value.display_sequence%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :active)%></label></td>
              <td class="dataCol"><%= check_img(@flex_value.status_code)%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>