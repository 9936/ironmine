<%= form_for(@license,:url=>{:action=>"create"},:builder => LabellingFormBuilder) do |f| %>
<div id="ep" class="edit-block page-block">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%=t(:label_irm_license_new)%></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_back t(:cancel)%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <%= error_for @license %>
    <div id="head_1_ep" class="pbSubheader first tertiaryPalette">
      <span class="pbSubExtra">
        <span class="requiredLegend">
          <span class="requiredExampleOuter">
            <span class="requiredExample">&nbsp;</span>
          </span><span class="requiredMark">*</span>
          <span class="requiredText"> = <%=t(:label_is_required)%></span>
        </span>
      </span>
      <h3><%= t(:label_common_info) %></h3>
    </div>
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label for="license_name"><%=t(:label_irm_license_name)%></label></td>
              <td class="dataCol"><%=f.text_field :name, :required=>true ,:id=>"license_name"%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <tr>
              <td class="labelCol"><label for="license_code"><%=t(:label_irm_license_code)%></label></td>
              <td class="dataCol"><%=f.text_field :code, :required=>true ,:id=>"license_code"%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <tr>
              <td class="labelCol"><label for="license_description"><%=t(:label_irm_license_description)%></label></td>
              <td class="dataCol" colspan="3" width="82%"><%=f.text_area :description,:rows=>4,:cols=>60 ,:id=>"license_description"%></td>
            </tr>
        </tbody>
      </table>
    </div>

    <div class="pbSubheader first tertiaryPalette">
      <h3><%= t(:label_irm_profile_function_list) %></h3>
    </div>
    <div class="pbSubsection" id="selectableFunctions">
    <% gfs = available_grouped_functions %>
    <% fzs = function_zones %>
    <% pfids = @license.function_ids %>
    <% fzs.each do |zone|%>
      <% next unless gfs[zone[:code]]&&gfs[zone[:code]].any?%>
      <% tr_count = 2%>
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
                  <tr>
            <td style="font-weight:bold;font-size:13px;padding:15px 0 0 15px"><%= zone[:name] %></td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
          </tr>
            <% if gfs[zone[:code]].size>1%>
                <tr>
                  <td class="labelCol"><label><%= t :select_all %></label></td>
                  <td class="dataCol"><%= check_box_tag 'select_all',"all" , false,{:ref=>"#{zone[:code].downcase}Group",:class=>"selectAll"} %></td>
                </tr>
            <% end %>
        </tbody>
        <tbody id="<%= zone[:code].downcase %>Group">

            <tr>
            <% gfs[zone[:code]].each do |func| %>
                <%= raw("</tr><tr>") if tr_count == 0 %>
                <% tr_count = 2 if tr_count == 0 %>
                <td class="labelCol"><label><%= func[:name] %></label></td>
                <td class="dataCol"><%= check_box_tag 'functions[]', func.id, pfids.include?(func.id)||(pfids.size==0&&func.default_flag.eql?(Irm::Constant::SYS_YES)) %></td>
                <% tr_count = tr_count - 1 %>
            <% end%>
            </tr>
        </tbody>
      </table>
    <%end%>
    </div>
  </div>




  <div class="pbBottomButtons">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"></td>
          <td id="bottomButtonRow" class="pbButtonb">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_back t(:cancel)%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<% end %>
<script type="text/javascript">
  $(function(){
      $("#selectableFunctions .selectAll").live('click', function(e){
         var checkValue = $(e.currentTarget).attr("checked");
         var refFieldSet =  $(e.currentTarget).attr("ref");
         $("#"+refFieldSet).find("input[type=checkbox]").each(function(i,e){
             if(checkValue)
                 $(e).attr("checked",true)
             else
                 $(e).attr("checked",false)
           })
      });

  });
</script>