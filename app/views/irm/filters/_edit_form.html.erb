<%= page_title %>
<%= form_for(@view_filter,:url=>{:action=>"update"},:builder => LabellingFormBuilder) do |f| %>
    <%= back_url_hidden_field_tag %>
<div id="ep" class="bEditBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%=t(:label_irm_view_filter_edit)%></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><a href="<%=params[:back_url]%>"><%= t(:cancel) %></a></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <%= error_for @view_filter%>
    <div id="head_1_ep" class="pbSubheader first tertiaryPalette">
      <span class="pbSubExtra">
          <span class="requiredLegend">
            <span class="requiredExampleOuter">
            <span class="requiredExample">&nbsp;</span>
            </span>
          <span class="requiredMark">*</span>
          <span class="requiredText"> = <%=t(:label_is_required)%></span>
          </span>
      </span>
      <h3><%=t(:label_irm_view_filter_step_one)%></h3>
    </div>
    <div class="pbSubsection">
      <%= f.hidden_field(:filter_type) %>
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_view_filter_view_code)%></label></td>
              <td class="dataCol"><%=@view_filter.view_code%></td>
              <td class="labelCol"></td>
              <td class="dataCol"></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_view_filter_view_name)%></label></td>
              <td class="dataCol"><%=f.text_field :view_name, :required=>true,:size=>40%></td>
              <td class="labelCol"></td>
              <td class="dataCol"></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_view_filter_view_condition_clause)%></label></td>
              <td class="dataCol"><%=f.text_field :raw_condition_clause,:required=>true, :size=>60%></td>
              <td class="labelCol"></td>
              <td class="dataCol"></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_view_filter_default_flag)%></label></td>
              <td class="dataCol"><%=f.check_box :default_flag%></td>
              <td class="labelCol"></td>
              <td class="dataCol"></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_view_filter_restrict_visibility)%></label></td>
              <td class="dataCol"><%=f.check_box :restrict_visibility%></td>
              <td class="labelCol"></td>
              <td class="dataCol"></td>
            </tr>
        </tbody>
      </table>
    </div>
    <div class="pbSubheader">
      <h3><%=t(:label_irm_view_filter_step_two)%></h3>
    </div>
    <div class="pbSubsection">
      <table cellpadding="0" cellspacing="0" border="0">
        <thead>
          <tr>
            <th><%=t(:irm_filter_criterions_column_code)%></th>
            <th><%=t(:irm_filter_criterions_operator_code)%></th>
            <th><%=t(:irm_filter_criterions_filter_value)%></th>
          </tr>
        </thead>
        <tbody>
        <%= f.fields_for :view_filter_criterions,:normal=>true do |sub_f|%>
            <tr>
              <td class="dataCol"><%=sub_f.hidden_field(:seq_num)%><%=sub_f.select(:column_code,available_view_column(@view_filter.filter_type,sub_f.object.column_code), :required=>true,:size=>10)%></td>
              <td class="dataCol"><%=sub_f.select(:operator_code,available_view_operator(sub_f.object.operator_code), :required=>true,:size=>10)%></td>
              <td class="dataCol"><%=sub_f.text_field :filter_value, :required=>true,:size=>10%></td>
            </tr>
        <%end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="pbBottomButtons">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"></td>
          <td id="bottomButtonRow" class="pbButtonb">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><a href="<%=params[:back_url]%>"><%= t(:cancel) %></a></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<% end %>