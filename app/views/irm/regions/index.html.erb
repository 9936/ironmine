<%= page_title %>
<div class="listRelatedObject setupBlock">
    <div class="bPageBlock">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_region_list) %></h2></td>
              <td id="topButtonRow" class="pbButton">
                <div class="button"><%= link_to t(:new), {:action => "new"}%></div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
        <div id="region" class="datatable" style="width:100%;">
          <div id="id" style="display:none">
            <%= link_to(t(:edit),{:action=>"edit",:id=>"{id}"}) %>|<%= link_to(t(:show),{:action=>"show",:id=>"{id}"}) %>
          </div>
        </div>
        <%= datatable("region",url_for(:action=>"get_data",:format=>"json"),
                  [{:key=>"id",:label=>t(:edit),:formatter=>"Y.irm.template",:width=>"50%"},
                   {:key=>"region_code",:label=>t(:label_irm_region_region_code),:sortable=>true},
                   {:key=>"name",:label=>t(:label_irm_region_name),:sortable=>true},
                   {:key=>"description",:label=>t(:label_irm_region_description),:sortable=>true},
                   {:key=>"status_meaning",:label=>t(:label_irm_region_status_code),:sortable=>true}],
                   {:row_perpage=>5})%>
      </div>
    </div>
</div>