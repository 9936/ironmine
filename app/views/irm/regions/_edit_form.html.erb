   <div id="id_region_edit" class="container">
     <%= form_for(@region,:url=>{:action=>"update"},:builder => LabellingFormBuilder) do |f| %>
                <div class="containerheader">
                    <div class="floatleft headertitle"><%=t(:label_irm_region_edit)%> - <%= @region.region_code%></div>
                </div>
                <table class="twocolumnstable" cellspacing="0">
                    <tr>
                        <td class="twocolumn">
                           <table class="itemdetailtable">
                            <tr>
                                <td class="itemdetailtablelabel"><%=(t :label_irm_region_region_code)%>:</td>
                                <td><%=f.text_field :region_code,:size=>40,:readonly=>"readonly"%></td>
                            </tr>
                            <tr>
                                <td class="itemdetailtablelabel"><%=(t :label_irm_region_name)%>:</td>
                                <td><%=f.text_field :name,:value=>@region[:name],:size=>40,:required=>true %></td>
                            </tr>
                            <tr>
                            <td class="itemdetailtablelabel"><%=(t :label_irm_region_status_code)%>:</td>
                            <td><%=f.select :status_code,"<option value=\"\">--- #{t(:actionview_instancetag_blank_option)} ---</option>".html_safe +
                                                options_from_collection_for_select(available_status,:lookup_code,:meaning,@region.status_code)%></td>
                            </tr>
                           </table>
                        </td>
                        <td class="twocolumn" cellspacing="0">
                           <table class="itemdetailtable">
                            <div id="id_lookup_level">
                               <tr><td class="itemdetailtablelabel">
                                     <%=t(:label_irm_region_description)%>:
                               </td>
                               <td><%= f.text_area :description, :value => @region[:description], :cols => 40, :rows => 2    %></td>
                            </tr>
                            </div>
                           </table>
                        </td>
                        <td width="10%"></td>
                    </tr>
                </table>
                <div class="containerfooter">
                    <div class="button floatright" ><%= link_to t(:save), {:controller=>"irm/regions",:action=>"update"}, {:action_type => "ajaxSubmit", :script => "/reload_grid('id_region_grid');replace(system_message_box,system_message_box);/replace(system_message_box,system_message_box);"}%></div>
                    <div class="button floatright"><%= link_to t(:cancel), {:action => "new"}, :script => "/replace(id_region_new,id_region_new);/", :action_type=>"ajaxLink"%></div>
                </div>
     <% end %>
   </div>
