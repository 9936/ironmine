<%= setting_show_title(:show_data => @identity.full_name) %>

<div id="ep" class="bDetailBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_identity) %></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= link_to t(:edit), {:action => "edit", :id => @identity}%></div>
            <div class="button"><%= link_to t(:back), {:action => "index"} %></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label><%=t(:label_irm_identity_login_name)%></label></td>
              <td class="dataCol"><%= @identity.login_name %></td>
              <td class="labelCol"><%= t(:label_irm_identity_full_name) %></td>
              <td class="dataCol"><%= @identity.full_name%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%= t(:label_irm_identity_email)%></label></td>
              <td class="dataCol"><%= @identity.email %></td>
              <td class="labelCol"><%= t(:label_irm_identity_language_code) %></td>
              <td class="dataCol"><%= @identity[:language_description] %></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :active)%></label></td>
              <td class="dataCol"><%= @identity[:status_meaning]%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="listRelatedObject setupBlock">
    <div class="bPageBlock">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_login_record_list) %></h2></td>
              <td class="pbButton">
              </td>
              <td class="pbHelp">
                <div id="reportGroupMemebersSearchBox"></div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
        <div id="login_history_list" class="datatable" style="width:100%">

        </div>
        <%= datatable("login_history_list",url_for(:controller => "irm/my_login_history", :action => "get_login_data",:format=>"json", :id => @identity.id),
                      [{:key=>"user_ip",:label=>t(:label_irm_login_record_user_ip),:width=>"40px"},

                       { :key => "operate_system", :label => t(:label_irm_login_record_operate_system) },

                       { :key => "browser", :label => t(:label_irm_login_record_browser) },

                       { :key => "login_at", :label => t(:label_irm_login_record_login_at)},

                       { :key => "logout_at", :label => t(:label_irm_login_record_logout_at) },

                       ],{:row_perpage=>20})%>
      </div>
    </div>
</div>