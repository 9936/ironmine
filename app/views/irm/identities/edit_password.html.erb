<div id="form_area" class="container">
  <%= form_for(@identity,:url=>{:action=>"update_password"},:builder => LabellingFormBuilder,:remote=>true,:html=>{:zone=>"system_content"}) do |f| %>
    <div class="containerheader">
      <div class="floatleft headertitle"><%=t(:label_irm_identity_edit_password)%> - <%= @identity.login_name%></div>
    </div>
      <table class="paddedtable" cellspacing="0">
        <tbody>
          <tr>
            <td class="paddedtablelabel"><%=(t :label_irm_identity_old_password)%></td>
            <td><%=f.password_field :old_password, :size=>40,:required=>true%></td>
          </tr>
          <tr>
            <td class="paddedtablelabel"><%=(t :label_irm_identity_new_password)%></td>
            <td><%=f.password_field :password, :size=>40,:required=>true%></td>
          </tr>
          <tr>
            <td class="paddedtablelabel"><%=(t :label_irm_identity_new_password_confirmation)%></td>
            <td><%=f.password_field :password_confirmation, :size=>40,:required=>true%></td>
          </tr>
        </tbody>
      </table>
      <div class="containerfooter">
          <div class="button floatright" ><%= link_to t(:save),{},:type=>'submit'%></div>
          <div class="button floatright"><%= link_to t(:cancel), {:action => "my_info"},:zone=>"system_content"%></div>
      </div>
  <% end %>
</div>