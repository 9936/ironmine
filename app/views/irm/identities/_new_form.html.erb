<%= page_title %>
<%= form_for(@identity,:url=>{:action=>"create"},:builder => LabellingFormBuilder) do |f| %>
<div id="ep" class="bEditBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%=t(:label_irm_identity_edit)%></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_to( t(:cancel), {:action => "index"})%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <%= error_for @identity%>
    <div id="head_1_ep" class="pbSubheader first tertiaryPalette">
      <span class="pbSubExtra">
        <span class="requiredLegend">
          <span class="requiredExampleOuter">
            <span class="requiredExample">&nbsp;</span>
          </span><span class="requiredMark">*</span>
          <span class="requiredText"> = <%=t(:label_is_required)%></span>
        </span>
      </span>
      <h3><%= t(:label_common_info) %></h3>
    </div>
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label><%=t(:label_irm_identity_login_name)%></label></td>
              <td class="dataCol"><%= f.text_field(:login_name,:required=>true) %></td>
              <td class="labelCol"><%= t(:label_irm_identity_full_name) %></td>
              <td class="dataCol"><%=f.text_field(:full_name,:required=>true)%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%= t(:label_irm_identity_email)%></label></td>
              <td class="dataCol"><%= f.text_field(:email,:required=>true) %></td>
              <td class="labelCol"><%= t(:label_irm_identity_language_code) %></td>
              <td class="dataCol"><%= f.select(:language_code, options_for_select(selectable_languages,@identity.language_code)) %></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%= t(:label_irm_identity_password)%></label></td>
              <td class="dataCol"><%=f.password_field(:password, :size=>40,:required=>true)%></td>
              <td class="labelCol"><label><%= t(:label_irm_identity_password_confirmation)%></label></td>
              <td class="dataCol"><%=f.password_field(:password_confirmation, :size=>40,:required=>true)%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :active)%></label></td>
              <td class="dataCol"><%=f.select :status_code, available_active_status, {:include_blank => false}%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="pbBottomButtons">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"></td>
          <td id="bottomButtonRow" class="pbButtonb">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_back t(:cancel)%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<% end %>