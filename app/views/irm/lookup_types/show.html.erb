<table width="600">
    <tr>
        <td id="recinfoArea"></td>
    </tr>
    <tr>
        <td>
            <div id="gridbox" style="width:100%; height:250px; background-color:white;overflow:hidden"></div>
        </td>
    </tr>
    <tr>
        <td id="pagingArea"></td>
    </tr>
</table>

<script>
    mygrid = new dhtmlXGridObject('gridbox');
    mygrid.setImagePath("/images/dhtmlx/");
    mygrid.setHeader("Column A, Column B,Column A, Column B,Column A, Column B");
    mygrid.setInitWidths("100,100,100,100,100,*");
    mygrid.setColAlign("right,left,right,left,right,left");
    mygrid.setColTypes("ro,ro,ro,ro,ro,ro");
    mygrid.enablePaging(true, 4, null, "pagingArea", true, "recinfoArea");
    mygrid.init();
    mygrid.attachEvent("onBeforePageChanged", function() {
        if (!mygrid.getRowsNum())
            return false;
        return true;
    });
    mygrid.setSkin("dhx_skyblue");
    mygrid.setPagingSkin("bricks");
    mygrid.load("/lookup_types/get_lookup_types","json");


</script>



