<%= common_title(:model_meaning=>t(:label_irm_person_avatar)) %>

<%= form_for(@person, :url => {:controller => "irm/my_avatar", :action => "update", :id => @person.id,
                                      :return_url => {:controller => "irm/my_avatar", :action => "index"}}) do |f| %>
<div id="ep" class="edit-block page-block">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%=t(:label_irm_person_avatar_crop)%></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_to t(:cancel), {:controller => "irm/my_avatar", :action => "index"}%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <div class="pbSubsection">
        <div style="padding: 5px 0 5px 0; margin-left: 30%;"><%= t(:label_irm_person_avatar_best_size)%><label id="currentCrop"></label></div>
    </div>
    <div class="pbSubsection">
        <%= render :partial => "irm/common/crop", :locals => {:source => @person,:best_size=>[100,100],:display_dom=>"currentCrop"}%>
           <% for attribute in [:crop_x, :crop_y, :crop_w, :crop_h] %>
             <%= f.hidden_field attribute, :id => attribute %>
            <% end %>
    </div>
  </div>
</div>
<% end %>