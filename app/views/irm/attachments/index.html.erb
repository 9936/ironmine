<%= setting_title %>
<div class="listRelatedObject setupBlock">
    <div class="bPageBlock">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_icm_incident_status_list) %></h2></td>
              <td id="topButtonRow" class="pbButton">
                <div class="button"><%= link_to t(:new), {:action => "new"}%></div>
              </td>
              <td class="pbHelp">
                <div id="incidentStatusesSearchBox"></div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
        <div id="incident_status" class="datatable" style="width:100%;">
          <div id="id" style="display:none">
            <%= link_to(t(:edit),{:action=>"edit",:id=>"{id}"}) %>|<%= link_to(t(:show),{:action=>"show",:id=>"{id}"}) %>
          </div>
        </div>
        <%= datatable("incident_status",url_for(:action=>"get_data",:format=>"json"),
                  [{:key=>"id",:label=>t(:edit),:formatter=>"Y.irm.template",:width=>"50%"},
                   {:key=>"phase_name",:label=>t(:label_icm_incident_status_phase_code),:sortable=>true,:searchable=>true},
                   {:key=>"incident_status_code",:label=>t(:label_icm_incident_status_incident_status_code),:sortable=>true,:searchable=>true},
                   {:key=>"name",:label=>t(:label_icm_incident_status_name),:sortable=>true,:searchable=>true},
                   {:key=>"display_sequence",:label=>t(:display_sequence),:sortable=>true},
                   {:key=>"default_flag",:label=>t(:default_flag),:sortable=>true},
                   {:key=>"status_meaning",:label=>t(:label_irm_script_status_code),:sortable=>true}],
                   {:row_perpage=>5,:search_box=>"incidentStatusesSearchBox"})%>
      </div>
    </div>
</div>