<%= setting_show_title(:show_data =>@ldap_auth_header.status_code ) %>

<div id="ep" class="bDetailBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_icm_ldap_auth_header_name) %></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= link_to t(:edit), {:action => "edit", :id => @ldap_auth_header}%></div>
            <div class="button"><%= link_to t(:back), {:action => "index"}%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label ><%=t(:ldap_auth_header_ldap_source)%></label></td>
              <td class="dataCol"><%= @ldap_auth_header.ldap_source.name %></td>
              <td class="labelCol"><label ><%=t(:ldap_auth_header_auth_code)%></label></td>
              <td class="dataCol"><%= @ldap_auth_header.name %></td>
            </tr>

            <tr>
              <td class="labelCol"><label ><%=t(:ldap_auth_header_auth_cn)%></label></td>
              <td class="dataCol"><%= @ldap_auth_header.auth_cn %></td>
             <td class="labelCol"><label ><%=t(:ldap_auth_header_description)%></label></td>
              <td class="dataCol"><%= @ldap_auth_header.description %></td>
            </tr>

            <tr>
              <td class="labelCol"><label ><%=t(:ldap_auth_header_status_code)%></label></td>
              <td class="dataCol"><%= check_img(@ldap_auth_header.status_code) %></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
                  </tbody>
      </table>
    </div>
  </div>
</div>

<div class="listRelatedObject setupBlock">
    <div class="bPageBlock">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_object_attributes) %></h2></td>
              <td class="pbButton">
                <div class="button"><%= link_to t(:new), {:controller => "irm/ldap_auth_attributes", :action => "new", :ah_id => @ldap_auth_header.id}%></div>
              </td>
              <td class="pbHelp">
                <div id="object_attributesSearchBox"></div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
        <div id="ldap_auth_attributes" class="datatable" style="width:100%">
          <div id="id" style="display:none">
            <%= link_to(t(:edit),{:controller => "irm/ldap_auth_attributes", :action => "edit", :ah_id => @ldap_auth_header.id,:id=>"{id}"}) %>
            <%= link_to(t(:show),{:controller => "irm/ldap_auth_attributes", :action => "show", :ah_id => @ldap_auth_header.id,:id=>"{id}"}) %>
            <%= link_to(t(:delete),{:controller => "irm/ldap_auth_attributes", :action => "destroy", :ah_id => @ldap_auth_header.id,:id=>"{id}"},{:method => :delete,:confirm => t(:label_are_you_sure)}) %>
          </div>
          <div id="status_code" style="display:none">
            <%= check_img("{status_code}") %>
          </div>
        </div>
        <%= datatable("ldap_auth_attributes",url_for(:controller => "irm/ldap_auth_attributes", :action => "get_data", :ah_id => @ldap_auth_header.id,:format=>"json"),
                      [{:key=>"id",:label=>t(:operation),:formatter=>"Y.irm.template",:width=>"110px"},
                       { :key => "local_attr", :label => t(:label_ldap_auth_attribute_local_attr),:searchable=>true,:width=>"200px" },
                       { :key => "ldap_attr", :label => t(:label_ldap_auth_attribute_ldap_attr)},
                       { :key => "description", :label => t(:ldap_auth_header_description),:searchable=>true },
                       { :key => "status_code",:label=>t(:active),:sortable=>true,:formatter=>"Y.irm.template", :width => "40px"}
                      ],{:search_box=>"object_attributesSearchBox"})%>

      </div>
    </div>
</div>
