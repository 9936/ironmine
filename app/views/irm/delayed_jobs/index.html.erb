              </td>
              <td class="pbHelp">
                <div id="permissionsSearchBox"></div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
        <div id="delayed_job" class="datatable" style="width:100%;">
          <div id="delayed_job_id" style="display:none">
            <%= link_to(t(:list),{:action=>"item_list",:id=>"{delayed_job_id}"}) %>
           </div>
          <div id="status" style="display:none">
            <div id="status_{delayed_job_id}"></div>
            <script>
