<style type="text/css">
  .floatLeft{
      float:left;
  }
</style>
<%= form_for(@report,:url=>{:action=>"edit_custom"},:builder => LabellingFormBuilder) do |f| %>
<%= f.hidden_field(:step) %>
<div  class="wizard-block">
  <%= render :partial => "step_header",:locals => {:step=>@report.step} %>
  <div class="pbBody">
    <div class="pbDescription ">
    </div>
    <div class="pbWizardBody">
      <div class="secondary-palette">
        <div class="pbBody ">
            <div id="head_1_ep" class="pbSubheader first tertiaryPalette">
              <h3><%= t(:label_irm_report_step_base_info) %></h3>
            </div>
            <div class="pbSubsection">
                <table class="detailList" cellpadding="0" cellspacing="0" border="0">
                  <tbody>
                    <tr>
                      <td class="labelCol"><label><%=t(:label_irm_report_report_type)%></label></td>
                      <td class="dataCol"><label><%=@report[:report_type_name]%></label></td>
                      <td class="labelCol empty">&nbsp;</td>
                      <td class="dataCol empty">&nbsp;</td>
                    </tr>
                    <tr>
                      <td class="labelCol"><label for="report_code"><%=t(:label_irm_report_code)%></label></td>
                      <td class="dataCol"><%=f.text_field :code, :required=>true ,:irm_uppercase=>true,:id=>"report_code"%></td>
                      <td class="labelCol empty">&nbsp;</td>
                      <td class="dataCol empty">&nbsp;</td>
                    </tr>
                    <tr>
                      <td class="labelCol"><label for="report_name"><%=t(:label_irm_report_name)%></label></td>
                      <td class="dataCol"><%=f.text_field :name,:value=>@report[:name], :required=>true ,:id=>"report_name"%></td>
                      <td class="labelCol empty">&nbsp;</td>
                      <td class="dataCol empty">&nbsp;</td>
                    </tr>
                    <tr>
                      <td class="labelCol"><label for="report_folder_id"><%=t(:label_irm_report_report_folder)%></label></td>
                      <td class="dataCol"><%=f.blank_select :report_folder_id,available_report_folder,{} ,:required=>true,:id=>"report_folder_id"%></td>
                      <td class="labelCol empty">&nbsp;</td>
                      <td class="dataCol empty">&nbsp;</td>
                    </tr>
                    <tr>
                      <td class="labelCol"><label for="report_auto_run_flag"><%=t(:label_irm_report_auto_run_flag)%></label></td>
                      <td class="dataCol">
                        <label for="display_flag"><%= f.check_box(:auto_run_flag) %></label>
                      </td>
                      <td class="labelCol empty">&nbsp;</td>
                      <td class="dataCol empty">&nbsp;</td>
                    </tr>
                    <tr>
                      <td class="labelCol"><label for="report_description"><%=t(:label_irm_report_description)%></label></td>
                      <td class="dataCol" colspan="3" width="82%"><%=f.text_area :description, :cols=>60,:rows=>5,:id=>"report_description"%></td>
                    </tr>

                  </tbody>
                </table>
            </div>
        </div>
      </div>
    </div>
    <div class="pbWizardFooter">
        <div class="pbBottomButtons">
            <table cellpadding="0" cellspacing="0" border="0">
              <tbody>
                <tr>
                  <td class="pbTitle"></td>
                  <td id="bottomButtonRow" class="pbButtonb">
                    <div class="button"><%= f.submit t :next%></div>
                    <div class="button"><%= link_to t(:cancel), {:action => "show"} %></div>
                  </td>
                </tr>
              </tbody>
            </table>
        </div>
    </div>
  </div>
</div>
<%end%>