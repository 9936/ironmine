<%= common_title(:action_meaning=>t(:label_irm_report_new_program)) %>

<%= form_for(@report,:url=>{:action=>"create_program"},:builder => LabellingFormBuilder) do |f| %>
    <%= page_block("editPriority") do |pb|%>
        <%= pb.page_block_header(:title=>t(:label_irm_report_new_program)) do %>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= link_submit t(:save)%></div>
            <div class="button"><%= link_back t(:cancel)%></div>
          </td>
          <td class="pbHelp">
          </td>

        <% end %>
       <%= pb.page_block_body do %>
            <%= error_for @report%>
            <%= f.hidden_field :program_type,:value=>"PROGRAM" %>
            <%= sub_page_block("baseInfo") do |spb|%>
                <%= spb.sub_page_block_header(:title=>t(:label_common_info),:first=>true)%>
                <%= spb.sub_page_block_body do %>
                    <table class="detailList" cellpadding="0" cellspacing="0" border="0">
                      <tbody>
                        <tr>
                          <td class="labelCol"><label for="report_name"><%=t(:label_irm_report_name)%></label></td>
                          <td class="dataCol"><%=f.text_field :name, :required=>true ,:id=>"report_name"%></td>
                          <td class="labelCol empty">&nbsp;</td>
                          <td class="dataCol empty">&nbsp;</td>
                        </tr>
                        <tr>
                          <td class="labelCol"><label for="report_code"><%=t(:label_irm_report_code)%></label></td>
                          <td class="dataCol"><%=f.text_field :code, :required=>true ,:irm_uppercase=>true,:id=>"report_code"%></td>
                          <td class="labelCol empty">&nbsp;</td>
                          <td class="dataCol empty">&nbsp;</td>
                        </tr>
                         <tr>
                          <td class="labelCol"><label for="program"><%=t(:label_irm_report_program)%></label></td>
                          <td class="dataCol"><%=f.blank_select :program,available_report_programs ,{},{:id=>"program",:required=>true}%></td>
                          <td class="labelCol empty">&nbsp;</td>
                          <td class="dataCol empty">&nbsp;</td>
                        </tr>
                        <tr>
                          <td class="labelCol"><label for="report_folder_id"><%=t(:label_irm_report_report_folder)%></label></td>
                          <td class="dataCol"><%=f.blank_select :report_folder_id,available_report_folder,{} ,:required=>true,:id=>"report_folder_id"%></td>
                          <td class="labelCol empty">&nbsp;</td>
                          <td class="dataCol empty">&nbsp;</td>
                        </tr>
                        <tr>
                          <td class="labelCol"><label for="report_auto_run_flag"><%=t(:label_irm_report_auto_run_flag)%></label></td>
                          <td class="dataCol">
                            <label for="display_flag"><%= f.check_box(:auto_run_flag) %></label>
                          </td>
                          <td class="labelCol empty">&nbsp;</td>
                          <td class="dataCol empty">&nbsp;</td>
                        </tr>
                        <tr>
                          <td class="labelCol"><label for="report_description"><%=t(:label_irm_report_description)%></label></td>
                          <td class="dataCol" colspan="3" width="82%"><%=f.text_area :description, :cols=>60,:rows=>5,:id=>"report_description"%></td>
                        </tr>
                      </tbody>
                    </table>
                <% end %>
          <% end %>
        <%= pb.page_block_footer do %>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= link_submit t(:save)%></div>
            <div class="button"><%= link_back t(:cancel)%></div>
          </td>
        <% end %>
    <% end %>
    <% end %>
<% end %>
