<%= page_title %>
<div class="listRelatedObject setupBlock">
    <div class="page-block">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_portal_layout_list) %></h2></td>
              <td id="topButtonRow" class="pbButton">
                <div class="button"><%= link_to t(:new), {:action => "new"}%></div>
              </td>
              <td class="pbHelp">
                <div id="portal_layoutsSearchBox"></div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
        <div id="portal_layouts" class="datatable" style="width:100%">
          <div id="id" style="display:none">
            <%= link_to(t(:edit),{:action=>"edit",:id=>"{id}"}) %>|<%= link_to(t(:show),{:action=>"show",:id=>"{id}"}) %>
          </div>
          <div id="default_flag" style="display:none">
            <%= check_img("{default_flag}") %>
          </div>
        </div>
        <%= datatable("portal_layouts",{:action=>"get_data",:format=>"json"},
                      [{:key=>"id",:label=>t(:operation),:formatter=>"Y.irm.template",:width=>"70px"},
                       { :key => "name", :label => t(:label_irm_portal_layout_name)  },
                       { :key => "description", :label => t(:label_irm_portal_layout_description)  },
                       { :key => "layout", :label => t(:label_irm_portal_layout_format) },
                       { :key => "default_flag", :label => t(:default_flag),:formatter=>"Y.irm.template",:width=>"70px" }
                                              ],{:paginator_box=>"portal_layoutsPaginatorBox"})%>
        <div id="portal_layoutsPaginatorBox"></div>
      </div>
    </div>
</div>


