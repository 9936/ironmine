<%= form_for(@tab,:url=>{:action=>"create"},:builder => LabellingFormBuilder) do |f| %>
<div id="ep" class="edit-block page-block">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%=t(:label_irm_tab_new)%></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_back t(:cancel)%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <%= error_for @tab %>
    <div id="head_1_ep" class="pbSubheader first tertiaryPalette">
      <span class="pbSubExtra">
        <span class="requiredLegend">
          <span class="requiredExampleOuter">
            <span class="requiredExample">&nbsp;</span>
          </span><span class="requiredMark">*</span>
          <span class="requiredText"> = <%=t(:label_is_required)%></span>
        </span>
      </span>
      <h3><%= t(:label_common_info) %></h3>
    </div>
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label for="tab_code"><%=t(:label_irm_tab_code)%></label></td>
              <td class="dataCol"><%=f.text_field :code, :required=>true,:irm_uppercase=>true ,:id=>"tab_code"%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <tr>
              <td class="labelCol"><label for="tab_name"><%=t(:label_irm_tab_name)%></label></td>
              <td class="dataCol"><%=f.text_field :name, :required=>true ,:id=>"tab_name"%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <tr>
              <td class="labelCol"><label for="tab_function_group_id"><%=t(:label_irm_tab_function_group)%></label></td>
              <td class="dataCol"><%=f.blank_select :function_group_id,available_function_group,{}, :required=>true ,:id=>"tab_function_group_id"%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <tr>
              <td class="labelCol"><label for="tab_business_object_id"><%=t(:label_irm_tab_business_object)%></label></td>
              <td class="dataCol"><%=f.blank_select :business_object_id,available_business_object_with_id,{}, :required=>true ,:id=>"tab_business_object_id"%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <tr>
              <td class="labelCol"><label for="tab_business_object_id"><%=t(:label_irm_tab_style_image)%></label></td>
              <td class="dataCol">
                <%=f.blank_select :style_image,available_tab_style_image,{}, :required=>true ,:id=>"tab_style_image",:current=>@tab.style_image%>
              </td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <tr>
              <td class="labelCol"></td>
              <td class="dataCol" colspan="3">
                <img id="styleImageShow" src='/images/s.gif' class="page-title-icon" style="float:left;"/>
              </td>
            </tr>
            <tr>
              <td class="labelCol"><label for="tab_description"><%=t(:label_irm_tab_description)%></label></td>
              <td class="dataCol" colspan="3" width="82%"><%=f.text_area :description,:rows=>4,:cols=>60,:id=>"tab_description"%></td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="pbBottomButtons">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"></td>
          <td id="bottomButtonRow" class="pbButtonb">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_back t(:cancel)%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<% end %>
<script type="text/javascript">
  $(function(){
      $("#tab_style_image").change(function(e){
          var currentImg = $(e.target).attr("current");
          if(currentImg&&currentImg!=""){
              $("#styleImageShow").removeClass(currentImg);
          }
          $("#styleImageShow").addClass($(e.target).val());
          $(e.target).attr("current",$(e.target).val());
      });
      $("#tab_style_image").trigger("change");
  });
</script>