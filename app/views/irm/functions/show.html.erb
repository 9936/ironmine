<%= setting_show_title(:show_data => @function[:name]) %>

<div id="ep" class="detail-block page-block">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_function) %></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= link_to t(:edit), {:action => "edit", :id => @function}%></div>
            <div class="button"><%= link_to t(:back), {:action => "index"} %></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_function_function_code)%></label></td>
              <td class="data2Col"><div><%= @function.code%></div></td>
            </tr>        
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_function_name)%></label></td>
              <td class="data2Col"><div><%= @function[:name]%></div></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_function_default_flag)%></label></td>
              <td class="dataCol"><%= check_img(@function[:default_flag])%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_function_public_flag)%></label></td>
              <td class="dataCol"><%= check_img(@function[:public_flag])%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=t(:label_irm_function_description)%></label></td>
              <td class="data2Col"><div><%= @function[:description]%></div></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :active)%></label></td>
              <td class="data2Col"><div><%= check_img(@function[:status_code])%></div></td>
            </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>
<div class="listRelatedObject setupBlock">
    <div class="page-block">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_permission_list) %></h2></td>
              <td  class="pbButton">
                <div class="button"></div>
              </td>
              <td class="pbHelp">
                <div id="permissionsSearchBox"></div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
        <div id="permissions_list" class="datatable" style="width:100%">

          <div id="status_code" style="display:none">
            <%= check_img("{status_code}") %>
          </div>
          <div id="direct_get_flag" style="display:none">
                      <%= check_img("{direct_get_flag}") %>
                    </div>
        </div>
        <div id="paging">
        </div>
        <%= datatable("permissions_list",{:controller => "irm/permissions", :action=>"get_data" ,:function_id=>@function[:id],:format=>"json"},
                      [
                       {:key=>"product_module_name",:label=>t(:label_irm_permission_product_name),:width=>"80px"},

                       {:key=>"code",:label=>t(:label_irm_permission_permission_code),:searchable=>true, :width => "200px"},
                       {:key=>"p_controller",:label=>t(:label_irm_permission_page_controller),:searchable=>true},
                       {:key=>"p_action",:label=>t(:label_irm_permission_page_action),:searchable=>true},
                       {:key=>"params_count",:label=>t(:label_irm_permission_param_count)},
                       {:key=>"direct_get_flag",:formatter=>"Y.irm.template",:label=>t(:label_irm_permission_direct_get_flag)},

                       {:key=>"status_code",:label=>t(:label_irm_permission_status_code),:formatter=>"Y.irm.template", :width => "40px"}],
                       {:search_box=>"permissionsSearchBox"})%>
      </div>
    </div>
</div>