<% require_javascript(:extjs) %>
<%= text_field_tag(id, tip_text, {:style => "height:25px;width:300px;", :class => "grayTips", :id => id})%>

<script type="text/javascript">
function inputTipText(){
    $("input[class*=grayTips]") //所有样式名中含有grayTips的input
    .each(function(){
       var oldVal=$(this).val();   //默认的提示性文本
       $(this)
       .css({"color":"#888"})  //灰色
       .focus(function(){
        if($(this).val()!=oldVal){$(this).css({"color":"#000"})}else{$(this).val("").css({"color":"#888"})}
       })
       .blur(function(){
        if($(this).val()==""){$(this).val(oldVal).css({"color":"#888"})}
       })
       .keydown(function(){$(this).css({"color":"#000"})})

    })
}

$(function(){
    inputTipText();  //直接调用就OK了
    $("#<%= id%>").keypress(function(event){
        if(event.which == 13){
            var params = {};
            params["full_search"] = $("#<%= id%>").val();
            Ext.getCmp("<%= target_table%>Datatable").store.dtSearch(params);
        }
    });
})
</script>