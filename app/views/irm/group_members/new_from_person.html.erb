<%= common_title(:model_meaning => @person[:full_name], :action_meaning=>t(:label_action_new)) %>
<%= form_for(@group_member,:url=>{:action=>"create_from_person"},:builder => LabellingFormBuilder) do |f| %>
<%= f.hidden_field(:status_code) %>
<% if @step %>
<div class="wizard-block">
    <div class="pbWizardTitle tertiaryPalette">
        <div class="ptRightTitle">
            <%= t(:step_n_total_m, :n => "3", :m => "3") %>
        </div>
        <h2>
            <%= t(:step_n, :n => "3") %><%= t(:label_irm_group_member_select_group) %>
        </h2>
    </div>
    <div class="pbBody">
        <div class="pbBottomButtons">
            <table cellpadding="0" cellspacing="0" border="0">
              <tbody>
                <tr>
                  <td class="pbTitle"></td>
                  <td class="pbButton">
                      <div class="button"><%= link_to t(:last), {}, {:href => "javascript:void(0);", :class => "add_system_button"} %></div>
                      <div class="button"><%= f.submit t(:save)%></div>
                      <div class="button"><%= link_to(t(:cancel),{:controller =>"irm/people",:action=>"show",:id=>@person.id})%></div>
                  </td>
                </tr>
              </tbody>
            </table>
        </div>
        <div class="pbWizardBody">
            <div class="secondary-palette">
<% else %>
<div class="listRelatedObject setupBlock">
    <div class="page-block">
      <div class="pbHeader">

        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_select_result) %>&nbsp;<%= t(:label_detail_info) %></h2></td>
              <td id="topButtonRow" class="pbButton">
                  <div class="button"><%= f.submit t(:save)%></div>
                  <div class="button"><%= link_to(t(:cancel),{:controller =>"irm/people",:action=>"show",:id=>@person.id})%></div>
              </td>
              <td class="pbHelp">
                <div id="selectableSystemSearchBox"></div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>

<% end %>
      <div class="pbBody">
        <%= error_for @group_member %>
        <div id="supportGroupMembers" class="datatable" style="width:100%">
        </div>
        <%= datatable("supportGroupMembers",{:action=>"get_groupable_data",:id=>@person.id,:format=>:json},
                  [{:key=>"id",:hidden=>true},
                   {:key=>"name",:label=>t(:label_irm_group_name),:searchable=>true},
                   {:key=>"code",:label=>t(:label_irm_group_group_code),:searchable=>true},
                   {:key=>"description",:label=>t(:label_irm_group_description),:searchable=>true}
                   ],
                   {:paginator_box=>"personPaginator",:search_box=>"selectablePersonSearchBox",:select=>"multiple"})%>
        <div id="personPaginator"></div>
      </div>
      <div class="pbBottomButtons">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"></td>
              <td id="bottomButtonRow" class="pbButtonb">
                <% if @step %>
                  <div class="button"><%= link_to t(:last), {}, {:href => "javascript:void(0);", :class => "add_system_button"} %></div>
                  <div class="button"><%= f.submit t(:save)%></div>
                  <div class="button"><%= link_to(t(:cancel),{:controller =>"irm/people",:action=>"show",:id=>@person.id})%></div>
                <% else %>
                  <div class="button"><%= f.submit t(:save)%></div>
                  <div class="button"><%= link_to(t(:cancel),{:controller =>"irm/people",:action=>"show",:id=>@person.id})%></div>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
<% if @step %>

            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
  $(function(){
    $(".add_system_button").click(function(){
        $("#new_irm_group_member").attr('action', '<%= url_for(:action => "create_from_person", :controller => "irm/group_members", :next_action => "last")%>');
        $("#new_irm_group_member").submit();
    });
  })
</script>
<% else %>

    </div>
</div>
<% end %>
<% end %>
<script type="text/javascript">
  Ext.onReady(function(){
      var setSelectedValue = function(selModel,selected){
          var ids = [];
          for(var i = 0;i<selected.length;i++){
            ids.push(selected[i].data.id);
          }
          $("#irm_group_member_status_code").val(ids.join(","));
      }
      Ext.getCmp("supportGroupMembersDatatable").selModel.addListener("selectionchange",setSelectedValue);
});
</script>