<!--  irm datatable      -->
 <div class="irm-datatable">
   <div>
       <table count="<%=@count%>">
         <thead>
           <tr>
             <th style="width:40px">
               <div><%= t(:operation)%></div>
             </th>
             <th>
               <div><%= t(:label_irm_group_person_name) %></div>
             </th>
             <th>
               <div><%= t(:label_irm_group_organization_name) %></div>
             </th>
             <th>
               <div><%= t(:label_irm_person_email_address) %></div>
             </th>
           </tr>
         </thead>
         <tbody>
         <% @datas.each do |data| %>
         <tr id="<%=data[:id]%>">
           <td>
             <div>
               <%= icon_link_remove({:controller=>"irm/group_members",:action=>"delete",:id=> data[:id],
                                      :group_id=>@group.id},:confirm => t(:label_are_you_sure) ,
                                      :method => :delete) %>
             </div>
           </td>
           <td>
             <div>
               <%= data[:person_name] %>
             </div>
           </td>
           <td>
             <div>
               <%=data[:organization_name]%>
             </div>
           </td>
           <td>
             <div>
               <%=data[:email_address]%>
             </div>
           </td>
         </tr>
         <% end -%>
         </tbody>
       </table>
   </div>
 </div>
<!--  end irm datatable      -->