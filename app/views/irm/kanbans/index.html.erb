<%= common_title %>
<div class="listRelatedObject setupBlock">
    <div class="page-block">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_kanban) %></h2></td>
              <td id="topButtonRow" class="pbButton">
                <div class="button"><%= link_to t(:new), {:action => "new"}%></div>
              </td>
              <td class="pbHelp">

              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
        <div id="kanban_list" class="datatable" style="width:100%;">
          <div id="id" style="display:none">
            <%= link_to(t(:edit),{:action=>"edit",:id=>"{id}"}) %>
            <%= link_to(t(:show),{:action=>"show",:id=>"{id}"}) %>
        </div>
      </div>
        <%= datatable("kanban_list",url_for(:action=>"get_data"),
                  [{:key=>"id",:label=>t(:operation),:formatter=>"Y.irm.template",:width=>"80px"},
                   {:key=>"name",:label=>t(:name),:width=>"150px"},
                   {:key=>"description",:label=>t(:description),:width=>"250px"},
                   {:key=>"refresh_interval",:label=>t(:label_irm_kanban_refresh_interval),:width=>"40px"},
                   {:key=>"limit",:label=>t(:label_irm_lane_limit),:width=>"40px"},
                   {:key=>"status_meaning",:label=>t(:active),:width=>"40px"}])%>
      </div>
    </div>
</div>
