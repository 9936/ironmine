<div class="bPageTitle">
  <div class="ptBody">
    <div class="content">
      <h1 class="pageType"></h1>
      <h2 class="pageDescription"><%= t(:label_irm_support_group_member_new) %></h2>
      <div class="blank">&nbsp;</div>
    </div>
    <div class="links">
      <a href="javascript:void(0);" class="configLinks">此页面的帮助</a>
    </div>
    <div class="ptBreadcrumb"></div>
  </div>
</div>
<div class="filterOverview">
    <div class="bFilterView">
      <%= form_tag(:action => "select_person",:support_group_code=>@support_group_code) do %>
      <%= hidden_field_tag "return_url",@return_url%>
      <span class="bFilter">
        <label style="text-align: left; font-weight: bold; padding-right: 0.69em;"><%= t(:label_irm_person_name) %>：</label>
        <span class="fBody">
            <%= text_field_tag :person_name,@person_name%>
            <%= submit_tag t(:jump), :title => t(:jump), :class => "btn" %>
        </span>
        <span class="fFooter">
          <a href="javascript:void(0);">编辑</a> |
          <a href="javascript:void(0);">创建新视图</a>
        </span>
      </span>
      <% end %>
    </div>
</div>
<% if !@person_name.blank? %>
<%= form_for(@support_group_member,:url=>{:action=>"create"},:builder => LabellingFormBuilder) do |f| %>
<%= hidden_field_tag "support_group_code",@support_group_code%>
<%= hidden_field_tag "person_name",@person_name%>
<%= hidden_field_tag "return_url",@return_url%>
<div id="ep" class="bEditBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%=t(:label_irm_support_group_member_new)%></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= f.submit t(:save)%></div>
            <% if !@return_url.blank? %>
              <div class="button"><%= link_to t(:cancel), @return_url%></div>
            <% else %>
              <div class="button"><%= link_to t(:cancel), {:action => "select_person",:support_group_code=>@support_group_code,
                                                           :person_name=>@person_name}%></div>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <div id="head_1_ep" class="pbSubheader first tertiaryPalette">
      <span class="pbSubExtra">
          <span class="requiredLegend">
            <span class="requiredExampleOuter">
            </span>
          <span class="requiredMark">&nbsp;</span>
          <span class="requiredText">&nbsp;</span>
          </span>
      </span>
      <h3><%=t(:label_irm_support_group_show)%></h3>
    </div>
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_support_group_group_code)%></label></td>
              <td class="dataCol"><%=@support_group.group_code%></td>
              <td class="labelCol"><label><%=(t :label_irm_support_group_company_name)%></label></td>
              <td class="dataCol"><%=@support_group[:company_name]%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_support_group_name)%></label></td>
              <td class="dataCol"><%=@support_group[:name]%></td>
              <td class="labelCol"><label><%=(t :label_irm_support_group_organization_name)%></label></td>
              <td class="dataCol"><%=@support_group[:organization_name]%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_support_group_description)%></label></td>
              <td class="dataCol"><%=@support_group[:description]%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_support_group_oncall_group)%></label></td>
              <td class="dataCol"><%=@support_group.oncall_group_flag%></td>
              <td class="labelCol"><%=(t :label_irm_support_group_support_role)%></td>
              <td class="dataCol"><%=@support_group.support_role_name%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_support_group_vendor_group)%></label></td>
              <td class="dataCol"><%=@support_group.vendor_group_flag%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="pbBody">
    <%= error_for @support_group_member%>
    <div id="head_2_ep" class="pbSubheader first tertiaryPalette">
      <span class="pbSubExtra">
          <span class="requiredLegend">
            <span class="requiredExampleOuter">
            <span class="requiredExample">&nbsp;</span>
            </span>
          <span class="requiredMark">*</span>
          <span class="requiredText"> = <%=t(:label_is_required)%></span>
          </span>
      </span>
      <h3><%=t(:label_irm_support_group_member_info)%></h3>
    </div>
    <div class="pbSubsection">
      <table cellspacing="0" cellpadding="0" border="0" class="detailList">
        <tbody>
        <tr class="tdSectionRowHeader">
          <th scope="col">&nbsp;</th>
          <th scope="col" class="tdTableColumnHeader"><%= t(:label_irm_person_name) %></th>
          <th scope="col"><%= t(:label_irm_person_company) %></th>
          <th scope="col"><%= t(:label_irm_person_email_address) %></th>
        </tr>
          <% for person in @people %>
            <tr class="tdSectionRow">
                <td>
                    <%= check_box_tag "irm_support_group_member[person_id][]",person.id,
                                      support_group_member_flag(person.id,@support_group_code)%>
                </td>
                <td><%= person[:person_name] %></td>
                <td><%= person[:company_name] %></td>
                <td><%= person[:email_address] %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="pbBottomButtons">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"></td>
          <td id="bottomButtonRow" class="pbButtonb">
            <div class="button"><%= f.submit t(:save)%></div>
            <% if !@return_url.blank? %>
              <div class="button"><%= link_to t(:cancel), @return_url%></div>
            <% else %>
              <div class="button"><%= link_to t(:cancel), {:action => "select_person",:support_group_code=>@support_group_code,
                                                           :person_name=>@person_name}%></div>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<% end %>
<% end %>