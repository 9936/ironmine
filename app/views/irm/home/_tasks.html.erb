<div class="datatable">
  <div class="irm-datatable">
    <div>
        <table>
          <thead>
            <tr>
              <th style="width:140px">
                <div>
                  <%= t(:label_irm_task_type) %>
                </div>
              </th>
              <th>
                <div>
                  <%= t(:label_irm_task_title) %>
                </div>
              </th>
              <th style="width:100px">
                <div>
                  <%= t(:label_irm_task_status_name) %>
                </div>
              </th>
              <th  style="width:140px">
                <div>
                  <%= t(:label_irm_task_start_at) %>
                </div>
              </th>
              <th style="width:140px">
                <div>
                  <%= t(:label_irm_task_end_at) %>
                </div>
              </th>
            </tr>
          </thead>

           <tbody>
               <% tasks.each do |task|%>
                 <tr id="task_<%=task[:id]%>">
                   <td>
                     <div>
                       <%= Irm::BusinessObject.class_name_to_meaning(task[:type])%>
                      </div>
                   </td>
                   <td>
                     <div>
                       <%= link_to task[:title],task[:url_options] %>
                      </div>
                   </td>
                   <td>
                     <div>
                       <%= task[:status_name] %>
                      </div>
                   </td>
                   <td>
                     <div>
                       <%= format_date(task[:start_at]) %>
                     </div>
                   </td>
                   <td>
                     <div>
                       <%= format_date(task[:end_at]) %>
                     </div>
                   </td>
                 </tr>
               <% end %>
           </tbody>

        </table>
    </div>
  </div>
</div>