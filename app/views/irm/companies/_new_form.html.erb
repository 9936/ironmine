<div class="bPageTitle">
  <div class="ptBody">
    <div class="content">
      <h1 class="pageType"><%=t(:label_irm_company_new)%></h1>
      <h2 class="pageDescription"><%=t(:label_irm_company_new)%></h2>
      <div class="blank">&nbsp;</div>
    </div>
    <div class="links">
      <a href="javascript:void(0);" class="configLinks"><%=t(:label_help_about_page)%></a>
    </div>
    <div class="ptBreadcrumb"></div>
  </div>
</div>

<%= form_for(@company,:url=>{:action=>"create"},:builder => LabellingFormBuilder) do |f| %>
<%= hidden_field_tag :return_url,@return_url %>
<div id="ep" class="bEditBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%=t(:label_irm_company_new)%></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= f.submit t(:save)%></div>
            <% if @return_url.blank? %>
              <div class="button"><%= link_to t(:cancel), {:action => "index"}%></div>
            <% else %>
              <div class="button"><%= link_to t(:cancel), @return_url%></div>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <%= error_for @company%>
    <div id="head_1_ep" class="pbSubheader first tertiaryPalette">
      <span class="pbSubExtra">
          <span class="requiredLegend">
            <span class="requiredExampleOuter">
            <span class="requiredExample">&nbsp;</span>
            </span>
          <span class="requiredMark">*</span>
          <span class="requiredText"> = <%=t(:label_is_required)%></span>
          </span>
      </span>
      <h3><%=t(:label_irm_company_info)%></h3>
    </div>
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_company_company_short_name)%></label></td>
              <td class="dataCol"><%=f.text_field :short_name, :required=>true,:irm_uppercase=>true%></td>
              <td class="labelCol"><%=(t :label_irm_company_company_type)%></td>
              <td class="dataCol"><%=f.select :company_type,"<option value=\"\">--- #{t(:actionview_instancetag_blank_option)} ---</option>".html_safe +
                                                options_from_collection_for_select(available_company_type,:lookup_code,:wrap_meaning,@company.company_type)%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_company_name)%></label></td>
              <td class="dataCol"><%=f.text_field :name, :required=>true%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_company_description)%></label></td>
              <td class="dataCol"><%=f.text_area :description,:rows=>4%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_company_time_zone)%></label></td>
              <td class="dataCol"><%=f.select :time_zone,"<option value=\"\">--- #{t(:actionview_instancetag_blank_option)} ---</option>".html_safe +
                                                options_from_collection_for_select(available_time_zone,:lookup_code,:wrap_meaning,@company.time_zone)%></td>
              <td class="labelCol"><%=(t :label_irm_company_hotline)%></td>
              <td class="dataCol"><%=f.text_field :hotline,:value=>@company.hotline%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_company_cost_center)%></label></td>
              <td class="dataCol"><%=f.text_field :cost_center_code,:value=>@company.cost_center_code%></td>
              <td class="labelCol"><%=(t :label_irm_company_home_page)%></td>
              <td class="dataCol"><%=f.text_field :home_page,:value=>@company.home_page%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_company_currency_code)%></label></td>
              <td class="dataCol"><%=f.select :currency_code,"<option value=\"\">--- #{t(:actionview_instancetag_blank_option)} ---</option>".html_safe +
                                                options_from_collection_for_select(available_currency,:currency_code,:wrap_name,@company.currency_code)%></td>
              <td class="labelCol"><%=(t :label_irm_company_budget_code)%></td>
              <td class="dataCol"><%=f.text_field :budget_code,:value=>@company.budget_code%></td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="pbBottomButtons">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"></td>
          <td id="bottomButtonRow" class="pbButtonb">
            <div class="button"><%= f.submit t(:save)%></div>
            <% if @return_url.blank? %>
              <div class="button"><%= link_to t(:cancel), {:action => "index"}%></div>
            <% else %>
              <div class="button"><%= link_to t(:cancel), @return_url%></div>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<% end %>


