<%= form_for(@operation_unit,:url=>{:action=>"update"},:builder => LabellingFormBuilder) do |f| %>
<div id="ep" class="edit-block page-block">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%=t(:label_irm_operation_unit_edit)%></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_back t(:cancel)%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <%= error_for @operation_unit %>
    <div id="head_1_ep" class="pbSubheader first tertiaryPalette">
      <span class="pbSubExtra">
        <span class="requiredLegend">
          <span class="requiredExampleOuter">
            <span class="requiredExample">&nbsp;</span>
          </span><span class="requiredMark">*</span>
          <span class="requiredText"> = <%=t(:label_is_required)%></span>
        </span>
      </span>
      <h3><%= t(:label_common_info) %></h3>
    </div>
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label for="operation_unit_name"><%=t(:label_irm_operation_unit_name)%></label></td>
              <td class="dataCol"><%=f.text_field :name, :required=>true ,:id=>"operation_unit_name"%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <tr>
              <td class="labelCol"><label for="operation_unit_short_name"><%=t(:label_irm_operation_unit_short_name)%></label></td>
              <td class="dataCol"><%=f.text_field :short_name, :required=>true ,:id=>"operation_unit_short_name"%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <tr>
              <td class="labelCol"><label for="operation_unit_license"><%=t(:label_irm_operation_unit_license)%></label></td>
              <td class="dataCol"><%=f.blank_select :license_id,available_license,{}, :required=>true ,:id=>"operation_unit_license"%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <tr>
              <td class="labelCol"><label for="operation_unit_default_language_code"><%=t(:label_irm_operation_unit_default_language_code)%></label></td>
              <td class="dataCol"><%= f.select(:default_language_code, options_for_select(selectable_languages,@operation_unit.default_language_code),{}, :required=>true ,:id=>"operation_unit_default_language_code") %></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <tr>
              <td class="labelCol"><label for="operation_unit_default_time_zone_code"><%=t(:label_irm_operation_unit_default_time_zone_code)%></label></td>
              <td class="dataCol"><%=f.select :default_time_zone_code,options_for_select(available_timezone,@operation_unit.default_time_zone_code),{}, :required=>true ,:id=>"operation_unit_default_time_zone_code"%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <tr>
              <td class="labelCol"><label for="application_description"><%=t(:label_irm_operation_unit_description)%></label></td>
              <td class="dataCol" colspan="3" width="82%"><%=f.text_area :description,:rows=>4,:cols=>60 ,:id=>"application_description"%></td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="pbBottomButtons">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"></td>
          <td id="bottomButtonRow" class="pbButtonb">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_back t(:cancel)%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<% end %>
