<div id="id_add_person_list">
        <div id="id_person_add_person_grid" class="datagrid" style="height:240px !important;"
        action_type="ajaxDhtmlxGrid"
        grid_header=" ,<%=t(:label_irm_support_person_name)%>,<%=t(:label_irm_support_group_company_name)%>,<%=t(:label_irm_person_email_address)%>,
                       <%=t(:label_irm_person_mobile_phone)%>,<%=t(:label_irm_support_group_status_code)%>"
        grid_width="20,100,200,150,100,100"
        grid_col_types="ch,ro,ro,ro,ro,ro"
        grid_align="center,left,left,left,left,left"
        enable_paging="true, 12, null, 'pagingArea', true, 'infoArea'"
        grid_attachHeader = "&nbsp;,#text_search,#text_search,&nbsp;,&nbsp;,&nbsp;"
        grid_load="'<%= url_for(:action => "get_support_group_member", :controller => "irm/support_groups",:support_group_code=>@support_group_code) %>','','json'">
        </div>
        <span id="infoArea"></span>
        <span id="recfound"></span>
        <div id='id_choose_person_win' style='display:none'></div>
        <script type="text/javascript" charset="utf-8">
        var supportWins,personW;
        function supportPersonOnLoad(){
            supportWins = new dhtmlXWindows();
            supportWins.enableAutoViewport(false);
            supportWins.attachViewportTo("system_content");
            supportWins.setImagePath("/bk_images/dhtmlx/");
            if($('#id_choose_person_win').length<1){$('body').append("<div id='id_choose_person_win' style='display:none'></div>");}
            personW = supportWins.createWindow("person_win", 80, 30, 680, 330);
            personW.setText("<%=t(:label_irm_support_group_choose_person)%>");
            $('#id_choose_person_win').load("/support_groups/choose_person?support_group_code=<%=@support_group_code%>",
                                    function(){init($("#id_choose_person_win"))});
            personW.attachObject('id_choose_person_win');
            personW.button('close').hide();
            personW.button('minmax1').hide();
            personW.button('minmax2').hide();
            personW.button('park').hide();
            personW.setModal(true);
        }
        function getAllCheckRows(){
           var personMemberGrid = dhtmlx_grid_array['id_person_add_person_grid'];
           $("#id_delete_list").attr('value',personMemberGrid.getCheckedRows(0));
        }
        </script>
        <%= form_tag({:controller=>"irm/support_groups",:action=>"delete_member"}) do %>
        <%=hidden_field_tag :support_group_code,@support_group_code%>
        <%=hidden_field_tag "id_delete_list"%>
            <div class="containerfooter">
               <div class="floatleft"><span id="pagingArea"></span></div>
               <div class="button floatright">
                   <%=link_to t(:delete) ,{:controller=>"irm/support_groups",:action=>"delete_member"},
                                         :script => "getAllCheckRows();/reload_grid('id_person_add_person_grid');replace(system_messagebox,system_messagebox);/",
                                         :action_type=>"ajaxSubmit"%>
               </div>
               <div class="button floatright"><a href="javascript:void(0);" onclick="supportPersonOnLoad();"><%= t(:label_irm_support_group_add_person) %></a></div>
               <div class="button floatright"><%= link_to t(:cancel), {:action => "index"}, :script => "/replace(id_company_index,id_company_index);/", :action_type=>"ajaxLink"%></div>
            </div>
        <% end %>
</div>