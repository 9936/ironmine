<div class="container">
  <div class="pagetitle"><%=t(:label_irm_script_show)%></div>
  <div class="pagedescription"><%=t(:label_irm_script_function_description)%></div>
</div>
<div class="container">
  <div class="discontainerheader  bluetop">
    <table class="bartable">
      <tr>
        <td class="left"><div class="headertitle"></div></td>
        <td class="middle">
          <div class="button"><%= link_to t(:edit), {:action => "edit"}%></div>
          <div class="button" ><%= link_to t(:new), {:action=>"new"}%></div>
        </td>
      </tr>
    </table>
  </div>
  <div class="discontainerbody">
  <table class="showtable" cellspacing="0">
      <tr>
          <td class="showlabel"><%=(t :label_irm_script_entity)%>:</td>
          <td class="showitem"><%=@script[:entity_meaning]%></td>
          <td class="showlabel"><%=(t :label_irm_script_condition)%>:</td>
          <td class="showitem"><%=@script[:condition_name]%></td>
      </tr>
      <tr>
          <td class="showlabel"><%=(t :label_irm_script_action)%>:</td>
          <td class="showitem"><%=@script[:action_name]%></td>
          <td class="showlabel"><%=(t :label_irm_script_template_code)%>:</td>
          <td class="showitem"><%=@script[:template_name]%></td>
      </tr>
      <tr>
          <td class="showlabel"><%=(t :label_irm_script_description)%>:</td>
          <td class="showitem"><%=@script[:description]%></td>
      </tr>
  </table>
  </div>
  <div class="discontainerfooter">
    <table class="bartable">
      <tr>
        <td class="left"></td>
        <td class="middle">
          <div class="button"><%= link_to t(:edit), {:action => "edit"}%></div>
          <div class="button" ><%= link_to t(:new), {:action=>"new"}%></div>
        </td>
        <td class="right"></td>
      </tr>
    </table>
  </div>
</div>
