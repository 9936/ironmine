<%= common_title(:show_data=>@group[:name]) %>
<div id="ep" class="bDetailBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="
    0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_group_show) %>&nbsp;<%= t(:label_detail_info) %></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= link_to t(:edit), {:action => "edit", :id => @group}%></div>
            <div class="button"><%= link_to t(:new), {:action => "new"}%></div>
            <div class="button"><%= link_to t(:back), {:action => "index"}%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_group_group_code)%></label></td>
              <td class="dataCol"><%=@group.code%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_group_name)%></label></td>
              <td class="dataCol"><%=@group[:name]%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>

            <tr>
              <td class="labelCol"><label><%=(t :label_irm_group_parent)%></label></td>
              <td class="dataCol"><%=@group[:parent_group_name]%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_group_description)%></label></td>
              <td class="dataCol" colspan="3" style="width:82%"><%=@group[:description]%></td>
            </tr>

        </tbody>
      </table>
    </div>
  </div>
</div>

<div id="id_group_person" class="bRelatedList">
    <a name="id_group_person_target">
    </a>
    <div class="listRelatedObject taskBlock">
      <div class="bPageBlock secondaryPalette">
        <div class="pbHeader">
          <table cellspacing="0" cellpadding="0" border="0">
            <tbody>
            <tr>
              <td class="pbTitle">
                <h3 id="id_group_person_title"><%=t(:label_irm_group_member)%></h3>
              </td>
              <td class="pbButton">
                <div class="button"><%= link_to t(:label_irm_group_add_person), {:controller=>"irm/group_members",
                                                          :action => "new",:id=>@group.id}%></div>
              </td>
              <td class="pbHelp">
              </td>
            </tr>
            </tbody>
          </table>
        </div>
        <div id="id_company_access" class="pbBody">
          <div id="person" class="datatable" style="width:100%;">
            <div id="id" style="display:none">
              <%= icon_link_remove({:controller=>"irm/group_members",:action=>"delete",:id=>"{id}",
                                      :group_id=>@group.id},:confirm => t(:label_are_you_sure) ,
                                      :method => :delete) %>
            </div>
          </div>
          <!-- Begin company access table -->
            <%= datatable("person",url_for(:controller=>"irm/group_members",:action=>"get_data",:id=>@group.id),
                              [{:key=>"id",:label=>t(:operation),:formatter=>"Y.irm.template",:width=>"40px"},
                               {:key=>"person_name",:label=>t(:label_irm_group_person_name),:sortable=>true},
                               {:key=>"organization_name",:label=>t(:label_irm_group_organization_name),:sortable=>true},
                               {:key=>"email_address",:label=>t(:label_irm_person_email_address),:sortable=>true}],
                               {:paginator_box=>"personPaginator"})%>
          <div id="personPaginator"></div>
        </div>
        <div class="pbFooter secondaryPalette">
        <div class="bg"></div>
        </div>
      </div>
    </div>
</div>
<%=render :partial=>"multilingual/show",:locals=>{:main_data=>@group} %>

