<%= common_title %>
<div class="listRelatedObject setupBlock">
    <div class="page-block">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_group_list) %></h2></td>
              <td id="topButtonRow" class="pbButton">
                <div class="button"><%= link_to t(:new), {:controller => "irm/groups", :action => "new"}%></div>
              </td>
              <td class="pbHelp">
                <div id="rolesSearchBox"></div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
          <!--  irm datatable      -->
           <div class="irm-datatable">
             <div>
                 <table count="<%=@leveled_groups.length%>">
                   <thead>
                     <tr>
                       <th style="width:70px;">
                         <div><%= t(:operation) %></div>
                       </th>
                       <th  style="width:300px;">
                         <div><%= t(:label_irm_group_name) %></div>
                       </th>
                       <th style="width:100px;">
                         <div><%= t(:label_irm_group_parent) %></div>
                       </th>
                       <th>
                         <div><%= t(:label_irm_group_description) %></div>
                       </th>
                     </tr>
                   </thead>
                   <tbody>
                    <% @leveled_groups.each do |group| %>
                    <tr id="<%=group.id%>">
                      <td>
                        <div>
                          <%= link_to(t(:edit),{:action=>"edit",:id=>group.id}) %>
                          <%= link_to(t(:show),{:action=>"show",:id=>group.id}) %>
                         </div>
                      </td>

                      <td>
                        <div>
                           <% (group.level - 1).times do %>&nbsp;&nbsp;&nbsp;&nbsp;<%end%><%= group[:name] %>(<%= group.code %>)
                        </div>
                      </td>
                      <td>
                        <div>
                           <%= group[:parent_group_name] %>
                        </div>
                      </td>

                      <td>
                        <div>
                           <%= group[:description] %>
                        </div>
                      </td>

                    </tr>
                    <% end -%>
                   </tbody>
                 </table>
             </div>
           </div>
          <!--  end irm datatable      -->
      </div>
    </div>
</div>