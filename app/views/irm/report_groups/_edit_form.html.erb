<%= form_for(@report_group,:url=>{:action=>"update"},:builder => LabellingFormBuilder) do |f| %>
<div id="ep" class="bEditBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%=t(:label_irm_report_group_edit)%></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_back t(:cancel)%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <%= error_for @report_group %>
    <div id="head_1_ep" class="pbSubheader first tertiaryPalette">
      <span class="pbSubExtra">
        <span class="requiredLegend">
          <span class="requiredExampleOuter">
            <span class="requiredExample">&nbsp;</span>
          </span><span class="requiredMark">*</span>
          <span class="requiredText"> = <%=t(:label_is_required)%></span>
        </span>
      </span>
      <h3><%= t(:label_common_info) %></h3>
    </div>
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>

            <tr>
              <td class="labelCol"><label for="report_group_group_code"><%=t(:label_irm_report_group_group_code)%></label></td>
              <td class="dataCol"><label><%= @report_group.group_code %></label></td>
              <td class="labelCol"><label for="report_group_name"><%=t(:label_irm_report_group_name)%></label></td>
              <td class="dataCol"><%=f.text_field :name, :value=>@report_group[:name],:required=>true ,:id=>"report_group_name"%></td>
            </tr>

            <tr>
              <td class="labelCol"><label for="report_group_description"><%=t(:label_irm_report_group_description)%></label></td>
              <td class="dataCol"><%=f.text_area :description, :value=>@report_group[:description], :rows=>4 ,:id=>"report_group_description"%></td>
              <td class="labelCol"><label for="report_group_code"><%=(t :label_irm_report_status_code)%></label></td>
              <td class="dataCol"><%=f.select :status_code,nullable_collection_options(available_status,:lookup_code,:wrap_meaning,@report_group.status_code),{},{:required=>true,:id=>"report_group_code"}%></td>            
            </tr>

        </tbody>
      </table>
    </div>
  </div>
  <div class="pbBottomButtons">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"></td>
          <td id="bottomButtonRow" class="pbButtonb">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button"><%= link_back t(:cancel)%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<% end %>
