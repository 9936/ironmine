<%= common_title %>
<div class="listRelatedObject setupBlock">
    <div class="page-block">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_portlet_list) %></h2></td>
              <td id="topButtonRow" class="pbButton">
                <div class="button"><%= link_to t(:new), {:action => "new"}%></div>
              </td>
              <td class="pbHelp">
                <div id="portletsSearchBox"></div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
        <div id="portlets" class="datatable" style="width:100%">
          <div id="id" style="display:none">
            <%= link_to(t(:edit),{:action=>"edit",:id=>"{id}"}) %>|<%= link_to(t(:show),{:action=>"show",:id=>"{id}"}) %>
          </div>
        </div>
        <%= datatable("portlets",{:action=>"get_data",:format=>"json"},
                      [{:key=>"id",:label=>t(:operation),:formatter=>"Y.irm.template",:width=>"70px"},
                       { :key => "code", :label => t(:label_irm_tab_code),:searchable=>true },
                       { :key => "name", :label => t(:label_irm_tab_name),:searchable=>true },
                       { :key => "page_controller", :label => t(:label_irm_portlet_controller),:searchable=>true },
                       { :key => "page_action", :label => t(:label_irm_portlet_action),:searchable=>true },
                       { :key => "description", :label => t(:label_irm_tab_description),:width=>"250px",:searchable=>true }
                      ],{:paginator_box=>"portletsPaginatorBox",:search_box=>"portletsSearchBox"})%>
        <div id="portletsPaginatorBox"></div>
      </div>
    </div>
</div>