    <div id="id_mail_template_list" class="container">
        <div class="containerheader">
           <div class="floatleft headertitle"><%=t(:label_irm_mail_template_list)%></div>
        </div>
        <div id="id_mail_template_grid" class="datagrid"
        action_type="ajaxDhtmlxGrid"
        grid_header=" ,<%=t(:label_irm_mail_template_entity_code)%>, <%=t(:label_irm_mail_template_template_code)%>,<%=t(:label_irm_mail_template_name)%>,<%=t(:label_irm_mail_template_description)%>,<%=t(:label_irm_mail_template_status_code)%>,<%=t(:multilingual)%>"
        grid_width="20,100,100,100,150,100,100"
        grid_col_types="ra,ro,ro,ro,ro,ro,link"
        grid_align="center,left,left,left,left,center,left"
        grid_onRowDblClicked="doOnRowDblClicked"
        grid_checkbox="selectRowAndRadio"
        grid_OnRowSelected="selectRowAndRadio"
        grid_load="'<%= url_for(:action => "get_data", :controller => "irm/mail_templates",:format=>:json) %>','','json'">
        </div>
        <script type="text/javascript" charset="utf-8">
        function doOnRowDblClicked(rowId,cInd){
           replaceLink(rowId);
           processDblClicked("id_mail_template_new","","<%= url_for(:action => "edit", :controller => "irm/mail_templates",:id=>":id")%>",rowId);
        }
        function selectRowAndRadio(rowId){
            replaceLink(rowId);
            doSelectRowAndCheckRadio("id_mail_template_grid",rowId)
        }
        function replaceLink(rowId){
            var action_temp="";
           if(rowId!=null&&rowId!=undefined){
              action_temp = "<%=url_for(:controller=>"irm/mail_templates",:action=>"edit",:id=>":id")%>".replace(":id",rowId);
              $("#id_edit_mail_template").attr("href",action_temp);
           }
        }
        </script>
            <div class="containerfooter">
              <div class="button floatright">
                <%= link_to t(:new),  {:controller=>"irm/mail_templates",:action => "new"}, :script => "/replace(id_mail_template_list,id_mail_template_new);/", :action_type=>"ajaxLink"%>
                <%= link_to t(:edit), {:controller=>"irm/mail_templates",:action => "edit",:id=>":id"}, :script => "/replace(id_mail_template_list,id_mail_template_edit);/", :action_type=>"ajaxLink",:id=>"id_edit_mail_template"%>                
              </div>
            </div>
    </div>