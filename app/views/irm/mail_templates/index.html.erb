<%= setting_title %>
<div class="listRelatedObject setupBlock">
    <div class="bPageBlock">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_mail_template_list) %></h2></td>
              <td id="topButtonRow" class="pbButton">
                <div class="button"><%= link_to t(:new), {:action => "new"}%></div>
              </td>
              <td class="pbHelp">
                <div id="permissionsSearchBox"></div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
        <div id="mail_template" class="datatable" style="width:100%;">
          <div id="id" style="display:none">
            <%= link_to(t(:edit),{:action=>"edit",:id=>"{id}"}) %>&nbsp;&nbsp;
            <%= link_to(t(:show),{:action=>"show",:id=>"{id}"}) %>
          </div>
        </div>
        <%= datatable("mail_template",url_for(:action=>"get_data",:format=>"json"),
                  [{:key=>"id",:label=>t(:edit),:formatter=>"Y.irm.template",:width=>"80px"},
                   {:key=>"entity_meaning",:label=>t(:label_irm_mail_template_entity_code),:sortable=>true,:width=>"120px"},
                   {:key=>"template_code",:label=>t(:label_irm_mail_template_template_code),:sortable=>true,:searchable=>true,:width=>"10%"},
                   {:key=>"name",:label=>t(:label_irm_mail_template_name),:sortable=>true,:searchable=>true,:width=>"20%"},
                   {:key=>"description",:label=>t(:label_irm_mail_template_description),:sortable=>true},
                   {:key=>"status_meaning",:label=>t(:label_irm_mail_template_status_code),:sortable=>true,:width=>"40px"}],
                   {:search_box=>"permissionsSearchBox"})%>
      </div>
    </div>
</div>