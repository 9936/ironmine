<% require_javascript(:extjs) %>
<% require_css(:extjs) %>
<script type="text/javascript">
  Ext.onReady(function(){
      var languages = [];
      var currentLanguage = Ext.get("templateBody").dom.getAttribute("current");
      var currentIndex = 0;
      Ext.each(Ext.query("#templateBody ul li a.language"),function(e){
         languages.push({contentEl:e.getAttribute("ref"),title:e.innerHTML,ref:e.id})
      });
      for(var i=0;i<languages.length;i++)
      {
          if(languages[i].ref == currentLanguage)
            currentIndex = i;
      }

      var languageTabs = Ext.createWidget('tabpanel', {
          renderTo: 'showTab',
          width: Ext.get("showTab").getComputedWidth(),
          activeTab: currentIndex,
          defaults :{
              bodyPadding: 0
          },
          items: [languages]
      });

      $("#parameter_bo").cascade("#parameter_field_name");
      $("#parameter_field_name").change(function(e){
          var target = $(e.target)
          if(target.val()&&target.val()!=""){
            var option = target.find("option[value="+target.val()+"]:first");
            $("#parameter_field_key").val("{{"+option.attr("business_object_code").toLowerCase()+"."+target.val()+"}}")
          }
          else
            $("#parameter_field_key").val("");
      });
  });
</script>
