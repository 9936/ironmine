<div id="id_language_new">
     <%= form_for(@language,:url=>{:action=>"create"},:builder => LabellingFormBuilder) do |f| %>
            <div class="containerheader">
                <div class="floatleft headertitle"><%=t(:label_irm_language_new)%></div>
            </div>
            <table class="twocolumnstable" cellspacing="0">
                <tr>
                    <td class="twocolumn">
                       <table class="itemdetailtable">
                        <tr>
                            <td class="itemdetailtablelabel"><%=(t :label_irm_language_language_code)%>:</td>
                            <td><%=f.text_field :language_code, :required=>true,:irm_uppercase=>true %></td>
                        </tr>
                        <tr><td class="itemdetailtablelabel"><%=(t :label_irm_language_installed_flag)%>:</td>
                          <td><%=f.check_box :installed_flag%></td>
                        </tr>
                       </table>
                    </td>
                    <td class="twocolumn" cellspacing="0">
                       <table class="itemdetailtable">
                        <div id="id_lookup_level">
                        <tr><td class="itemdetailtablelabel">
                              <%=t(:label_irm_language_description)%>:
                           </td>
                           <td><%= f.text_area :description, :rows => 2%></td>
                        </tr>
                        </div>
                       </table>
                    </td>
                    <td width="10%"></td>
                </tr>
            </table>
            <div class="containerfooter">
                <div class="button floatright"><%= link_to t(:save), {:controller=>"irm/languages",:action=>"create"}%></div>
                <div class="button floatright"><%= link_to t(:cancel), {:action => "index"}%></div>
            </div>
     <% end %>
</div>
