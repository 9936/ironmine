   <div id="id_language_edit" class="container">
     <%= form_for(@language,:url=>{:action=>"update"}) do |f| %>
                <div class="containerheader">
                    <div class="floatleft headertitle"><%=t(:label_irm_language_edit)%> - <%= @language.product_short_name%></div>
                </div>
                <table class="twocolumnstable" cellspacing="0">
                    <tr>
                        <td class="twocolumn">
                           <table class="itemdetailtable">
                               <tr><td class="itemdetailtablelabel"><%=(t :label_irm_language_language_code)%>:</td>
                                <td><%=f.text_field :product_short_name,:size=>40,:readonly=> true %></td>
                            </tr>
                            <tr><td class="itemdetailtablelabel"><%=(t :label_irm_language_installed_flag)%>:</td>
                              <td><%=f.check_box :installed_flag%></td>
                            </tr>
                            <tr><td class="itemdetailtablelabel"><%=(t :label_irm_language_status_code)%>:</td>
                              <td><%=f.check_box :status_code%></td>
                            </tr>                             
                           </table>
                        </td>
                        <td class="twocolumn" cellspacing="0">
                           <table class="itemdetailtable">
                            <div id="id_lookup_level">
                               <tr><td class="itemdetailtablelabel">
                                     <%=t(:label_irm_language_description)%>:
                               </td>
                               <td><%= f.text_area :description, :value => @language[:description], :cols => 40, :rows => 2%></td>
                            </tr>
                            </div>
                           </table>
                        </td>
                        <td width="10%"></td>
                    </tr>
                </table>
                <div class="containerfooter">
                    <div class="button floatright" ><%= link_to t(:save), {}, {:action_type => "ajaxSubmit", :script => "//"}%></div>
                    <div class="button floatright"><%= link_to t(:cancel), {:action => "new"}, :script => "/replace(form_area,form_area);/", :action_type=>"ajaxLink"%></div>
                </div>
     <% end %>
   </div>
