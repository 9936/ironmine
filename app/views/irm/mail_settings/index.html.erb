<%= common_title(:action_meaning=>t(:label_common_info)) %>

<div id="ep" class="detail-block page-block">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_mail_setting) %></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= link_to t(:edit), {:action => "edit"}%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <div class="pbSubheader tertiaryPalette">&nbsp;
      <h3><%=t(:label_irm_mail_smtp_server)%><span class="titleSeparatingColon"></span></h3>
    </div>
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label><%= t :label_irm_mail_from_address %></label></td>
              <td class="data2Col"><%= @smtp_setting.from_address%>
              </td>
            </tr>
            <tr>
              <td class="labelCol"><label><%= t :label_irm_mail_prefix %></label></td>
              <td class="data2Col"><%= @smtp_setting.email_prefix%>
              </td>
            </tr>
            <tr>
              <td class="labelCol"><label><%= t :label_irm_mail_smtp_port %></label></td>
              <td class="data2Col"><%= @smtp_setting.port%>
              </td>
            </tr>
            <tr>
              <td class="labelCol"><label><%= t :label_irm_mail_host_name %></label></td>
              <td class="data2Col"><%= @smtp_setting.host_name%>
              </td>
            </tr>
            <tr>
              <td class="labelCol"><label><%= t :label_irm_mail_timeout %></label></td>
              <td class="data2Col"><%= @smtp_setting.timeout%>
              </td>
            </tr>
            <tr>
              <td class="labelCol"><label><%= t :label_irm_mail_username %></label></td>
              <td class="data2Col"><%= @smtp_setting.username%>
              </td>
            </tr>
            <tr>
              <td class="labelCol"><label><%= t :label_irm_mail_password %></label></td>
              <td class="data2Col"><%= @smtp_setting.password%>
              </td>
            </tr>
        </tbody>
      </table>
    </div>

    <div class="pbSubheader tertiaryPalette">&nbsp;
      <h3><%=t(:label_irm_mail_imap_server)%><span class="titleSeparatingColon"></span></h3>
    </div>
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label><%= t :label_irm_mail_protocol %></label></td>
              <td class="data2Col"><%= @imap_setting.protocol%>
              </td>
            </tr>
            <tr>
              <td class="labelCol"><label><%= t :label_irm_mail_host_name %></label></td>
              <td class="data2Col"><%= @imap_setting.host_name%>
              </td>
            </tr>
            <tr>
              <td class="labelCol"><label><%= t :label_irm_mail_imap_port %></label></td>
              <td class="data2Col"><%= @imap_setting.port%>
              </td>
            </tr>
            <tr>
              <td class="labelCol"><label><%= t :label_irm_mail_timeout %></label></td>
              <td class="data2Col"><%= @imap_setting.timeout%>
              </td>
            </tr>
            <tr>
              <td class="labelCol"><label><%= t :label_irm_mail_username %></label></td>
              <td class="data2Col"><%= @imap_setting.username%>
              </td>
            </tr>
            <tr>
              <td class="labelCol"><label><%= t :label_irm_mail_password %></label></td>
              <td class="data2Col"><%= @imap_setting.password%>
              </td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>