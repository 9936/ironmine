<% if actions.any? %>
<div class="datatable">
  <div class="irm-datatable">
    <div>
        <table id='rows' >
          <thead>
            <tr>
              <th style="width:40px;">
                <div><%= t(:operation) %>
                </div>
              </th>
              <th style="width:40px;">
                <div><%= t(:label_irm_wf_rule_action_type) %>
                </div>
              </th>
              <th style="width:180px;">
                <div><%= t(:label_irm_wf_rule_action_description) %>
                </div>
              </th>
            </tr>
          </thead>
          <tbody class="yui3-datatable-data">
          <% actions.each do |action| %>
          <tr id="<%=action[:action].id%>" class="yui3-datatable-even">
            <td>
              <div>
                <%= link_to(t(:edit),action[:edit_url_options]) %>
                <% unless @wf_approval_process.enabled? %>
                    <%= link_to(t(:delete),action[:delete_url_options],{:confirm => t(:label_are_you_sure) ,:method => :delete} )%>
                <% else %>
                    <%= t(:delete) %>
                <% end %>
               </div>
            </td>
            <td>
              <div>
                  <%= action[:action_type_name] %>
               </div>
            </td>
            <td>
              <div>
                <%= link_to(action[:ref_action].name,action[:show_url_options]) %>
              </div>
            </td>
          </tr>
          <% end -%>
          </tbody>
        </table>
    </div>
  </div>
</div>
<% end %>
