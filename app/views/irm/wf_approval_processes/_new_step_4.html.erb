<%= form_for(@wf_approval_process,:url=>{:action=>"new"},:builder => LabellingFormBuilder) do |f| %>
<%= f.hidden_field(:step) %>
<div  class="wizard-block">
    <div class="pbWizardTitle tertiaryPalette">
        <div class="ptRightTitle">
            <%= t(:step_n_total_m, :n => "4", :m => "5") %>
        </div>
        <h2>
            <%= t(:step_n, :n => "4") %><%= t(:label_irm_wf_approval_process_edit_layout) %>
        </h2>
    </div>
  <div class="pbBody">
    <div class="pbDescription ">
    </div>
    <div class="pbWizardBody">
      <div class="secondary-palette">
        <div class="pbBody ">
            <div id="head_1_ep" class="pbSubheader first tertiaryPalette">
              <span class="pbSubExtra">
                <span class="requiredLegend">
                  <span class="requiredExampleOuter">
                    <span class="requiredExample">&nbsp;</span>
                  </span><span class="requiredMark">*</span>
                  <span class="requiredText"> = <%=t(:label_is_required)%></span>
                </span>
              </span>
              <h3><%= t(:label_irm_wf_approval_process_select_show_fields) %></h3>
            </div>
            <div class="pbSubsection">
              <table class="detailList" cellpadding="0" cellspacing="0" border="0">
                <tbody>
                  <tr>
                    <td class="labelCol empty">&nbsp;</td>
                    <td class="dataCol empty">&nbsp;</td>
                    <td class="labelCol empty">&nbsp;</td>
                    <td class="dataCol empty">&nbsp;</td>
                  </tr>
                  <tr>
                     <td class="labelCol">
                       <label for="duelType"><%=t(:label_irm_wf_rule_action_type)%></label>
                     </td>
                     <td class="dataCol" colspan="3">
                       <%= render :partial => "irm/duel_select/tmpl",:locals => {:f=>f,:sources=>available_approval_fields(@wf_approval_process.bo_code),:str_value_field=>:approve_fields,:str_value=>@wf_approval_process.approve_fields,:size=>14,:order=>true} %>
                     </td>
                  </tr>

                  <tr>
                    <td class="labelCol"></td>
                    <td class="dataCol" colspan="3"><%=f.check_box :display_history_flag, :id=>"display_history_flag"%><label for="display_history_flag"><%=t(:label_irm_wf_approval_process_display_history_flag)%></label></td>
                  </tr>
                </tbody>
              </table>
            </div>
        </div>
      </div>
    </div>
    <div class="pbWizardFooter">
        <div class="pbBottomButtons">
            <table cellpadding="0" cellspacing="0" border="0">
              <tbody>
                <tr>
                  <td class="pbTitle"></td>
                  <td id="bottomButtonRow" class="pbButtonb">
                    <div class="button"><%= link_to t(:last), {:action => "new",:pre_step=>true},{:class=>"submit"} %></div>
                    <div class="button"><%= f.submit t :next%></div>
                    <div class="button"><%= link_to t(:cancel), {:action => "index"} %></div>
                  </td>
                </tr>
              </tbody>
            </table>
        </div>
    </div>
  </div>
</div>
<%end%>