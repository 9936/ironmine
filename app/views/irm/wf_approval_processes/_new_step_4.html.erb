<%= form_for(@wf_approval_process,:url=>{:action=>"new"},:builder => LabellingFormBuilder) do |f| %>
<%= f.hidden_field(:step) %>
<div  class="bWizardBlock">
    <div class="pbWizardTitle tertiaryPalette">
        <div class="ptRightTitle">
            <%= t(:step_n_total_m, :n => "4", :m => "5") %>
        </div>
        <h2>
            <%= t(:step_n, :n => "4") %><%= t(:label_irm_wf_approval_process_edit_layout) %>
        </h2>
    </div>
  <div class="pbBody">
    <div class="pbDescription ">
    </div>
    <div class="pbWizardBody">
      <div class="secondary-palette">
        <div class="pbBody ">
            <div id="head_1_ep" class="pbSubheader first tertiaryPalette">
              <span class="pbSubExtra">
                <span class="requiredLegend">
                  <span class="requiredExampleOuter">
                    <span class="requiredExample">&nbsp;</span>
                  </span><span class="requiredMark">*</span>
                  <span class="requiredText"> = <%=t(:label_is_required)%></span>
                </span>
              </span>
              <h3><%= t(:label_irm_wf_approval_process_select_show_fields) %></h3>
            </div>
            <div class="pbSubsection">
              <table class="detailList" cellpadding="0" cellspacing="0" border="0">
                <tbody>
                  <tr>
                    <td class="labelCol empty">&nbsp;</td>
                    <td class="dataCol empty">&nbsp;</td>
                    <td class="labelCol empty">&nbsp;</td>
                    <td class="dataCol empty">&nbsp;</td>
                  </tr>
                  <tr id="actions">
                    <td class="labelCol"></td>
                    <td class="dataCol" colspan="3" width="82%">
                      <table class="duel">
                        <tr class="duelTitle">
                          <th><%= t(:duel_selectable)%></th>
                          <th></th>
                          <th><%= t(:duel_selected)%></th>
                          <th></th>
                        </tr>
                        <tr class="duelList">
                          <td class="sourceCell">
                            <%= select_tag_alias(:source,available_approval_fields(@wf_approval_process.bo_code),nil,{:id=>"source",:multiple=>true,:size=>14}) %>
                          </td>
                          <td class="buttonCell">
                            <div class="text"><%= t(:add) %></div>
                            <div class="text">
                              <a href="javascript:void(0)" id="duelAdd"><img title="<%= t(:add) %>" class="rightArrowIcon" alt="<%= t(:add) %>" src="<%= theme_image_path("s.gif") %>"></a>
                            </div>
                            <div class="text">
                              <a href="javascript:void(0)" id="duelRemove"><img title="<%= t(:delete) %>" class="leftArrowIcon" alt="<%= t(:delete) %>" src="<%= theme_image_path("s.gif") %>"></a>
                            </div>
                            <div class="duelingText"><%= t(:delete) %></div>
                          </td>
                          <td class="targetCell">
                            <%= f.hidden_field(:approve_fields,:value=>@wf_approval_process.approve_fields,:id=>"approve_fields") %>
                            <%= select_tag_alias(:target,[],nil,{:id=>"target",:multiple=>true,:size=>14}) %>
                          </td>
                          <td class="buttonCell">
                            <div class="text"><%= t(:up) %></div>
                            <div class="text">
                              <a href="javascript:void(0)" id="duelUp"><img title="<%= t(:up) %>" class="upArrowIcon" alt="<%= t(:add) %>" src="<%= theme_image_path("s.gif") %>"></a>
                            </div>
                            <div class="text">
                              <a href="javascript:void(0)" id="duelDown"><img title="<%= t(:down) %>" class="downArrowIcon" alt="<%= t(:delete) %>" src="<%= theme_image_path("s.gif") %>"></a>
                            </div>
                            <div class="duelingText"><%= t(:down) %></div>
                          </td>
                        </tr>
                      </table>
                    </td>
                  </tr>
                  <tr>
                    <td class="labelCol"></td>
                    <td class="dataCol" colspan="3"><%=f.check_box :display_history_flag, :id=>"display_history_flag"%><label for="display_history_flag"><%=t(:label_irm_wf_approval_process_display_history_flag)%></label></td>
                  </tr>
                </tbody>
              </table>
            </div>
        </div>
      </div>
    </div>
    <div class="pbWizardFooter">
        <div class="pbBottomButtons">
            <table cellpadding="0" cellspacing="0" border="0">
              <tbody>
                <tr>
                  <td class="pbTitle"></td>
                  <td id="bottomButtonRow" class="pbButtonb">
                    <div class="button"><%= link_to t(:last), {:action => "new",:pre_step=>true},{:class=>"submit"} %></div>
                    <div class="button"><%= f.submit t :next%></div>
                    <div class="button"><%= link_to t(:cancel), {:action => "index"} %></div>
                  </td>
                </tr>
              </tbody>
            </table>
        </div>
    </div>
  </div>
</div>
<%end%>
<script type="text/javascript">
  GY.use("duelselect",function(Y){
    var duelselect = new Y.DuelSelect({source:"#source",target:"#target",valueNode:"#approve_fields",
                                       addButton:"#duelAdd",removeButton:"#duelRemove",
                                       upButton:"#duelUp",downButton:"#duelDown"})
  });
</script>