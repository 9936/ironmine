<%= page_title %>
<%= form_for(@identity,:url=>{:action=>"update"},:builder => LabellingFormBuilder) do |f| %>
<div id="ep" class="bEditBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%=t(:label_irm_identity_edit_info)%> - <%= @identity.login_name%></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button floatright"><%= link_to t(:cancel), {:action => "index"},:zone=>"system_content"%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <%= error_for @identity%>
    <div id="head_1_ep" class="pbSubheader first tertiaryPalette">
      <span class="pbSubExtra">
        <span class="requiredLegend">
          <span class="requiredExampleOuter">
            <span class="requiredExample">&nbsp;</span>
          </span><span class="requiredMark">*</span>
          <span class="requiredText"> = <%=t(:label_is_required)%></span>
        </span>
      </span>
      <h3><%= t(:label_common_info) %></h3>
    </div>
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_identity_login_name)%></label></td>
              <td class="dataCol"><%=f.text_field :login_name, :size=>40,:readonly=>true%></td>
              <td class="labelCol empty"><%=(t :label_irm_identity_email)%></td>
              <td class="dataCol empty"><%=f.text_field :email, :size=>40,:required=>true%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_identity_full_name)%></label></td>
              <td class="dataCol"><%=f.text_field :full_name, :size=>40,:required=>true%></td>
              <td class="labelCol empty"><%=(t :label_irm_identity_language_code)%></td>
              <td class="dataCol empty"><%= f.select(:language_code, options_for_select(selectable_languages,@identity.language_code)) %></td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="pbBottomButtons">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"></td>
          <td id="bottomButtonRow" class="pbButtonb">
            <div class="button"><%= f.submit t(:save)%></div>
            <div class="button floatright"><%= link_to t(:cancel), {:action => "index"},:zone=>"system_content"%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<% end %>
<%= form_for(@person,:url=>{:action=>"avatar_update", :controller => "irm/my_info", :id => @person.id},:builder => LabellingFormBuilder) do |f| %>
<div id="ep" class="bEditBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%=t(:label_irm_person_avatar)%></h2></td>
          <td class="pbButton">
            <div class="button"><%= f.submit t(:save)%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"></td>
              <td class="data2Col"><%= f.file_field :avatar%></td>
            </tr>
            <tr>
              <td class="labelCol"></td>
              <td class="data2Col"><%= image_tag @person.avatar.url(:large)%></td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<% end %>