<%= page_title %>
<div id="ep" class="bDetailBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%=t(:label_irm_identity_edit)%>&nbsp;<%= @identity.login_name%></h2></td>
          <td id="topButtonRow" class="pbButton">
          <div class="button"><%= link_to t(:edit), {:action => "edit"},:zone=>"system_content"%></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol">&nbsp;</td>
              <td class="dataCol" style="text-align:right"><%= image_tag @person.avatar.url(:original)%></td>
              <td class="labelCol">&nbsp;</td>
              <td class="dataCol">&nbsp;</td>
            </tr>
        </tbody>
      </table>
    </div>
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_identity_login_name)%></label></td>
              <td class="dataCol"><%=@identity.login_name%></td>
              <td class="labelCol"><label><%=(t :label_irm_identity_full_name)%></label></td>
              <td class="dataCol"><%=@identity.full_name%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_identity_email)%></label></td>
              <td class="dataCol"><%=@identity.email%></td>
              <td class="labelCol"><%=(t :label_irm_identity_language_code)%></td>
              <td class="dataCol"><%= @identity[:language_description]%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_identity_password)%></label></td>
              <td class="dataCol"><%=@identity.last_login_at%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="listRelatedObject setupBlock">
    <div class="bPageBlock">
      <div class="pbHeader">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <tr>
              <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_login_record_list) %></h2></td>
              <td class="pbButton">
              </td>
              <td class="pbHelp">
                <div id="reportGroupMemebersSearchBox"></div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="pbBody">
        <div id="reports" class="datatable" style="width:100%">

        </div>
        <%= datatable("reports",url_for( :action => "get_login_data",:format=>"json"),
                      [{:key=>"user_ip",:label=>t(:label_irm_login_record_user_ip),:width=>"40px"},

                       { :key => "operate_system", :label => t(:label_irm_login_record_operate_system) },

                       { :key => "browser", :label => t(:label_irm_login_record_browser) },

                       { :key => "login_at", :label => t(:label_irm_login_record_login_at)},

                       { :key => "logout_at", :label => t(:label_irm_login_record_logout_at) },

                       ],{:row_perpage=>20})%>
      </div>
    </div>
</div>

