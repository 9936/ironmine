<%= setting_show_title(:show_data => @ldap_source.name) %>

<div id="ep" class="bDetailBlock bPageBlock">
  <div class="pbHeader">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <tr>
          <td class="pbTitle"><h2 class="mainTitle"><%= t(:label_irm_ldap_source) %></h2></td>
          <td id="topButtonRow" class="pbButton">
            <div class="button"><%= link_to t(:test), {:action => "execute_test",:id=>@ldap_source.id,:format=>:js},{:remote=>true}%></div>
            <% if @ldap_source.enabled?  %>
              <div class="button"><%= link_to t(:disable), {:action => "active",:id=>@ldap_source.id,:active=>Irm::Constant::SYS_NO}%></div>
            <% else %>
              <div class="button"><%= link_to t(:active), {:action => "active",:id=>@ldap_source.id,:active=>Irm::Constant::SYS_YES}%></div>
            <% end %>
            <div class="button"><%= link_to t(:edit), {:action => "edit", :id => @ldap_source}%></div>
            <div class="button"><%= link_to t(:back), {:action => "index"} %></div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="pbBody">
    <div class="pbSubsection">
      <table class="detailList" cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_ldap_source_name)%></label></td>
              <td class="dataCol"><%= @ldap_source.name%></td>
              <td class="labelCol"><label><%=t(:label_irm_ldap_source_account)%></label></td>
              <td class="dataCol"><%= @ldap_source.account%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_ldap_source_host)%></label></td>
              <td class="dataCol"><%= @ldap_source.host%></td>
              <td class="labelCol"><%=t(:label_irm_ldap_source_account_password)%></td>
              <td class="dataCol">******</td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :label_irm_ldap_source_port)%></label></td>
              <td class="dataCol"><%= @ldap_source.port%></td>
              <td class="labelCol"><%=t(:label_irm_ldap_source_base_dn)%></td>
              <td class="dataCol"><%= @ldap_source.base_dn%></td>
            </tr>
            <tr>
              <td class="labelCol"><label><%=(t :active)%></label></td>
              <td class="dataCol"><%= check_img(@ldap_source.status_code)%></td>
              <td class="labelCol empty">&nbsp;</td>
              <td class="dataCol empty">&nbsp;</td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div id="executeTest"></div>